@using ERPCore2.Components.Shared.Buttons
@using static ERPCore2.Components.Shared.Buttons.ButtonComponent

<div class="page-action-bar d-flex justify-content-end gap-2 mb-3">
    @if (PrimaryActions != null)
    {
        <div class="primary-actions">
            @PrimaryActions
        </div>
    }
    
    @if (SecondaryActions != null)
    {
        <div class="secondary-actions">
            @SecondaryActions
        </div>
    }
</div>

@code {
    [Parameter] public RenderFragment? PrimaryActions { get; set; }
    [Parameter] public RenderFragment? SecondaryActions { get; set; }
}
