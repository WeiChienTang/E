@*
    生產排程表篩選模板
    實作 IFilterTemplateComponent 介面，提供生產排程表的篩選 UI
    設計原則：緊湊單欄式佈局，樣式由 GenericReportFilterModalComponent 統一控制
*@

@using ERPCore2.Models
@using ERPCore2.Models.Enums
@using ERPCore2.Models.Reports.FilterCriteria
@using ERPCore2.Models.Reports.FilterTemplates
@implements IFilterTemplateComponent
@inject ICustomerService CustomerService
@inject INotificationService NotificationService

<div>
    @* 第一行: 客戶選擇 *@
    <div class="row g-2 mb-2">
        <div class="col-12">
            <MultiSelectFilterComponent TItem="Customer"
                                       Items="@customers"
                                       @bind-SelectedItems="@selectedCustomers"
                                       DisplayProperty="CompanyName"
                                       ValueProperty="Id"
                                       Placeholder="搜尋客戶..."
                                       EmptyMessage="未選擇客戶（查詢全部客戶）"
                                       ListHeight="120px"
                                       ShowCard="false" />
        </div>
    </div>

    @* 第二行: 日期範圍 + 快速選擇 *@
    <div class="mb-2">
        <DateRangeFilterComponent @bind-StartDate="startDate"
                                  @bind-EndDate="endDate"
                                  ShowQuickSelectors="true"
                                  AutoValidate="true"
                                  ShowValidationMessage="true" />
    </div>

    @* 第三行: 生產狀態篩選 + 包含已結案 *@
    <div class="row g-2 align-items-end">
        <div class="col-2 d-flex align-items-end">
            <div class="form-check mb-1">
                <input class="form-check-input" type="checkbox" id="statusPending" @bind="statusPending">
                <label class="form-check-label small" for="statusPending">
                    待生產
                </label>
            </div>
        </div>
        <div class="col-2 d-flex align-items-end">
            <div class="form-check mb-1">
                <input class="form-check-input" type="checkbox" id="statusInProgress" @bind="statusInProgress">
                <label class="form-check-label small" for="statusInProgress">
                    生產中
                </label>
            </div>
        </div>
        <div class="col-2 d-flex align-items-end">
            <div class="form-check mb-1">
                <input class="form-check-input" type="checkbox" id="statusCompleted" @bind="statusCompleted">
                <label class="form-check-label small" for="statusCompleted">
                    已完成
                </label>
            </div>
        </div>
        <div class="col-2 d-flex align-items-end">
            <div class="form-check mb-1">
                <input class="form-check-input" type="checkbox" id="statusDiscontinued" @bind="statusDiscontinued">
                <label class="form-check-label small" for="statusDiscontinued">
                    已停產
                </label>
            </div>
        </div>
        <div class="col-4 d-flex align-items-end">
            <div class="form-check mb-1">
                <input class="form-check-input" type="checkbox" id="includeClosed" @bind="includeClosed">
                <label class="form-check-label small" for="includeClosed">
                    包含已結案
                </label>
            </div>
        </div>
    </div>
</div>

@code {
    // ===== 內部狀態 =====

    private List<Customer> customers = new();
    private List<Customer> selectedCustomers = new();
    private DateTime? startDate = new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1);
    private DateTime? endDate = DateTime.Today;
    private bool statusPending = true;
    private bool statusInProgress = true;
    private bool statusCompleted = false;
    private bool statusDiscontinued = false;
    private bool includeClosed = false;

    // ===== 生命週期方法 =====

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            customers = await CustomerService.GetAllAsync();
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(LoadDataAsync), GetType());
            await NotificationService.ShowErrorAsync("載入客戶資料失敗");
            customers = new List<Customer>();
        }
    }

    // ===== IFilterTemplateComponent 實作 =====

    public IReportFilterCriteria GetCriteria()
    {
        var statusFilters = new List<ProductionItemStatus>();
        if (statusPending) statusFilters.Add(ProductionItemStatus.Pending);
        if (statusInProgress) statusFilters.Add(ProductionItemStatus.InProgress);
        if (statusCompleted) statusFilters.Add(ProductionItemStatus.Completed);
        if (statusDiscontinued) statusFilters.Add(ProductionItemStatus.Discontinued);

        return new ProductionScheduleCriteria
        {
            CustomerIds = selectedCustomers.Select(c => c.Id).ToList(),
            StartDate = startDate,
            EndDate = endDate,
            StatusFilters = statusFilters,
            IncludeClosed = includeClosed
        };
    }

    public void Reset()
    {
        selectedCustomers = new();
        startDate = new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1);
        endDate = DateTime.Today;
        statusPending = true;
        statusInProgress = true;
        statusCompleted = false;
        statusDiscontinued = false;
        includeClosed = false;
        StateHasChanged();
    }
}
