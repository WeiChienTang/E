@*
    車輛管理表篩選模板
    實作 IFilterTemplateComponent 介面，提供車輛管理表的篩選 UI
    設計原則：緊湊單欄式佈局，樣式由 GenericReportFilterModalComponent 統一控制
*@

@using ERPCore2.Models
@using ERPCore2.Models.Reports.FilterCriteria
@using ERPCore2.Models.Reports.FilterTemplates
@using ERPCore2.Data.Entities
@implements IFilterTemplateComponent
@inject IVehicleTypeService VehicleTypeService
@inject INotificationService NotificationService

<div>
    @* 第一行: 車型選擇 *@
    <div class="row g-2 mb-2">
        <div class="col-12">
            <MultiSelectFilterComponent TItem="VehicleType"
                                       Items="@vehicleTypes"
                                       @bind-SelectedItems="@selectedVehicleTypes"
                                       DisplayProperty="Name"
                                       ValueProperty="Id"
                                       Placeholder="搜尋車型..."
                                       EmptyMessage="未選擇車型（查詢全部車型）"
                                       ListHeight="120px"
                                       ShowCard="false" />
        </div>
    </div>

    @* 第二行: 關鍵字搜尋 + 僅啟用 *@
    <div class="row g-2 align-items-end">
        <div class="col-8">
            <TextSearchFilterComponent @bind-Value="keyword"
                                       Label="關鍵字"
                                       Placeholder="搜尋車牌號碼、車輛名稱、廠牌..." />
        </div>
        <div class="col-4 d-flex align-items-end">
            <div class="form-check mb-1">
                <input class="form-check-input" type="checkbox" id="activeOnly" @bind="activeOnly">
                <label class="form-check-label small" for="activeOnly">
                    僅啟用
                </label>
            </div>
        </div>
    </div>
</div>

@code {
    // ===== 內部狀態 =====

    private List<VehicleType> vehicleTypes = new();
    private List<VehicleType> selectedVehicleTypes = new();
    private string? keyword = null;
    private bool activeOnly = true;

    // ===== 生命週期方法 =====

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            vehicleTypes = await VehicleTypeService.GetAllAsync();
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(LoadDataAsync), GetType());
            await NotificationService.ShowErrorAsync("載入車型資料失敗");
            vehicleTypes = new List<VehicleType>();
        }
    }

    // ===== IFilterTemplateComponent 實作 =====

    public IReportFilterCriteria GetCriteria()
    {
        return new VehicleListCriteria
        {
            VehicleTypeIds = selectedVehicleTypes.Select(vt => vt.Id).ToList(),
            Keyword = keyword,
            ActiveOnly = activeOnly
        };
    }

    public void Reset()
    {
        selectedVehicleTypes = new();
        keyword = null;
        activeOnly = true;
        StateHasChanged();
    }
}
