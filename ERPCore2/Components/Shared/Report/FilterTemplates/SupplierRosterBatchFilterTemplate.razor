@*
    廠商名冊表篩選模板
    實作 IFilterTemplateComponent 介面，提供廠商名冊表的篩選 UI
    設計原則：使用 FilterFieldRow 統一佈局
*@

@using ERPCore2.Models
@using ERPCore2.Models.Reports.FilterCriteria
@using ERPCore2.Models.Reports.FilterTemplates
@using ERPCore2.Data.Entities
@implements IFilterTemplateComponent
@inject INotificationService NotificationService
@inject ISupplierService SupplierService

<div>
    <FilterFieldRow Label="指定廠商">
        <SearchSelectFilterComponent TItem="SupplierDisplayItem"
                                     Items="@availableSuppliers"
                                     @bind-SelectedItems="selectedSuppliers"
                                     DisplayProperty="DisplayName"
                                     ValueProperty="Id"
                                     Placeholder="搜尋廠商編號、名稱..."
                                     EmptyMessage="未選擇廠商（查詢全部）" />
    </FilterFieldRow>

    <FilterFieldRow Label="關鍵字">
        <div class="d-flex align-items-center gap-2">
            <input type="text" class="form-control" placeholder="搜尋廠商編號、廠商名稱、聯絡人、統編..."
                   @bind="keyword" />
            <div class="form-check text-nowrap">
                <input class="form-check-input" type="checkbox" id="activeOnly" @bind="activeOnly">
                <label class="form-check-label small" for="activeOnly">僅啟用</label>
            </div>
        </div>
    </FilterFieldRow>
</div>

@code {
    // ===== 內部狀態 =====

    private List<SupplierDisplayItem> availableSuppliers = new();
    private List<SupplierDisplayItem> selectedSuppliers = new();
    private string? keyword = null;
    private bool activeOnly = true;

    // ===== 生命週期 =====

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var suppliers = await SupplierService.GetAllAsync();
            availableSuppliers = suppliers
                .Where(s => s.Status == EntityStatus.Active)
                .Select(s => new SupplierDisplayItem
                {
                    Id = s.Id,
                    DisplayName = $"{s.Code} - {s.CompanyName}"
                })
                .OrderBy(s => s.DisplayName)
                .ToList();
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"載入廠商資料失敗: {ex.Message}");
        }
    }

    // ===== IFilterTemplateComponent 實作 =====

    public IReportFilterCriteria GetCriteria()
    {
        return new SupplierRosterCriteria
        {
            SupplierIds = selectedSuppliers.Select(s => s.Id).ToList(),
            Keyword = keyword,
            ActiveOnly = activeOnly
        };
    }

    public void Reset()
    {
        selectedSuppliers = new();
        keyword = null;
        activeOnly = true;
        StateHasChanged();
    }

    // ===== 內部類別 =====

    private class SupplierDisplayItem
    {
        public int Id { get; set; }
        public string DisplayName { get; set; } = string.Empty;
    }
}
