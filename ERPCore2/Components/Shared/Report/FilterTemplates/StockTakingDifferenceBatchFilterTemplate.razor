@*
    庫存盤點差異表篩選模板
    實作 IFilterTemplateComponent 介面，提供庫存盤點差異表的篩選 UI
    設計原則：緊湊單欄式佈局，樣式由 GenericReportFilterModalComponent 統一控制
*@

@using ERPCore2.Models
@using ERPCore2.Models.Reports.FilterCriteria
@using ERPCore2.Models.Reports.FilterTemplates
@implements IFilterTemplateComponent
@inject IWarehouseService WarehouseService
@inject INotificationService NotificationService

<FilterSectionGroup>

    @* ===== 欄 1：基本篩選 ===== *@
    <FilterSectionColumn Title="基本篩選" Icon="bi bi-box-seam">
        <FilterFieldRow Label="指定倉庫">
            <SearchSelectFilterComponent TItem="Warehouse"
                                       Items="@warehouses"
                                       @bind-SelectedItems="@selectedWarehouses"
                                       DisplayProperty="Name"
                                       ValueProperty="Id"
                                       Placeholder="搜尋倉庫..."
                                       EmptyMessage="未選擇倉庫（查詢全部倉庫）" />
        </FilterFieldRow>
    </FilterSectionColumn>

    @* ===== 欄 2：日期範圍 ===== *@
    <FilterSectionColumn Title="日期範圍" Icon="bi bi-calendar-range">
        <FilterFieldRow Label="日期範圍">
            <DateRangeFilterComponent @bind-StartDate="startDate"
                                      @bind-EndDate="endDate"
                                      ShowQuickSelectors="true"
                                      AutoValidate="true"
                                      ShowValidationMessage="true" />
        </FilterFieldRow>
    </FilterSectionColumn>

    @* ===== 欄 3：快速條件 ===== *@
    <FilterSectionColumn Title="快速條件" Icon="bi bi-search">
        <FilterFieldRow Label="關鍵字">
            <input type="text" class="form-control" placeholder="搜尋盤點單號、品號、品名..."
                   @bind="keyword" />
        </FilterFieldRow>

        <FilterFieldRow Label="顯示條件">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="onlyDifferenceItems" @bind="onlyDifferenceItems">
                <label class="form-check-label" for="onlyDifferenceItems">僅差異項目</label>
            </div>
        </FilterFieldRow>
    </FilterSectionColumn>

</FilterSectionGroup>

@code {
    // ===== 內部狀態 =====

    private List<Warehouse> warehouses = new();
    private List<Warehouse> selectedWarehouses = new();
    private DateTime? startDate = new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1);
    private DateTime? endDate = DateTime.Today;
    private string? keyword = null;
    private bool onlyDifferenceItems = false;

    // ===== 生命週期方法 =====

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            warehouses = await WarehouseService.GetAllAsync();
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(LoadDataAsync), GetType());
            await NotificationService.ShowErrorAsync("載入篩選資料失敗");
            warehouses = new List<Warehouse>();
        }
    }

    // ===== IFilterTemplateComponent 實作 =====

    public IReportFilterCriteria GetCriteria()
    {
        return new StockTakingDifferenceCriteria
        {
            WarehouseIds = selectedWarehouses.Select(w => w.Id).ToList(),
            StartDate = startDate,
            EndDate = endDate,
            Keyword = keyword,
            OnlyDifferenceItems = onlyDifferenceItems
        };
    }

    public void Reset()
    {
        selectedWarehouses = new();
        startDate = new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1);
        endDate = DateTime.Today;
        keyword = null;
        onlyDifferenceItems = false;
        StateHasChanged();
    }
}
