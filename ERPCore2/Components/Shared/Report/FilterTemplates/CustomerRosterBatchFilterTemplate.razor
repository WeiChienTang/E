@*
    客戶名冊表篩選模板
    實作 IFilterTemplateComponent 介面，提供客戶名冊表的篩選 UI
    設計原則：使用 FilterFieldRow 統一佈局
*@

@using ERPCore2.Models
@using ERPCore2.Models.Reports.FilterCriteria
@using ERPCore2.Models.Reports.FilterTemplates
@using ERPCore2.Data.Entities
@implements IFilterTemplateComponent
@inject ICustomerService CustomerService
@inject IEmployeeService EmployeeService
@inject INotificationService NotificationService

<FilterSectionGroup>

    @* ===== 欄 1：基本篩選 ===== *@
    <FilterSectionColumn Title="基本篩選" Icon="bi bi-people">
        <FilterFieldRow Label="指定客戶">
            <SearchSelectFilterComponent TItem="CustomerDisplayItem"
                                         Items="@availableCustomers"
                                         @bind-SelectedItems="@selectedCustomers"
                                         DisplayProperty="DisplayName"
                                         ValueProperty="Id"
                                         Placeholder="搜尋客戶編號、名稱..."
                                         EmptyMessage="未選擇客戶（查詢全部）" />
        </FilterFieldRow>

        <FilterFieldRow Label="業務負責人">
            <SearchSelectFilterComponent TItem="EmployeeDisplayItem"
                                         Items="@availableEmployees"
                                         @bind-SelectedItems="@selectedEmployees"
                                         DisplayProperty="DisplayName"
                                         ValueProperty="Id"
                                         Placeholder="搜尋業務負責人..."
                                         EmptyMessage="未選擇業務負責人（查詢全部）" />
        </FilterFieldRow>
    </FilterSectionColumn>

    @* ===== 欄 2：快速條件 ===== *@
    <FilterSectionColumn Title="快速條件" Icon="bi bi-search">
        <FilterFieldRow Label="關鍵字">
            <input type="text" class="form-control" placeholder="搜尋客戶編號、公司名稱、聯絡人、統編..."
                   @bind="keyword" />
        </FilterFieldRow>

        <FilterFieldRow Label="顯示條件">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="activeOnly" @bind="activeOnly">
                <label class="form-check-label" for="activeOnly">僅啟用</label>
            </div>
        </FilterFieldRow>
    </FilterSectionColumn>

</FilterSectionGroup>

@code {
    // ===== 內部狀態 =====

    private List<CustomerDisplayItem> availableCustomers = new();
    private List<CustomerDisplayItem> selectedCustomers = new();
    private List<EmployeeDisplayItem> availableEmployees = new();
    private List<EmployeeDisplayItem> selectedEmployees = new();
    private string? keyword = null;
    private bool activeOnly = true;

    // ===== 生命週期方法 =====

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            var customersTask = CustomerService.GetAllAsync();
            var employeesTask = EmployeeService.GetAllAsync();
            await Task.WhenAll(customersTask, employeesTask);

            var allCustomers = await customersTask;
            availableCustomers = allCustomers
                .Where(c => c.Status == EntityStatus.Active)
                .Select(c => new CustomerDisplayItem
                {
                    Id = c.Id,
                    DisplayName = $"{c.Code} - {c.CompanyName}"
                })
                .OrderBy(c => c.DisplayName)
                .ToList();

            var allEmployees = await employeesTask;
            availableEmployees = allEmployees
                .Where(e => !e.IsSuperAdmin)
                .Select(e => new EmployeeDisplayItem
                {
                    Id = e.Id,
                    DisplayName = !string.IsNullOrEmpty(e.Name)
                        ? $"{e.Code} - {e.Name}"
                        : e.Code ?? $"員工{e.Id}"
                })
                .OrderBy(e => e.DisplayName)
                .ToList();
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(LoadDataAsync), GetType());
            await NotificationService.ShowErrorAsync("載入篩選資料失敗");
        }
    }

    // ===== IFilterTemplateComponent 實作 =====

    public IReportFilterCriteria GetCriteria()
    {
        return new CustomerRosterCriteria
        {
            CustomerIds = selectedCustomers.Select(c => c.Id).ToList(),
            EmployeeIds = selectedEmployees.Select(e => e.Id).ToList(),
            Keyword = keyword,
            ActiveOnly = activeOnly
        };
    }

    public void Reset()
    {
        selectedCustomers = new();
        selectedEmployees = new();
        keyword = null;
        activeOnly = true;
        StateHasChanged();
    }

    // ===== 內部模型 =====

    private class CustomerDisplayItem
    {
        public int Id { get; set; }
        public string DisplayName { get; set; } = "";
    }

    private class EmployeeDisplayItem
    {
        public int Id { get; set; }
        public string DisplayName { get; set; } = "";
    }
}
