@*
    車輛保養表篩選模板
    實作 IFilterTemplateComponent 介面，提供車輛保養表的篩選 UI
    設計原則：緊湊單欄式佈局，樣式由 GenericReportFilterModalComponent 統一控制
*@

@using ERPCore2.Models
@using ERPCore2.Models.Reports.FilterCriteria
@using ERPCore2.Models.Reports.FilterTemplates
@using ERPCore2.Data.Entities
@implements IFilterTemplateComponent
@inject IVehicleService VehicleService
@inject INotificationService NotificationService

<div>
    @* 第一行: 車輛選擇 *@
    <div class="row g-2 mb-2">
        <div class="col-12">
            <MultiSelectFilterComponent TItem="Vehicle"
                                       Items="@vehicles"
                                       @bind-SelectedItems="@selectedVehicles"
                                       DisplayProperty="LicensePlate"
                                       ValueProperty="Id"
                                       Placeholder="搜尋車輛..."
                                       EmptyMessage="未選擇車輛（查詢全部車輛）"
                                       ListHeight="120px"
                                       ShowCard="false" />
        </div>
    </div>

    @* 第二行: 日期範圍 *@
    <div class="mb-2">
        <DateRangeFilterComponent @bind-StartDate="startDate"
                                  @bind-EndDate="endDate"
                                  ShowQuickSelectors="true"
                                  AutoValidate="true"
                                  ShowValidationMessage="true" />
    </div>

    @* 第三行: 關鍵字搜尋 *@
    <div class="row g-2">
        <div class="col-12">
            <TextSearchFilterComponent @bind-Value="keyword"
                                       Label="關鍵字"
                                       Placeholder="搜尋車牌號碼、維修廠、保養描述..." />
        </div>
    </div>
</div>

@code {
    // ===== 內部狀態 =====

    private List<Vehicle> vehicles = new();
    private List<Vehicle> selectedVehicles = new();
    private DateTime? startDate = null;
    private DateTime? endDate = null;
    private string? keyword = null;

    // ===== 生命週期方法 =====

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            vehicles = await VehicleService.GetAllAsync();
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(LoadDataAsync), GetType());
            await NotificationService.ShowErrorAsync("載入車輛資料失敗");
            vehicles = new List<Vehicle>();
        }
    }

    // ===== IFilterTemplateComponent 實作 =====

    public IReportFilterCriteria GetCriteria()
    {
        return new VehicleMaintenanceCriteria
        {
            VehicleIds = selectedVehicles.Select(v => v.Id).ToList(),
            StartDate = startDate,
            EndDate = endDate,
            Keyword = keyword
        };
    }

    public void Reset()
    {
        selectedVehicles = new();
        startDate = null;
        endDate = null;
        keyword = null;
        StateHasChanged();
    }
}
