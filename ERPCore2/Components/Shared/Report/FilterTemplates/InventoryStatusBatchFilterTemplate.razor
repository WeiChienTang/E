@*
    庫存現況表篩選模板
    實作 IFilterTemplateComponent 介面，提供庫存現況表的篩選 UI
    設計原則：緊湊單欄式佈局，樣式由 GenericReportFilterModalComponent 統一控制
*@

@using ERPCore2.Models
@using ERPCore2.Models.Reports.FilterCriteria
@using ERPCore2.Models.Reports.FilterTemplates
@implements IFilterTemplateComponent
@inject IWarehouseService WarehouseService
@inject IProductService ProductService
@inject INotificationService NotificationService

<div>
    @* 第一行: 倉庫選擇 *@
    <div class="row g-2 mb-2">
        <div class="col-12">
            <MultiSelectFilterComponent TItem="Warehouse"
                                       Items="@warehouses"
                                       @bind-SelectedItems="@selectedWarehouses"
                                       DisplayProperty="Name"
                                       ValueProperty="Id"
                                       Placeholder="搜尋倉庫..."
                                       EmptyMessage="未選擇倉庫（查詢全部倉庫）"
                                       ListHeight="120px"
                                       ShowCard="false" />
        </div>
    </div>

    @* 第二行: 商品分類選擇 *@
    <div class="row g-2 mb-2">
        <div class="col-12">
            <MultiSelectFilterComponent TItem="ProductCategory"
                                       Items="@categories"
                                       @bind-SelectedItems="@selectedCategories"
                                       DisplayProperty="Name"
                                       ValueProperty="Id"
                                       Placeholder="搜尋商品分類..."
                                       EmptyMessage="未選擇分類（查詢全部分類）"
                                       ListHeight="120px"
                                       ShowCard="false" />
        </div>
    </div>

    @* 第三行: 關鍵字搜尋 + 包含零庫存 *@
    <div class="row g-2 align-items-end">
        <div class="col-8">
            <TextSearchFilterComponent @bind-Value="keyword"
                                       Label="關鍵字"
                                       Placeholder="搜尋品號、品名..." />
        </div>
        <div class="col-4 d-flex align-items-end">
            <div class="form-check mb-1">
                <input class="form-check-input" type="checkbox" id="includeZeroStock" @bind="includeZeroStock">
                <label class="form-check-label small" for="includeZeroStock">
                    包含零庫存
                </label>
            </div>
        </div>
    </div>
</div>

@code {
    // ===== 內部狀態 =====

    private List<Warehouse> warehouses = new();
    private List<Warehouse> selectedWarehouses = new();
    private List<ProductCategory> categories = new();
    private List<ProductCategory> selectedCategories = new();
    private string? keyword = null;
    private bool includeZeroStock = false;

    // ===== 生命週期方法 =====

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            warehouses = await WarehouseService.GetAllAsync();
            categories = await ProductService.GetProductCategoriesAsync();
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(LoadDataAsync), GetType());
            await NotificationService.ShowErrorAsync("載入篩選資料失敗");
            warehouses = new List<Warehouse>();
            categories = new List<ProductCategory>();
        }
    }

    // ===== IFilterTemplateComponent 實作 =====

    public IReportFilterCriteria GetCriteria()
    {
        return new InventoryStatusCriteria
        {
            WarehouseIds = selectedWarehouses.Select(w => w.Id).ToList(),
            CategoryIds = selectedCategories.Select(c => c.Id).ToList(),
            Keyword = keyword,
            IncludeZeroStock = includeZeroStock
        };
    }

    public void Reset()
    {
        selectedWarehouses = new();
        selectedCategories = new();
        keyword = null;
        includeZeroStock = false;
        StateHasChanged();
    }
}
