@* 日期欄位子組件 - 支援 Date 和 DateTime *@
@using ERPCore2.Components.Shared.UI.Form

<input type="@InputType"
       class="@InputCssClass"
       id="@Field.PropertyName"
       name="@($"{Field.PropertyName}_{Guid.NewGuid().ToString("N").Substring(0, 8)}")"
       readonly="@Field.IsReadOnly"
       disabled="@Field.IsDisabled"
       autocomplete="@FormConstants.AutoCompleteAttributes.Off"
       min="@(Field.FieldType == FormFieldType.Date ? FormConstants.Defaults.DateMin : null)"
       max="@(Field.FieldType == FormFieldType.Date ? FormConstants.Defaults.DateMax : null)"
       value="@FormattedValue"
       @onchange="HandleChange" />

@code {
    [Parameter, EditorRequired]
    public FormFieldDefinition Field { get; set; } = default!;

    [Parameter]
    public DateTime? Value { get; set; }

    [Parameter]
    public EventCallback<string?> ValueChanged { get; set; }

    [Parameter]
    public bool HasActionButtons { get; set; }

    [Parameter]
    public string CssClass { get; set; } = FormConstants.CssClasses.FormControl;

    private string InputType => Field.FieldType == FormFieldType.DateTime 
        ? "datetime-local" 
        : "date";

    private string InputCssClass => HasActionButtons 
        ? $"{CssClass} {FormConstants.CssClasses.HasActionButtons}" 
        : CssClass;

    private string FormattedValue
    {
        get
        {
            if (Value == null) return string.Empty;

            return Field.FieldType == FormFieldType.DateTime
                ? Value.Value.ToString("yyyy-MM-ddTHH:mm")
                : Value.Value.ToString("yyyy-MM-dd");
        }
    }

    private async Task HandleChange(ChangeEventArgs e)
    {
        await ValueChanged.InvokeAsync(e.Value?.ToString());
    }
}
