    /// <param name="mode">刷新方式</param>
    public async Task Refresh(RefreshMode mode)
    {
        var originalMode = PageRefreshMode;
        PageRefreshMode = mode;
        await RefreshData();
        PageRefreshMode = originalMode; // 恢復原始設定
    }
    
