@namespace ERPCore2.Components.Shared.Details
@* 詳細資料項目組件 - 用於顯示標籤和值的組合 *@

<div class="mb-3">
    <label class="form-label fw-bold @LabelClass">
        @if (!string.IsNullOrEmpty(IconClass))
        {
            <i class="@IconClass me-1"></i>
        }
        @Label
    </label>
    <div class="form-control-plaintext @ValueClass">
        @if (ChildContent != null)
        {
            @ChildContent
        }
        else
        {
            @(Value ?? EmptyText)
        }
    </div>
</div>

@code {
    [Parameter] public string Label { get; set; } = string.Empty;
    [Parameter] public string? Value { get; set; }
    [Parameter] public string EmptyText { get; set; } = "-";
    [Parameter] public string IconClass { get; set; } = string.Empty;
    [Parameter] public string LabelClass { get; set; } = string.Empty;
    [Parameter] public string ValueClass { get; set; } = string.Empty;
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
