@using ERPCore2.Data.Entities
@using Microsoft.AspNetCore.Components.Web

<div class="col-12">
    <div class="card h-100 supplier-card" 
         @onclick="OnCardClick" 
         @onclick:stopPropagation="true" 
         data-supplier-id="@ProductSupplier.SupplierId" 
         data-supplier-name="@ProductSupplier.Supplier?.CompanyName">
        <div class="card-body p-3">
            <div class="d-flex justify-content-between align-items-start">
                <div class="flex-grow-1">
                    <h6 class="card-title mb-1 text-truncate" title="@ProductSupplier.Supplier?.CompanyName">
                        <i class="fas fa-eye me-1"></i>@ProductSupplier.Supplier?.CompanyName
                    </h6>
                    @if (ProductSupplier.IsPrimarySupplier || ProductSupplier.SupplierId == PrimarySupplierId)
                    {
                        <span class="badge bg-primary">主要</span>
                    }
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(ProductSupplier.SupplierProductCode))
            {
                <div class="mb-2">
                    <small class="text-muted">供應商代碼</small><br>
                    <small class="fw-medium">@ProductSupplier.SupplierProductCode</small>
                </div>
            }
            
            @if (ProductSupplier.SupplierPrice.HasValue)
            {
                <div class="mb-2">
                    <small class="text-muted">報價</small><br>
                    <strong class="text-success">NT$ @ProductSupplier.SupplierPrice.Value.ToString("N2")</strong>
                </div>
            }
            
            <div class="row">
                @if (ProductSupplier.LeadTime.HasValue)
                {
                    <div class="col-6">
                        <small class="text-muted">交期</small><br>
                        <small>@ProductSupplier.LeadTime 天</small>
                    </div>
                }
                @if (ProductSupplier.MinOrderQuantity.HasValue)
                {
                    <div class="col-6">
                        <small class="text-muted">最小量</small><br>
                        <small>@ProductSupplier.MinOrderQuantity</small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public ProductSupplier ProductSupplier { get; set; } = null!;
    [Parameter] public int? PrimarySupplierId { get; set; }
    [Parameter] public EventCallback<int> OnSupplierClick { get; set; }

    private async Task OnCardClick(MouseEventArgs e)
    {
        if (OnSupplierClick.HasDelegate)
        {
            await OnSupplierClick.InvokeAsync(ProductSupplier.SupplierId);
        }
    }
}
