            var dropdownId = $"dropdown-{GetHashCode()}-{currentIndex}";
            var itemId = $"dropdown-item-{GetHashCode()}-{currentIndex}-{selectedIndex}";
            
            await JSRuntime.InvokeVoidAsync("scrollDropdownItemIntoView", dropdownId, itemId);
        }
        catch (Exception)
        {
            // 忽略 JavaScript 錯誤
        }
    }
