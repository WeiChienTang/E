    private SalesReturnDetail? ConvertToEntity(ReturnItem item)
    {
        // 只要選擇了商品就轉換，即使 ReturnQuantity 為 0（用於計算）
        if (item.SelectedDeliveryDetail == null || item.SelectedProduct == null)
        {
            return null;
