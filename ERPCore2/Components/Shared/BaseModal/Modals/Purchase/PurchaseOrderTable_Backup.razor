        { 
            Title = "數量", 
            PropertyName = "Quantity",
            ColumnType = InteractiveColumnType.Number,
            Width = "120px",
            Tooltip = "採購的商品數量。已有進貨記錄的商品將無法修改數量",
            IsDisabledFunc = item =>
