                        }
                    }
                }

                ReceivingItems.Add(receivingItem);
            }
            
            // é€šçŸ¥è®Šæ›´
            await NotifyDetailsChanged();
            
            var filterInfo = GetCurrentFilterInfo();
            await NotificationService.ShowSuccessAsync(
                $"æˆåŠŸè¼‰å…¥ {details.Count} é …æœªå…¥åº«å•†å“{filterInfo}"
