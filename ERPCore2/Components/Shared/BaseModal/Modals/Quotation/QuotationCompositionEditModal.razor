    private async Task HandleSave()
    {
        try
        {
            // éæ¿¾æ‰ç©ºè¡Œï¼ˆæ²’æœ‰é¸æ“‡çµ„ä»¶çš„ï¼‰
            var validDetails = compositionDetails
                .Where(x => x.ComponentProductId > 0 && x.Quantity > 0)
                .ToList();

            // æª¢æŸ¥æ˜¯å¦è‡³å°‘æœ‰ä¸€å€‹æ˜ç´°
