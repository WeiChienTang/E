@* 管理功能卡片組件 - 用於系統管理頁面的功能卡片 *@
@using ERPCore2.Components.Shared.Buttons

<div class="col-lg-4 col-md-6">
    <div class="card h-100 border-0 shadow-sm">
        <div class="card-body text-center p-4">
            <div class="feature-icon @IconBackgroundClass bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3">
                <i class="@IconClass fs-1"></i>
            </div>
            <h4 class="mb-3">@Title</h4>
            <p class="text-muted mb-4">@Description</p>
            <div class="d-grid gap-2">
                @if (!string.IsNullOrEmpty(MainActionUrl))
                {
                    <a href="@MainActionUrl" class="btn @MainActionButtonClass">
                        <i class="bi bi-arrow-right me-1"></i>@MainActionText
                    </a>
                }
                @if (!string.IsNullOrEmpty(SecondaryActionText))
                {
                    @if (!string.IsNullOrEmpty(SecondaryActionUrl))
                    {
                        <a href="@SecondaryActionUrl" class="btn @SecondaryActionButtonClass">
                            <i class="bi bi-plus-circle me-1"></i>@SecondaryActionText
                        </a>
                    }
                    else
                    {
                        <button class="btn @SecondaryActionButtonClass" disabled="@IsSecondaryActionDisabled">
                            <i class="bi bi-plus-circle me-1"></i>@SecondaryActionText
                        </button>
                    }
                }
            </div>
        </div>
        @if (!string.IsNullOrEmpty(FooterText))
        {
            <div class="card-footer bg-transparent border-0 pt-0">
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1"></i>@FooterText
                </small>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Description { get; set; } = string.Empty;
    [Parameter] public string IconClass { get; set; } = string.Empty;
    [Parameter] public string IconBackgroundClass { get; set; } = "bg-primary";
    [Parameter] public string MainActionUrl { get; set; } = string.Empty;
    [Parameter] public string MainActionText { get; set; } = "進入管理";
    [Parameter] public string MainActionButtonClass { get; set; } = "btn-primary";
    [Parameter] public string SecondaryActionUrl { get; set; } = string.Empty;
    [Parameter] public string SecondaryActionText { get; set; } = string.Empty;
    [Parameter] public string SecondaryActionButtonClass { get; set; } = "btn-outline-primary";
    [Parameter] public bool IsSecondaryActionDisabled { get; set; } = false;
    [Parameter] public string FooterText { get; set; } = string.Empty;
}
