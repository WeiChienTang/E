@* 庫存異動關聯查看組件 - 顯示特定商品的原始交易和所有調整記錄 *@

@using ERPCore2.Models
@using ERPCore2.Helpers
@inject IInventoryTransactionService InventoryTransactionService

<BaseModalComponent IsVisible="@IsVisible"
                   IsVisibleChanged="@HandleVisibilityChanged"
                   Title="@GetModalTitle()"
                   Icon="bi bi-clock-history"
                   Size="BaseModalComponent.ModalSize.Default"
                   HeaderColor="BaseModalComponent.HeaderVariant.Primary"
                   CloseOnEscape="true"
                   CloseOnBackdropClick="false"
                   IsLoading="@isLoading"
                   LoadingMessage="正在載入異動歷史..."
                   OnClose="@Close">
    
    <BodyContent>
        @if (relatedDocuments == null || !relatedDocuments.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <p class="mt-3 text-muted">暫無關聯記錄</p>
            </div>
        }
        else
        {
            @* 商品資訊提示 *@
            @if (!string.IsNullOrEmpty(ProductName))
            {
                <div class="alert alert-light border d-flex align-items-center mb-3 py-2">
                    <i class="bi bi-box-seam me-2 text-primary"></i>
                    <span>
                        <strong>商品：</strong>@ProductName
                        <span class="text-muted ms-2">（共 @relatedDocuments.Count 筆異動記錄）</span>
                    </span>
                </div>
            }
            
            @* 異動記錄列表 - 時間軸樣式 *@
            <div class="transaction-timeline">
                @foreach (var doc in relatedDocuments.OrderBy(d => d.DocumentDate))
                {
                    var isOriginal = doc.DocumentNumber.Contains("[首次]");
                    var isDelete = doc.DocumentNumber.Contains("[刪除");
                    
                    var badgeClass = isOriginal ? "bg-primary" :
                                    isDelete ? "bg-danger" :
                                    "bg-warning text-dark";
                    
                    var badgeText = isOriginal ? "首次" :
                                   isDelete ? "刪除" :
                                   "調整";
                    
                    var cardBorderClass = isOriginal ? "" :
                                         isDelete ? "border-danger" :
                                         "border-warning";
                    
                    <div class="card mb-2 @cardBorderClass">
                        <div class="card-body py-2 px-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <span class="badge @badgeClass me-2">@badgeText</span>
                                    <small class="text-muted">
                                        @doc.DocumentDate.ToString("yyyy-MM-dd HH:mm")
                                    </small>
                                </div>
                                <div>
                                    @if (doc.Quantity.HasValue)
                                    {
                                        var qtyClass = doc.Quantity.Value >= 0 ? "text-success" : "text-danger";
                                        var sign = doc.Quantity.Value >= 0 ? "+" : "";
                                        <span class="@qtyClass fw-bold fs-5">
                                            @sign@NumberFormatHelper.FormatSmart(doc.Quantity.Value)
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </BodyContent>
    
    <FooterContent>
        <GenericButtonComponent
            Text="關閉"
            Variant="ButtonVariant.Gray"
            OnClick="@Close"
            Size="ButtonSize.Small" />
    </FooterContent>
    
</BaseModalComponent>

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    
    /// <summary>
    /// 交易編號（用於查詢關聯記錄）
    /// </summary>
    [Parameter] public string? TransactionNumber { get; set; }
    
    /// <summary>
    /// 商品ID（用於過濾特定商品的異動）
    /// </summary>
    [Parameter] public int? ProductId { get; set; }
    
    /// <summary>
    /// 商品名稱（顯示用）
    /// </summary>
    [Parameter] public string? ProductName { get; set; }
    
    private List<RelatedDocumentInfo>? relatedDocuments;
    private bool isLoading = false;
    private string? _previousTransactionNumber;
    private int? _previousProductId;
    
    protected override async Task OnParametersSetAsync()
    {
        // 當參數變更且 Modal 可見時，重新載入資料
        if (IsVisible && (TransactionNumber != _previousTransactionNumber || ProductId != _previousProductId))
        {
            _previousTransactionNumber = TransactionNumber;
            _previousProductId = ProductId;
            await LoadRelatedTransactionsAsync();
        }
    }
    
    private async Task LoadRelatedTransactionsAsync()
    {
        if (string.IsNullOrEmpty(TransactionNumber))
        {
            relatedDocuments = null;
            return;
        }
        
        isLoading = true;
        StateHasChanged();
        
        try
        {
            // 傳入 ProductId 進行過濾
            relatedDocuments = await InventoryTransactionService.GetRelatedTransactionsAsync(TransactionNumber, ProductId);
        }
        catch
        {
            relatedDocuments = null;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
    
    private string GetModalTitle()
    {
        if (string.IsNullOrEmpty(TransactionNumber))
            return "庫存異動歷史";
        
        // 提取基礎編號
        var baseNumber = TransactionNumber
            .Replace("_ADJ", "")
            .Replace("_DEL", "")
            .Replace("_PRICE_ADJ_IN", "")
            .Replace("_PRICE_ADJ_OUT", "");
        
        return $"異動歷史 - {baseNumber}";
    }
    
    private async Task Close()
    {
        IsVisible = false;
        await IsVisibleChanged.InvokeAsync(false);
    }
    
    private async Task HandleVisibilityChanged(bool visible)
    {
        IsVisible = visible;
        await IsVisibleChanged.InvokeAsync(visible);
        
        if (visible && !string.IsNullOrEmpty(TransactionNumber))
        {
            await LoadRelatedTransactionsAsync();
        }
    }
}
