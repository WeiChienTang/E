@* 商品物料清單詳細欄位範本 - 單行行內顯示 *@
@using ERPCore2.Models

<span class="text-muted">
    <i class="bi bi-calendar3 me-1"></i>@Document.DocumentDate.ToString("yyyy-MM-dd")
</span>
@if (!string.IsNullOrEmpty(Document.Remarks))
{
    <span class="text-muted text-truncate" style="max-width: 150px;" title="@Document.Remarks">
        <i class="bi bi-info-circle me-1"></i>@Document.Remarks
    </span>
}

@code {
    [Parameter, EditorRequired]
    public RelatedDocument Document { get; set; } = null!;
}
