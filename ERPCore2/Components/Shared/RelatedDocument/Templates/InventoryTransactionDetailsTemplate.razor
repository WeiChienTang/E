@* 庫存異動詳細欄位範本 - 單行行內顯示 *@
@using ERPCore2.Models
@using ERPCore2.Helpers

<span class="text-muted">
    <i class="bi bi-calendar3 me-1"></i>@Document.DocumentDate.ToString("yyyy-MM-dd HH:mm")
</span>
@if (Document.Quantity.HasValue)
{
    var quantityClass = Document.Quantity.Value >= 0 ? "text-success" : "text-danger";
    var quantitySign = Document.Quantity.Value >= 0 ? "+" : "";
    <span class="@quantityClass fw-bold">
        <i class="bi bi-box-seam me-1"></i>@quantitySign@NumberFormatHelper.FormatSmart(Document.Quantity.Value)
    </span>
}
@if (Document.Amount.HasValue && Document.Amount.Value != 0)
{
    <span class="text-muted">
        <i class="bi bi-cash me-1"></i>@NumberFormatHelper.FormatSmart(Document.Amount.Value)
    </span>
}
@if (!string.IsNullOrEmpty(Document.Remarks))
{
    <span class="text-muted text-truncate" style="max-width: 150px;" title="@Document.Remarks">
        <i class="bi bi-chat-left-text me-1"></i>@Document.Remarks
    </span>
}

@code {
    [Parameter, EditorRequired]
    public RelatedDocumentInfo Document { get; set; } = null!;
}
