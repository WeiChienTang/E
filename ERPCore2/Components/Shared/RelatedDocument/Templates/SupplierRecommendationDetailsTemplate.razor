@* 供應商推薦詳細欄位範本 - 單行行內顯示 *@
@using ERPCore2.Models
@using ERPCore2.Helpers

@if (Document.UnitPrice.HasValue)
{
    <span class="badge bg-primary">
        <i class="bi bi-tag-fill me-1"></i>NT$ @NumberFormatHelper.FormatSmart(Document.UnitPrice.Value)
    </span>
}
@if (Document.Quantity.HasValue && Document.Quantity.Value > 0)
{
    <span class="text-muted">
        <i class="bi bi-cart-check me-1"></i>@NumberFormatHelper.FormatSmart(Document.Quantity.Value) 次
    </span>
}
@if (Document.DocumentDate != default)
{
    <span class="text-muted">
        <i class="bi bi-calendar3 me-1"></i>@Document.DocumentDate.ToString("yyyy-MM-dd")
    </span>
}
@if (!string.IsNullOrEmpty(Document.Remarks))
{
    <span class="text-muted text-truncate" style="max-width: 150px;" title="@Document.Remarks">
        <i class="bi bi-info-circle me-1"></i>@Document.Remarks
    </span>
}

@code {
    [Parameter, EditorRequired]
    public RelatedDocumentInfo Document { get; set; } = null!;
}
