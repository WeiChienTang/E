@* 沖款單詳細欄位範本 - 單行行內顯示 *@
@using ERPCore2.Models
@using ERPCore2.Helpers

<span class="text-muted">
    <i class="bi bi-calendar3 me-1"></i>@Document.DocumentDate.ToString("yyyy-MM-dd")
</span>
@if (Document.Amount.HasValue)
{
    <span class="text-muted">
        <i class="bi bi-currency-dollar me-1"></i>沖款: @NumberFormatHelper.FormatSmart(Document.Amount.Value)
    </span>
}
else if (Document.CurrentAmount.HasValue)
{
    <span class="text-muted">
        <i class="bi bi-currency-dollar me-1"></i>本次: @NumberFormatHelper.FormatSmart(Document.CurrentAmount.Value)
    </span>
}
@if (!string.IsNullOrEmpty(Document.Remarks))
{
    <span class="text-muted text-truncate" style="max-width: 150px;" title="@Document.Remarks">
        <i class="bi bi-chat-left-text me-1"></i>@Document.Remarks
    </span>
}

@code {
    [Parameter, EditorRequired]
    public RelatedDocumentInfo Document { get; set; } = null!;
}
