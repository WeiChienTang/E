@* 可重用的單據區塊組件 - 單行精簡設計 *@
@using ERPCore2.Components.Shared.RelatedDocument.Config
@using ERPCore2.Models
@using ERPCore2.Helpers

@if (Documents.Any())
{
    <div class="mb-3">
        @* 區塊標題 *@
        <h6 class="text-@Config.TextColor mb-2">
            <i class="bi bi-@Config.Icon me-2"></i>
            @Config.Title (@Documents.Count)
        </h6>
        
        @* 單據清單 - 單行設計 *@
        <div class="list-group list-group-flush">
            @foreach (var doc in Documents)
            {
                <a href="javascript:void(0)" 
                   class="list-group-item list-group-item-action py-2 px-3"
                   @onclick="@(() => OnDocumentClick.InvokeAsync(doc))">
                    <div class="d-flex w-100 justify-content-between align-items-center">
                        @* 單行內容：[類型Badge] [單號] [其餘資訊] *@
                        <div class="d-flex align-items-center flex-wrap gap-2 small">
                            @* 類型標籤 *@
                            <span class="badge bg-@Config.BadgeColor @Config.BadgeTextClass">
                                <i class="@doc.Icon me-1"></i>@doc.TypeDisplayName
                            </span>
                            @* 單號 *@
                            <span class="fw-semibold">@doc.DocumentNumber</span>
                            @* 詳細資訊（行內顯示） *@
                            @if (DetailsTemplate != null)
                            {
                                @DetailsTemplate(doc)
                            }
                            else
                            {
                                @* 預設顯示：日期 *@
                                <span class="text-muted">
                                    <i class="bi bi-calendar3 me-1"></i>@doc.DocumentDate.ToString("yyyy-MM-dd")
                                </span>
                                @if (!string.IsNullOrEmpty(doc.Remarks))
                                {
                                    <span class="text-muted text-truncate" style="max-width: 200px;" title="@doc.Remarks">
                                        <i class="bi bi-chat-left-text me-1"></i>@doc.Remarks
                                    </span>
                                }
                            }
                        </div>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </div>
                </a>
            }
        </div>
    </div>
}

@code {
    /// <summary>
    /// 要顯示的單據清單
    /// </summary>
    [Parameter, EditorRequired]
    public List<RelatedDocumentInfo> Documents { get; set; } = new();
    
    /// <summary>
    /// 區塊配置
    /// </summary>
    [Parameter, EditorRequired]
    public DocumentSectionConfig Config { get; set; } = null!;
    
    /// <summary>
    /// 詳細欄位的自訂範本（可選）
    /// </summary>
    [Parameter]
    public RenderFragment<RelatedDocumentInfo>? DetailsTemplate { get; set; }
    
    /// <summary>
    /// 當點擊單據時觸發
    /// </summary>
    [Parameter]
    public EventCallback<RelatedDocumentInfo> OnDocumentClick { get; set; }
}
