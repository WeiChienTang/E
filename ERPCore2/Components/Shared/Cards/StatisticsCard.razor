@* 統計卡片元件 *@

<div class="h-100">
    <div class="card border-left-@BorderColor shadow h-100 py-2 @(IsClickable ? "statistics-card-clickable" : "")" 
         @onclick="HandleClick">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="statistics-card-title text-@TextColor">
                        @Title
                    </div>
                    <div class="statistics-card-value">
                        @if (IsCurrency)
                        {
                            <span>$@Value.ToString("N0")</span>
                        }
                        else
                        {
                            <span>@Value.ToString("N0")</span>
                        }
                    </div>
                </div>
                <div class="col-auto">
                    <i class="@IconClass statistics-card-icon"></i>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    /// <summary>
    /// 卡片標題
    /// </summary>
    [Parameter, EditorRequired] 
    public string Title { get; set; } = "";

    /// <summary>
    /// 顯示的數值
    /// </summary>
    [Parameter, EditorRequired] 
    public decimal Value { get; set; }

    /// <summary>
    /// 圖示 CSS 類別
    /// </summary>
    [Parameter, EditorRequired] 
    public string IconClass { get; set; } = "";

    /// <summary>
    /// 邊框顏色 (Bootstrap 顏色名稱: primary, success, warning, danger, info, secondary)
    /// </summary>
    [Parameter] 
    public string BorderColor { get; set; } = "primary";

    /// <summary>
    /// 文字顏色 (Bootstrap 顏色名稱: primary, success, warning, danger, info, secondary)
    /// </summary>
    [Parameter] 
    public string TextColor { get; set; } = "primary";

    /// <summary>
    /// 是否為貨幣格式 (會在前面加上 $ 符號)
    /// </summary>
    [Parameter] 
    public bool IsCurrency { get; set; } = false;

    /// <summary>
    /// 點擊事件回調
    /// </summary>
    [Parameter] 
    public EventCallback OnClick { get; set; }

    /// <summary>
    /// 是否可點擊
    /// </summary>
    [Parameter] 
    public bool IsClickable { get; set; } = false;

    private async Task HandleClick()
    {
        if (IsClickable && OnClick.HasDelegate)
        {
            await OnClick.InvokeAsync();
        }
    }
}
