        isLoadingRelatedDocuments = true;
        relatedDocuments = null;
        Console.WriteLine($"[PurchaseOrderDetailManager] 開啟 Modal, showRelatedDocumentsModal: {showRelatedDocumentsModal}");
        StateHasChanged();

        try
        {
            Console.WriteLine($"[PurchaseOrderDetailManager] 查詢採購訂單明細 ID: {detail.Id} 的相關入庫單");
            relatedDocuments = await RelatedDocumentsHelper.GetRelatedDocumentsForPurchaseOrderDetailAsync(detail.Id);
            Console.WriteLine($"[PurchaseOrderDetailManager] 找到 {relatedDocuments?.Count ?? 0} 筆相關入庫單");
            
            if (relatedDocuments?.Any() == true)
            {
