            await NotificationService.ShowErrorAsync($"載入相關單據失敗：{ex.Message}");
        }
        finally
        {
            isLoadingRelatedDocuments = false;
            Console.WriteLine($"[PurchaseOrderDetailManager] isLoadingRelatedDocuments: {isLoadingRelatedDocuments}");
            StateHasChanged();
        }
    }

