    /// <summary>
    /// 內部方法：載入上次銷貨明細
    /// </summary>
    private async Task LoadLastSalesDetailsInternal(List<SalesOrderDetail> lastSalesDetails)
    {
        try
        {
            // 清空現有項目
            Items.Clear();

            // 載入上次銷貨的所有商品明細
            foreach (var detail in lastSalesDetails)
            {
                var newItem = new TSalesOrderDetailEntity();
                
                // 設定銷售訂單ID
                SetSalesOrderId(newItem, ParentEntityId);
                
                // 根據傳入的product設定產品ID
                if (detail.Product != null)
                {
                    SetProductId(newItem, detail.ProductId);
                }
                
                // 設定其他資料，但不設定數量讓使用者自己填寫
                SetQuantity(newItem, null); // 不自動填入數量
                SetUnitPrice(newItem, detail.UnitPrice);
                SetDiscount(newItem, detail.DiscountPercentage);
                SetUnitId(newItem, detail.UnitId);
                SetWarehouseId(newItem, detail.WarehouseId);
                SetRemark(newItem, detail.DetailRemarks);
                
                // 自動查詢該產品在該倉庫的庫存數量
                if (detail.ProductId > 0 && detail.WarehouseId.HasValue && detail.WarehouseId.Value > 0)
                {
                    _ = Task.Run(async () =>
                    {
                        try
                        {
                            var availableStock = await InventoryStockService.GetTotalAvailableStockByWarehouseAsync(detail.ProductId, detail.WarehouseId.Value);
                            SetCachedWarehouseStock(detail.ProductId, detail.WarehouseId.Value, availableStock);
                            await InvokeAsync(StateHasChanged);
                        }
                        catch
                        {
                            SetCachedWarehouseStock(detail.ProductId, detail.WarehouseId.Value, -1);
                            await InvokeAsync(StateHasChanged);
                        }
                    });
                }

                Items.Add(newItem);
            }

            // 確保有一個空行
            EnsureOneEmptyRow();
            
            // 通知變更
            await ItemsChanged.InvokeAsync(Items);
            
            await NotificationService.ShowSuccessAsync(
                $"成功載入 {lastSalesDetails.Count} 項上次購買的產品明細"
            );
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"載入上次購買明細失敗：{ex.Message}");
        }
    }

