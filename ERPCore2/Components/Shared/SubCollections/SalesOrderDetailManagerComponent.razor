        {
            displayText = code;
        }
        else
        {
            displayText = product.ToString() ?? "";
        }
        
        // 如果有價格資訊，顯示在後面
        if (price != null && decimal.TryParse(price.ToString(), out var priceValue) && priceValue > 0)
        {
            displayText += $" (NT${priceValue:N0})";
        }
        
        return displayText;
    };
