    // ===== 倉庫庫存快取 =====
    private Dictionary<string, int> _warehouseStockCache = new();
    
    /// <summary>
    /// 取得快取的倉庫庫存數量
    /// </summary>
    /// <param name="productId">產品ID</param>
    /// <param name="warehouseId">倉庫ID</param>
    /// <returns>庫存數量，未快取時返回 null</returns>
    private int? GetCachedWarehouseStock(int? productId, int? warehouseId)
    {
        if (!productId.HasValue || !warehouseId.HasValue || productId.Value <= 0 || warehouseId.Value <= 0)
            return null;
            
        var cacheKey = $"{productId}_{warehouseId}";
        return _warehouseStockCache.TryGetValue(cacheKey, out var stock) ? stock : null;
    }
    
    /// <summary>
    /// 更新倉庫庫存快取
    /// </summary>
    /// <param name="productId">產品ID</param>
    /// <param name="warehouseId">倉庫ID</param>
    /// <param name="stockQuantity">庫存數量</param>
    private void SetCachedWarehouseStock(int productId, int warehouseId, int stockQuantity)
    {
        if (productId > 0 && warehouseId > 0)
        {
            var cacheKey = $"{productId}_{warehouseId}";
            _warehouseStockCache[cacheKey] = stockQuantity;
        }
    }
    
    /// <summary>
    /// 清除指定產品的庫存快取
    /// </summary>
    /// <param name="productId">產品ID</param>
    private void ClearProductStockCache(int? productId)
    {
        if (!productId.HasValue || productId.Value <= 0) return;
        
        var keysToRemove = _warehouseStockCache.Keys
            .Where(key => key.StartsWith($"{productId}_"))
            .ToList();
            
        foreach (var key in keysToRemove)
        {
            _warehouseStockCache.Remove(key);
        }
    }
    
    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        
        var emptyCount = Items.Count(IsEmptyRow);
        
        // 總是確保有一行空行可以輸入
        // 不論是否已有資料，都應該保持有空行供使用者新增
        EnsureOneEmptyRow();
        
        var emptyCountAfter = Items.Count(IsEmptyRow);
    }

    // ===== AutoEmptyRowHelper 相關方法 =====
    
    /// <summary>
    /// 檢查是否為空行
    /// 業務邏輯：只要選擇了產品，就算是有效的一行，不再是空行
    /// </summary>
    private bool IsEmptyRow(TSalesOrderDetailEntity item)
    {
        var productId = GetProductId(item);
        // 檢查產品ID是否為空（null 或 0 都算空）
        var isEmpty = !productId.HasValue || productId.Value <= 0;
        
        // 只要產品有值（大於0），就不是空行
        // 產品是核心欄位，其他欄位可以後續填寫
        return isEmpty;
    }
    
    /// <summary>
    /// 創建空的銷售訂單明細項目
    /// </summary>
    private TSalesOrderDetailEntity CreateEmptyItem()
    {
        var newItem = new TSalesOrderDetailEntity();
        SetSalesOrderId(newItem, ParentEntityId); // 設定銷售訂單ID
        return newItem;
    }
    
    /// <summary>
    /// 確保有一行空行
    /// </summary>
    private void EnsureOneEmptyRow()
    {
        AutoEmptyRowHelper.For<TSalesOrderDetailEntity>.EnsureOneEmptyRow(
            Items, 
            IsEmptyRow, 
            CreateEmptyItem, 
            SetSalesOrderId, 
            ParentEntityId
        );
    }

