        }
        
        var wasEmpty = IsEmptyRow(item);
        
        if (string.IsNullOrEmpty(value))
        {
            item.ReceivedQuantity = 0;
        }
        else if (int.TryParse(value, out var quantity))
        {
            var returnedQty = GetReturnedQuantity(item);
            
