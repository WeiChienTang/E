    private async Task HandleItemDelete(ReceivingItem item)
    {
        // 使用綜合檢查方法，確認是否可以刪除
        if (!CanDeleteItem(item, out string reason))
        {
            await NotificationService.ShowWarningAsync(
                reason, 
                "操作限制"
            );
            return;
        }
        
        var index = ReceivingItems.IndexOf(item);
        await RemoveItemAsync(index);
    }

