            }
            else
            {
                item.ReceivedQuantity = quantity;
            }
        }
        
        AutoEmptyRowHelper.ForAny<ReceivingItem>.HandleInputChange(
            ReceivingItems, item, IsEmptyRow, CreateEmptyItem, wasEmpty, !IsEmptyRow(item));
        
        await NotifyDetailsChanged();
        StateHasChanged();
    }

