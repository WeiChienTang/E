@using ERPCore2.Data.Entities

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-graph-up me-2"></i>
            統計資訊
        </h5>
    </div>
    <div class="card-body">
        <div class="row text-center">
            <div class="col-6">
                <div class="border-end">
                    <h3 class="text-primary mb-1">@Role.RolePermissions.Count</h3>
                    <p class="text-muted mb-0">權限數量</p>
                </div>
            </div>
            <div class="col-6">
                <h3 class="text-success mb-1">@Role.Employees.Count</h3>
                <p class="text-muted mb-0">使用員工</p>
            </div>
        </div>
    </div>
</div>

<!-- 使用此角色的員工 -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-people me-2"></i>
            使用員工
        </h5>
        <span class="badge bg-success">@Role.Employees.Count 人</span>
    </div>
    <div class="card-body">
        @if (!Role.Employees.Any())
        {
            <div class="text-center py-3">
                <i class="bi bi-people text-muted" style="font-size: 2rem;"></i>
                <p class="mt-2 text-muted mb-0">目前沒有員工使用此角色</p>
            </div>
        }
        else
        {
            <div class="list-group list-group-flush">
                @foreach (var employee in Role.Employees.Take(10))
                {
                    <div class="list-group-item px-0 py-2">
                        <div class="d-flex align-items-center">
                            <div class="avatar-circle bg-primary text-white me-3">
                                @employee.Name.Substring(0, 1)
                            </div>
                            <div>
                                <div class="fw-bold">@employee.Name</div>
                                <small class="text-muted">@employee.Email</small>
                            </div>
                        </div>
                    </div>
                }
                @if (Role.Employees.Count > 10)
                {
                    <div class="list-group-item px-0 py-2 text-center">
                        <small class="text-muted">還有 @(Role.Employees.Count - 10) 位員工...</small>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public Role Role { get; set; } = new();
}
