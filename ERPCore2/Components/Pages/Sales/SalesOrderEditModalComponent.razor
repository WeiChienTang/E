    /// <summary>
    /// 載入銷貨訂單明細
    /// </summary>
    private async Task LoadSalesOrderDetails(int salesOrderId)
    {
        try
        {
            // 從現有的銷貨訂單取得明細
            var salesOrder = await SalesOrderService.GetWithDetailsAsync(salesOrderId);
            if (salesOrder?.SalesOrderDetails != null)
            {
                salesOrderDetails = salesOrder.SalesOrderDetails.ToList();
            }
            else
            {
                salesOrderDetails = new List<SalesOrderDetail>();
            }
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(LoadSalesOrderDetails), GetType(), 
                additionalData: $"載入銷貨訂單明細失敗 - OrderId: {salesOrderId}");
            salesOrderDetails = new List<SalesOrderDetail>();
        }
    }

    /// <summary>
    /// 處理銷貨明細變更
    /// </summary>
    private async Task HandleDetailsChanged(List<SalesOrderDetail> details)
    {
        try
        {
            salesOrderDetails = details ?? new List<SalesOrderDetail>();
            
            // 重新計算每項明細的小計
            foreach (var detail in salesOrderDetails)
            {
                if (detail.ProductId > 0) // 只有選擇了產品的明細才計算
                {
                    var subtotal = detail.OrderQuantity * detail.UnitPrice;
                    
                    // 計算折扣
                    if (detail.DiscountPercentage > 0 && detail.DiscountPercentage <= 100)
                    {
                        detail.DiscountAmount = subtotal * (detail.DiscountPercentage / 100);
                        subtotal = subtotal - detail.DiscountAmount;
                    }
                    else
                    {
                        detail.DiscountAmount = 0;
                    }
                    
                    detail.Subtotal = subtotal;
                    detail.PendingQuantity = detail.OrderQuantity - detail.DeliveredQuantity;
                }
                else
                {
                    detail.Subtotal = 0;
                    detail.DiscountAmount = 0;
                    detail.PendingQuantity = 0;
                }
            }
            
            // 更新主檔的總金額
            if (editModalComponent?.Entity != null)
            {
                editModalComponent.Entity.TotalAmount = salesOrderDetails.Sum(d => d.Subtotal);
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(HandleDetailsChanged), GetType(), 
                additionalData: "處理銷貨明細變更失敗");
        }
    }

