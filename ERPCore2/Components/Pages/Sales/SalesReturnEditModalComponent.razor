    /// </summary>
    private async Task<bool> SaveSalesReturnWithDetails(SalesReturn salesReturn)
    {
        try
        {
            if (salesReturn == null)
            {
                return false;
            }
            
            // å…ˆåŸ·è¡Œè‡ªè¨‚é©—è­‰
            if (!await ValidateSalesReturnDetailsAsync(salesReturn))
