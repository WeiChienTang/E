            var detailId = item.ExistingDetailEntity?.Id ?? 0;
            
            // å¦‚æœæœ‰è‡ªè¨‚çš„çµ„åˆæ˜ç´°
            if (item.CustomCompositionDetails?.Any() == true)
            {
                if (detailId > 0)
