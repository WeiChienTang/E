@* 報價單 → 轉換訂單 Tab（唯讀） *@
@inject ISalesOrderService SalesOrderService

@if (_isLoading)
{
    <div class="text-muted py-4 px-2">
        <i class="bi bi-hourglass-split me-2"></i>載入中...
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>訂單單號</th>
                    <th>訂購日期</th>
                    <th>客戶</th>
                    <th class="text-end">訂單金額（含稅）</th>
                    <th style="width:60px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in _orders)
                {
                    <tr>
                        <td class="font-monospace small">@order.Code</td>
                        <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                        <td>@(order.Customer?.CompanyName ?? "—")</td>
                        <td class="text-end">@order.TotalAmountWithTax.ToString("N0")</td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-outline-primary"
                                    title="開啟銷貨訂單"
                                    @onclick="@(() => OnOpenOrder.InvokeAsync(order.Id))">
                                <i class="bi bi-box-arrow-up-right"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    /// <summary>點擊銷貨訂單時觸發，傳入 SalesOrderId</summary>
    [Parameter] public EventCallback<int> OnOpenOrder { get; set; }

    private int _quotationId;
    private bool _isLoading;
    private List<SalesOrder> _orders = new();

    public async Task LoadAsync(int quotationId)
    {
        _quotationId = quotationId;
        _isLoading = true;
        StateHasChanged();

        _orders = await SalesOrderService.GetByQuotationIdAsync(quotationId);

        _isLoading = false;
        StateHasChanged();
    }

    public void Clear()
    {
        _quotationId = 0;
        _orders = new();
        StateHasChanged();
    }
}
