    private async Task SaveQuotationDetails(int quotationId)
    {
        try
        {
            // è¨­å®šä¸»æª”ID
            foreach (var detail in quotationDetails)
            {
                detail.QuotationId = quotationId;
                if (detail.Id == 0)
                {
