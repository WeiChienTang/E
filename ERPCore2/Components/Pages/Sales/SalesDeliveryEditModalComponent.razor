                },
                detailManager: salesDeliveryDetailManager,
                notificationMessage: $"退貨單 {savedSalesReturn.Code} 已更新，出貨明細已刷新",
                stateHasChanged: StateHasChanged,
                invokeAsync: InvokeAsync,
                additionalActions: async () =>
                {
