    {
        return new List<GenericEditModalComponent<SalesDelivery, ISalesDeliveryService>.CustomModule>
        {
            new GenericEditModalComponent<SalesDelivery, ISalesDeliveryService>.CustomModule
            {
                Title = "",
                Order = 1,
