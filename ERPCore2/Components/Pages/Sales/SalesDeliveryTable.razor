    public async Task<bool> ValidateAsync()
    {
        var nonEmptyItems = DeliveryItems.Where(item => item.ProductId > 0).ToList();
        
        if (!nonEmptyItems.Any())
        {
            await NotificationService.ShowWarningAsync("è«‹è‡³å°‘æ–°å¢ä¸€ç­†å‡ºè²¨æ˜ç´°");
            return false;
