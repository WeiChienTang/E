            // å¾åº«å­˜ä¸»æª”ä¸­æå–æ‰€æœ‰åº«å­˜æ˜ç´°
            var stockDetails = inventoryStocks
                .SelectMany(s => s.InventoryStockDetails ?? new List<InventoryStockDetail>())
                .Where(d => d.AvailableStock > 0) // åªä¿ç•™æœ‰åº«å­˜çš„ä½ç½®
