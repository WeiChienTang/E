@* 銷貨訂單 → 退回記錄 Tab（唯讀） *@
@inject ISalesReturnService SalesReturnService
@inject IStringLocalizer<SharedResource> L

@if (_isLoading)
{
    <div class="text-muted py-4 px-2">
        <i class="bi bi-hourglass-split me-2"></i>@L["Label.Loading"]
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>@L["Column.ReturnCode"]</th>
                    <th>@L["Column.SalesReturnDate"]</th>
                    <th>@L["Column.CustomerName"]</th>
                    <th class="text-end">@L["Column.ReturnAmountWithTax"]</th>
                    <th style="width:60px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ret in _returns)
                {
                    <tr>
                        <td class="font-monospace small">@ret.Code</td>
                        <td>@ret.ReturnDate.ToString("yyyy-MM-dd")</td>
                        <td>@(ret.Customer?.CompanyName ?? "—")</td>
                        <td class="text-end">@ret.TotalReturnAmountWithTax.ToString("N0")</td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-outline-primary"
                                    title="@L["Button.OpenSalesReturn"]"
                                    @onclick="@(() => OnOpenReturn.InvokeAsync(ret.Id))">
                                <i class="bi bi-box-arrow-up-right"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    /// <summary>點擊退回單時觸發，傳入 SalesReturnId</summary>
    [Parameter] public EventCallback<int> OnOpenReturn { get; set; }

    private int _orderId;
    private bool _isLoading;
    private List<SalesReturn> _returns = new();

    public async Task LoadAsync(int orderId)
    {
        _orderId = orderId;
        _isLoading = true;
        StateHasChanged();

        _returns = await SalesReturnService.GetBySalesOrderIdAsync(orderId);

        _isLoading = false;
        StateHasChanged();
    }

    public void Clear()
    {
        _orderId = 0;
        _returns = new();
        StateHasChanged();
    }
}
