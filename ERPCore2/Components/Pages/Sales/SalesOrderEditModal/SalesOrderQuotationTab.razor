@* 銷貨訂單 → 來源報價單 Tab（唯讀） *@
@inject IQuotationService QuotationService

@if (_orderId <= 0)
{
    <div class="text-muted py-4 px-2">
        <i class="bi bi-info-circle me-2"></i>請先儲存訂單，再查看來源報價單。
    </div>
}
else if (_isLoading)
{
    <div class="text-muted py-4 px-2">
        <i class="bi bi-hourglass-split me-2"></i>載入中...
    </div>
}
else if (!_quotations.Any())
{
    <div class="text-muted py-4 px-2">
        <i class="bi bi-inbox me-2"></i>此訂單無相關聯的報價單。
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>報價單號</th>
                    <th>報價日期</th>
                    <th>客戶</th>
                    <th class="text-end">金額（含稅）</th>
                    <th style="width:60px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var quotation in _quotations)
                {
                    <tr>
                        <td class="font-monospace small">@quotation.Code</td>
                        <td>@quotation.QuotationDate.ToString("yyyy-MM-dd")</td>
                        <td>@(quotation.Customer?.CompanyName ?? "—")</td>
                        <td class="text-end">@((quotation.TotalAmount + quotation.QuotationTaxAmount).ToString("N0"))</td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-outline-primary"
                                    title="開啟報價單"
                                    @onclick="@(() => OnOpenQuotation.InvokeAsync(quotation.Id))">
                                <i class="bi bi-box-arrow-up-right"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    /// <summary>點擊報價單時觸發，傳入 QuotationId</summary>
    [Parameter] public EventCallback<int> OnOpenQuotation { get; set; }

    private int _orderId;
    private bool _isLoading;
    private List<Quotation> _quotations = new();

    public async Task LoadAsync(int orderId)
    {
        _orderId = orderId;
        _isLoading = true;
        StateHasChanged();

        _quotations = await QuotationService.GetBySalesOrderIdAsync(orderId);

        _isLoading = false;
        StateHasChanged();
    }

    public void Clear()
    {
        _orderId = 0;
        _quotations = new();
        StateHasChanged();
    }
}
