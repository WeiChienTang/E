        catch (Exception ex)
        {
            _ = ErrorHandlingHelper.HandleErrorSafelyAsync(
                ex,
                nameof(GetFormFields),
                GetType(),
                ErrorLogService,
                NotificationService,
                showUserFriendlyMessage: false,
