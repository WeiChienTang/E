@* 可重用的物料清單類型編輯組件 - 可在任何頁面中嵌入 *@
@inject ICompositionCategoryService CompositionCategoryService
@inject INotificationService NotificationService
@inject IStringLocalizer<SharedResource> L

<GenericEditModalComponent TEntity="CompositionCategory"
                          TService="ICompositionCategoryService"
                          @ref="editModalComponent"
                          IsVisible="@IsVisible"
                          IsVisibleChanged="@IsVisibleChanged"
                          @bind-Id="@CompositionCategoryId"
                          Service="@CompositionCategoryService"
                          EntityName="@L["Entity.CompositionCategory"]"
                          EntityNamePlural="@L["Entity.CompositionCategory"]"
                          ModalTitle="@(CompositionCategoryId.HasValue ? L["Message.EditTitle", L["Entity.CompositionCategory"]].ToString() : L["Message.CreateTitle", L["Entity.CompositionCategory"]].ToString())"
                          Size="GenericEditModalComponent<CompositionCategory, ICompositionCategoryService>.ModalSize.Desktop"
                          UseGenericForm="true"
                          FormFields="@formFields"
                          FormSections="@formSections"
                          DataLoader="@LoadCompositionCategoryData"
                          UseGenericSave="true"
                          SaveSuccessMessage="@(CompositionCategoryId.HasValue ? L["Message.UpdateSuccess", L["Entity.CompositionCategory"]].ToString() : L["Message.CreateSuccess", L["Entity.CompositionCategory"]].ToString())"
                          SaveFailureMessage="@L["Message.SaveFailure", L["Entity.CompositionCategory"]]"
                          RequiredPermission="@PermissionRegistry.CompositionCategory.Read"
                          OnEntitySaved="@OnCompositionCategorySaved"
                          OnCancel="@OnCancel" />

@code {
    // ===== 參數 =====
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public int? CompositionCategoryId { get; set; }
    [Parameter] public EventCallback<CompositionCategory> OnCompositionCategorySaved { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public Dictionary<string, object?>? PrefilledValues { get; set; }

    // ===== 內部狀態 =====
    private GenericEditModalComponent<CompositionCategory, ICompositionCategoryService>? editModalComponent;
    private List<FormFieldDefinition> formFields = new();
    private Dictionary<string, string> formSections = new();

    // ===== 生命週期 =====
    private Task<CompositionCategory?> LoadCompositionCategoryData()
        => EditDataLoaderHelper.LoadOrCreateAsync<CompositionCategory, ICompositionCategoryService>(
            CompositionCategoryId, CompositionCategoryService, NotificationService, "物料清單類型", "CC", PrefilledValues,
            c => c.Name = string.Empty);
    protected override void OnParametersSet()
    {
        if (IsVisible)
        {
            InitializeFormFields();
        }
    }

    // ===== 表單初始化 =====
    private void InitializeFormFields()
    {
        try
        {
            formFields = new List<FormFieldDefinition>
            {
                // 基本資訊區段
                
                new FormFieldDefinition
                {
                    PropertyName = nameof(CompositionCategory.Code),
                    Label = L["Field.TypeCode"],
                    FieldType = FormFieldType.Text,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.TypeCode"]],
                    IsRequired = true,
                    HelpText = "物料清單類型的唯一編號，例如：STD、ALT、SIM、CUST，系統會自動產生，也可手動修改"
                },

                new()
                {
                    PropertyName = nameof(CompositionCategory.Name),
                    Label = L["Field.TypeName"],
                    FieldType = FormFieldType.Text,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.TypeName"]],
                    IsRequired = true,
                    HelpText = "物料清單類型的名稱，例如：標準配方、替代配方、簡化配方、客製配方"
                },

                FormFieldConfigurationHelper.CreateRemarksField<CompositionCategory>()
            };

            formSections = FormSectionHelper<CompositionCategory>.Create()
                .AddToSection(FormSectionNames.BasicInfo,
                    cc => cc.Code,
                    cc => cc.Name)
                .AddToSection(FormSectionNames.AdditionalData,
                    cc => cc.Remarks)
                .Build();
        }
        catch (Exception)
        {
            _ = NotificationService.ShowErrorAsync("初始化表單欄位時發生錯誤");
        }
    }

    // ===== 公開方法 (供父組件調用) =====
    public Task ShowAddModal() => editModalComponent!.ShowAddModal();
    public Task ShowEditModal(int id) => editModalComponent!.ShowEditModal(id);
}
