@* 可重用的商品合成編輯組件 - 可在任何頁面中嵌入 *@
@using ERPCore2.Services.Reports.Interfaces
@using ERPCore2.Models.Reports
@inject IProductCompositionService ProductCompositionService
@inject IProductCompositionDetailService ProductCompositionDetailService
@inject IProductService ProductService
@inject IProductCategoryService ProductCategoryService
@inject IUnitService UnitService
@inject ICustomerService CustomerService
@inject IEmployeeService EmployeeService
@inject ICompositionCategoryService CompositionCategoryService
@inject INotificationService NotificationService
@inject ActionButtonHelper ActionButtonHelper
@inject IBOMReportService BOMReportService
@inject IStringLocalizer<SharedResource> L

<GenericEditModalComponent TEntity="ProductComposition" 
                          TService="IProductCompositionService"
                          @ref="editModalComponent"
                          IsVisible="@IsVisible"
                          IsVisibleChanged="@IsVisibleChanged"
                          @bind-Id="@CompositionId"
                          Service="@ProductCompositionService"
                          EntityName="@L["Entity.ProductComposition"]"
                          EntityNamePlural="@L["Entity.ProductComposition"]"
                          ModalTitle="@(CompositionId.HasValue ? L["Message.EditTitle", L["Entity.ProductComposition"]].ToString() : L["Message.CreateTitle", L["Entity.ProductComposition"]].ToString())"
                          Size="GenericEditModalComponent<ProductComposition, IProductCompositionService>.ModalSize.Desktop"
                          UseGenericForm="true"
                          FormFields="@formFields"
                          FormSections="@formSections"
                          AutoCompletePrefillers="@autoCompleteConfig?.Prefillers"
                          AutoCompleteCollections="@autoCompleteConfig?.Collections"
                          AutoCompleteDisplayProperties="@autoCompleteConfig?.DisplayProperties"
                          AutoCompleteValueProperties="@autoCompleteConfig?.ValueProperties"
                          ModalManagers="@modalManagers?.AsDictionary()"
                          DataLoader="@LoadCompositionData"
                          SaveHandler="@SaveCompositionWithDetails"
                          SaveSuccessMessage="@(CompositionId.HasValue ? L["Message.UpdateSuccess", L["Entity.ProductComposition"]].ToString() : L["Message.CreateSuccess", L["Entity.ProductComposition"]].ToString())"
                          SaveFailureMessage="@L["Message.SaveFailure", L["Entity.ProductComposition"]]"
                          RequiredPermission="@PermissionRegistry.ProductComposition.Read"
                          OnEntitySaved="@OnCompositionSaved"
                          OnCancel="@OnCancel"
ShowPrintButton="true"
                          PrintButtonText="@L["Button.Print"]"
                          ReportService="@BOMReportService"
                          ReportId="@ReportIds.BOMReport"
                          ReportPreviewTitle="@L["Label.DocumentPreview", L["Entity.BOM"]]"
                          GetReportDocumentName="@(e => $"物料清單-{e.Code}")"
                          CustomModules="@GetCustomModules()" />

@* 客戶編輯 Modal *@
<CustomerEditModalComponent @ref="customerEditModal"
                           IsVisible="@customerModalManager.IsModalVisible"
                           IsVisibleChanged="@customerModalManager.HandleModalVisibilityChangedAsync"
                           CustomerId="@customerModalManager.SelectedEntityId"
                           OnCustomerSaved="@customerModalManager.OnSavedAsync"
                           OnCancel="@customerModalManager.HandleModalCancelAsync" />

@* 員工編輯 Modal *@
<EmployeeEditModalComponent @ref="employeeEditModal"
                           IsVisible="@employeeModalManager.IsModalVisible"
                           IsVisibleChanged="@employeeModalManager.HandleModalVisibilityChangedAsync"
                           EmployeeId="@employeeModalManager.SelectedEntityId"
                           OnEmployeeSaved="@employeeModalManager.OnSavedAsync"
                           OnCancel="@employeeModalManager.HandleModalCancelAsync" />

@code {
    // ===== 參數 =====
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public int? CompositionId { get; set; }
    [Parameter] public EventCallback<ProductComposition> OnCompositionSaved { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public Dictionary<string, object?>? PrefilledValues { get; set; }

    // ===== 內部狀態 =====
    private GenericEditModalComponent<ProductComposition, IProductCompositionService>? editModalComponent;
    private ProductCompositionTable? detailManager;
    private List<FormFieldDefinition> formFields = new();
    private Dictionary<string, string> formSections = new();
    
    // AutoComplete 配置
    private AutoCompleteConfig? autoCompleteConfig;
    
    // 商品列表（分為主檔用和明細用）
    private List<Product> availableParentProducts = new();    // 主檔商品選項（只顯示自製商品）
    private List<Product> availableComponentProducts = new(); // 明細材料選項（顯示所有商品）
    private List<Unit> availableUnits = new();
    private List<Customer> availableCustomers = new();
    private List<Employee> availableEmployees = new();
    private List<CompositionCategory> availableCompositionCategories = new();
    private List<ProductCompositionDetail> compositionDetails = new();
    private bool isDetailDataReady = false;
    
    // ===== Modal 管理器 =====
    private CustomerEditModalComponent? customerEditModal;
    private RelatedEntityModalManager<Customer> customerModalManager = default!;
    private EmployeeEditModalComponent? employeeEditModal;
    private RelatedEntityModalManager<Employee> employeeModalManager = default!;
    private ModalManagerCollection modalManagers = default!;
    // 資料載入狀態標記
    private bool isDataLoaded = false;
    
    protected override async Task OnInitializedAsync()
    {
        try
        {
            // 使用 ModalManagerInitHelper 初始化 Modal 管理器
            modalManagers = ModalManagerInitHelper.CreateBuilder<ProductComposition, IProductCompositionService>(
                    () => editModalComponent,
                    NotificationService,
                    StateHasChanged,
                    LoadAdditionalDataAsync,
                    InitializeFormFieldsAsync)
                .AddManager<Customer>(nameof(ProductComposition.CustomerId), "客戶")
                .AddManager<Employee>(nameof(ProductComposition.CreatedByEmployeeId), "員工")
                .Build();
            customerModalManager = modalManagers.Get<Customer>(nameof(ProductComposition.CustomerId));
            employeeModalManager = modalManagers.Get<Employee>(nameof(ProductComposition.CreatedByEmployeeId));
            
            // 移除自動載入資料，改為在 OnParametersSetAsync 中根據 IsVisible 載入
        }
        catch (Exception)
        {
            await NotificationService.ShowErrorAsync("初始化商品物料清單編輯組件時發生錯誤");
        }
    }
    
    protected override async Task OnParametersSetAsync()
    {
        if (IsVisible && !isDataLoaded)
        {
            // 每次開啟 Modal 時都重置明細資料
            compositionDetails = new List<ProductCompositionDetail>();
            
            await LoadAdditionalDataAsync();
            await InitializeFormFieldsAsync();
            isDataLoaded = true;
        }
        else if (!IsVisible)
        {
            isDataLoaded = false;
        }
    }
    // ===== 資料載入 =====
    private async Task LoadAdditionalDataAsync()
    {
        try
        {
            isDetailDataReady = false;
            
            // 載入所有商品列表（只查詢一次資料庫）
            var allProducts = await ProductService.GetAllAsync();
            
            // 主檔商品選項：顯示所有商品
            availableParentProducts = allProducts.ToList();

            // 明細材料選項：顯示所有商品（但會在 Table 中排除主檔商品）
            availableComponentProducts = allProducts.ToList();
            
            // 載入可選擇的單位列表
            availableUnits = await UnitService.GetAllAsync();
            
            // 載入客戶列表
            availableCustomers = await CustomerService.GetAllAsync();
            
            // 載入員工列表（排除超級管理員）
            var allEmployees = await EmployeeService.GetAllAsync();
            availableEmployees = allEmployees.Where(e => !e.IsSuperAdmin).ToList();
            
            // 載入物料清單類型列表
            availableCompositionCategories = await CompositionCategoryService.GetAllAsync();
            
            // 使用 AutoCompleteConfigHelper 建立配置
            autoCompleteConfig = new AutoCompleteConfigBuilder<ProductComposition>()
                .AddField(nameof(ProductComposition.ParentProductId), "Name", availableParentProducts)
                .AddField(nameof(ProductComposition.CompositionCategoryId), "Name", availableCompositionCategories)
                .AddField(nameof(ProductComposition.CustomerId), "CompanyName", availableCustomers)
                .AddField(nameof(ProductComposition.CreatedByEmployeeId), "Name", availableEmployees)
                .Build();
            
            // 如果是編輯模式，載入現有的明細資料
            if (CompositionId.HasValue && CompositionId.Value > 0)
            {
                await LoadCompositionDetailsAsync();
            }
            else
            {
                compositionDetails = new List<ProductCompositionDetail>();
            }
            
            isDetailDataReady = true;
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"載入資料時發生錯誤：{ex.Message}");
            availableParentProducts = new List<Product>();
            availableComponentProducts = new List<Product>();
            availableUnits = new List<Unit>();
            availableCustomers = new List<Customer>();
            availableEmployees = new List<Employee>();
            availableCompositionCategories = new List<CompositionCategory>();
            compositionDetails = new List<ProductCompositionDetail>();
            isDetailDataReady = true;
        }
    }
    
    /// <summary>
    /// 載入商品合成明細資料
    /// </summary>
    private async Task LoadCompositionDetailsAsync()
    {
        try
        {
            if (!CompositionId.HasValue || CompositionId.Value <= 0)
            {
                compositionDetails = new List<ProductCompositionDetail>();
                return;
            }
            
            // 從資料庫載入明細
            var allDetails = await ProductCompositionDetailService.GetAllAsync();
            compositionDetails = allDetails
                .Where(d => d.ProductCompositionId == CompositionId.Value)
                .ToList();
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"載入商品合成明細時發生錯誤：{ex.Message}");
            compositionDetails = new List<ProductCompositionDetail>();
        }
    }

    private async Task<ProductComposition?> LoadCompositionData()
    {
        try
        {
            if (!CompositionId.HasValue) 
            {
                // 新增模式：建立新的商品物料清單實體並生成編號
                var newComposition = new ProductComposition
                {
                    Status = EntityStatus.Active
                };
                
                // 先應用預填值（業務邏輯需要的欄位，如 ParentProductId）
                PrefilledValueHelper.ApplyPrefilledValues(newComposition, PrefilledValues);
                
                // 🔑 關鍵：Code 在應用預填值後才產生，確保每次都是新的
                // 這樣即使 PrefilledValues 中有舊的 Code，也會被覆蓋為新產生的 Code
                newComposition.Code = await EntityCodeGenerationHelper.GenerateForEntity<ProductComposition, IProductCompositionService>(ProductCompositionService, "BOM");
                
                return newComposition;
            }

            var composition = await ProductCompositionService.GetByIdAsync(CompositionId.Value);            
            
            if (composition == null)
            {
                // 如果找不到商品物料清單，建立新的預設實體
                return new ProductComposition
                {
                    Status = EntityStatus.Active
                };
            }
            return composition;
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"載入商品物料清單資料時發生錯誤：{ex.Message}");
            
            // 設定安全的預設值，確保程式不會崩潰
            return new ProductComposition
            {
                Code = "ERROR",
                Status = EntityStatus.Active
            };
        }
    }

    // ===== 表單初始化 =====
    private async Task InitializeFormFieldsAsync()
    {
        try
        {
            // 準備合成類型選項
            var compositionCategoryOptions = availableCompositionCategories.Select(cc => new SelectOption
            {
                Text = cc.Name,
                Value = cc.Id.ToString()
            }).ToList();

            // 準備客戶選項
            var customerOptions = new List<SelectOption>();
            customerOptions.AddRange(availableCustomers.Select(c => new SelectOption
            {
                Text = $"{c.Code} - {c.CompanyName}".Trim(),
                Value = c.Id.ToString()
            }));

            // 準備員工選項
            var employeeOptions = new List<SelectOption>();
            employeeOptions.AddRange(availableEmployees.Select(e => new SelectOption
            {
                Text = !string.IsNullOrEmpty(e.Name) ? $"{e.Code} - {e.Name}".Trim() : e.Code ?? $"員工{e.Id}",
                Value = e.Id.ToString()
            }));

            formFields = new List<FormFieldDefinition>
            {
                // 基本資訊區段
                new()
                {
                    PropertyName = nameof(ProductComposition.Code),
                    Label = L["Field.CompositionCode"],
                    FieldType = FormFieldType.Text,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.CompositionCode"]],
                    IsRequired = false,
                    HelpText = "合成的唯一識別編號，新增時系統會自動產生，也可手動修改"
                },
                new()
                {
                    PropertyName = nameof(ProductComposition.ParentProductId),
                    Label = L["Entity.Product"],
                    FieldType = FormFieldType.AutoComplete,
                    Placeholder = L["Placeholder.PleaseInputOrSelect", L["Entity.Product"]],
                    IsRequired = true,
                    MinSearchLength = 0,
                    HelpText = "此物料清單所屬的商品（建立後無法變更）"
                },
                new()
                {
                    PropertyName = nameof(ProductComposition.CompositionCategoryId),
                    Label = L["Field.CompositionType"],
                    FieldType = FormFieldType.AutoComplete,
                    Placeholder = L["Placeholder.PleaseSelect", L["Field.CompositionType"]],
                    IsRequired = false,
                    MinSearchLength = 0,
                    HelpText = "選擇組合該商品的清單類型"
                },
                new()
                {
                    PropertyName = nameof(ProductComposition.CustomerId),
                    Label = L["Entity.Customer"],
                    FieldType = FormFieldType.AutoComplete,
                    Placeholder = L["Placeholder.PleaseSelect", L["Entity.Customer"]],
                    IsRequired = false,
                    MinSearchLength = 0,
                    HelpText = "選擇此合成的客戶(選填)",
                    ActionButtons = await GetCustomerActionButtonsAsync()
                },
                new()
                {
                    PropertyName = nameof(ProductComposition.CreatedByEmployeeId),
                    Label = L["Field.CompositionCreator"],
                    FieldType = FormFieldType.AutoComplete,
                    Placeholder = L["Placeholder.PleaseSelect", L["Field.CompositionCreator"]],
                    IsRequired = false,
                    MinSearchLength = 0,
                    HelpText = "選擇建立此合成的員工(選填)",
                    ActionButtons = await GetEmployeeActionButtonsAsync()
                },
                new()
                {
                    PropertyName = nameof(ProductComposition.Specification),
                    Label = L["Field.Spec"],
                    FieldType = FormFieldType.Text,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.Spec"]],
                    IsRequired = false,
                    HelpText = "商品物料清單的規格說明",
                    ContainerCssClass = "col-6"
                },

                FormFieldConfigurationHelper.CreateRemarksField<ProductComposition>(containerCssClass:"col-6")
            };

            formSections = FormSectionHelper<ProductComposition>.Create()
                .AddToSection(FormSectionNames.BasicInfo,
                    pc => pc.Code,
                    pc => pc.ParentProductId,
                    pc => pc.CompositionCategoryId,
                    pc => pc.CustomerId,
                    pc => pc.CreatedByEmployeeId)
                .AddToSection(FormSectionNames.AdditionalData,
                    pc => pc.Specification,
                    pc => pc.Remarks)
                .Build();
        }
        catch (Exception)
        {
            _ = NotificationService.ShowErrorAsync("初始化表單欄位時發生錯誤");
        }
    }

    // ===== 自訂模組 =====
    private List<GenericEditModalComponent<ProductComposition, IProductCompositionService>.CustomModule> GetCustomModules()
    {
        if (editModalComponent == null)
        {
            return new List<GenericEditModalComponent<ProductComposition, IProductCompositionService>.CustomModule>();
        }

        return new List<GenericEditModalComponent<ProductComposition, IProductCompositionService>.CustomModule>
        {
            new GenericEditModalComponent<ProductComposition, IProductCompositionService>.CustomModule
            {
                Order = 1,
                IsVisible = true,
                Content = CreateDetailManagerContent()
            }
        };
    }

    /// <summary>
    /// 創建明細管理器內容的 RenderFragment
    /// </summary>
    private RenderFragment CreateDetailManagerContent() => __builder =>
    {
        <DetailSectionWrapper IsEntityReady="@(editModalComponent?.Entity != null)"
                              IsDetailDataReady="@isDetailDataReady"
                              IsDataAvailable="@(availableComponentProducts != null && availableComponentProducts.Any() && availableUnits != null && availableUnits.Any())"
                              DataUnavailableMessage="無可用的商品或單位資料，請聯繫系統管理員"
                              IsPreconditionMet="@(editModalComponent?.Entity?.ParentProductId > 0)"
                              PreconditionMessage="請先選擇商品後再進行材料清單管理">
            <ProductCompositionTable @ref="detailManager"
                                                     @key="@editModalComponent!.Entity.Id"
                                                     Items="@compositionDetails"
                                                     AvailableProducts="@availableComponentProducts"
                                                     AvailableUnits="@availableUnits"
                                                     ParentEntityId="@(CompositionId ?? 0)"
                                                     ParentProductId="@(editModalComponent!.Entity.ParentProductId)"
                                                     IsReadOnly="false"
                                                     ItemsChanged="@HandleDetailsChanged"
                                                     EmptyMessage="尚未新增材料" />
        </DetailSectionWrapper>
    };
    
    // ===== 明細變更處理 =====
    private void HandleDetailsChanged(List<ProductCompositionDetail> details)
    {
        editModalComponent?.MarkDirty();
        compositionDetails = details;
        StateHasChanged();
    }
    
    // ===== 自訂儲存邏輯 =====
    
    /// <summary>
    /// 自訂儲存邏輯 - 同時儲存主檔和明細
    /// </summary>
    private async Task<bool> SaveCompositionWithDetails(ProductComposition composition)
    {
        try
        {
            if (composition == null)
            {
                await NotificationService.ShowErrorAsync("沒有要儲存的商品物料清單資料");
                return false;
            }
            
            // ========== 第一步：先驗證明細資料（包含 UI 驗證） ==========
            if (detailManager != null)
            {
                var isValid = await detailManager.ValidateAsync();
                if (!isValid)
                {
                    return false;
                }
            }
            
            // ========== 第二步：進階驗證 - 檢查循環參考（成品不能包含自己） ==========
            if (detailManager != null)
            {
                var validDetails = detailManager.GetNonEmptyItems();
                
                // 檢查是否有組件與成品相同（循環參考）
                foreach (var detail in validDetails)
                {
                    if (detail.ComponentProductId == composition.ParentProductId)
                    {
                        await NotificationService.ShowErrorAsync("明細驗證失敗：組件不能是成品本身（會造成循環參考）");
                        return false;
                    }
                }
            }
            
            // ========== 第三步：儲存主檔（驗證都通過後才儲存） ==========
            ProductComposition? savedComposition = null;
            bool isNewRecord = !CompositionId.HasValue || CompositionId.Value == 0;
            
            if (CompositionId.HasValue && CompositionId.Value > 0)
            {
                // 更新模式
                var updateResult = await ProductCompositionService.UpdateAsync(composition);
                if (updateResult.IsSuccess)
                {
                    savedComposition = updateResult.Data;
                }
                else
                {
                    await NotificationService.ShowErrorAsync($"更新商品物料清單主檔失敗：{updateResult.ErrorMessage}");
                    return false;
                }
            }
            else
            {
                // 新增模式
                var createResult = await ProductCompositionService.CreateAsync(composition);
                if (createResult.IsSuccess && createResult.Data != null)
                {
                    savedComposition = createResult.Data;
                }
                else
                {
                    await NotificationService.ShowErrorAsync($"新增商品物料清單主檔失敗：{createResult.ErrorMessage}");
                    return false;
                }
            }
            
            if (savedComposition == null)
            {
                await NotificationService.ShowErrorAsync("儲存商品物料清單主檔失敗");
                return false;
            }
            
            // ========== 第四步：儲存明細（循環參考驗證已通過） ==========
            if (detailManager != null)
            {
                var validDetails = detailManager.GetNonEmptyItems();
                
                // 設定主檔 ID 並清除 Navigation Properties
                foreach (var detail in validDetails)
                {
                    detail.ProductCompositionId = savedComposition.Id;
                    
                    // 清除 Navigation Properties（避免 EF Core 追蹤錯誤）
                    detail.ProductComposition = null!;
                    detail.ComponentProduct = null!;
                    detail.Unit = null;
                }
                
                // 刪除已標記刪除的明細
                var deletedIds = detailManager.GetDeletedDetailIds();
                foreach (var deletedId in deletedIds)
                {
                    var deleteResult = await ProductCompositionDetailService.DeleteAsync(deletedId);
                    if (!deleteResult.IsSuccess)
                    {
                        await NotificationService.ShowErrorAsync($"刪除明細失敗：{deleteResult.ErrorMessage}");
                        return false;
                    }
                }
                
                // 儲存或更新明細
                foreach (var detail in validDetails)
                {
                    if (detail.Id > 0)
                    {
                        var updateResult = await ProductCompositionDetailService.UpdateAsync(detail);
                        if (!updateResult.IsSuccess)
                        {
                            await NotificationService.ShowErrorAsync($"更新明細失敗：{updateResult.ErrorMessage}");
                            return false;
                        }
                    }
                    else
                    {
                        var createResult = await ProductCompositionDetailService.CreateAsync(detail);
                        if (!createResult.IsSuccess)
                        {
                            await NotificationService.ShowErrorAsync($"新增明細失敗：{createResult.ErrorMessage}");
                            return false;
                        }
                    }
                }
            }
            
            // ========== 第五步：更新組件參數（從新增模式轉為編輯模式） ==========
            if (isNewRecord && savedComposition.Id > 0)
            {
                CompositionId = savedComposition.Id;
            }
            
            return true;
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"儲存商品物料清單時發生錯誤：{ex.Message}");
            return false;
        }
    }

    // ===== 公開方法 (供父組件調用) =====
    public Task ShowAddModal() => editModalComponent!.ShowAddModal();
    public Task ShowEditModal(int id) => editModalComponent!.ShowEditModal(id);
    // ===== Modal 管理器配置方法 =====
    
    // ===== ActionButton 產生方法 =====
    
    /// <summary>
    /// 產生客戶操作按鈕 - 使用統一 Helper
    /// </summary>
    private async Task<List<FieldActionButton>> GetCustomerActionButtonsAsync()
    {
        return await ActionButtonHelper.GenerateFieldActionButtonsAsync(
            editModalComponent, 
            customerModalManager, 
            nameof(ProductComposition.CustomerId)
        );
    }
    
    /// <summary>
    /// 產生製單人員操作按鈕 - 使用統一 Helper
    /// </summary>
    private async Task<List<FieldActionButton>> GetEmployeeActionButtonsAsync()
    {
        return await ActionButtonHelper.GenerateFieldActionButtonsAsync(
            editModalComponent, 
            employeeModalManager, 
            nameof(ProductComposition.CreatedByEmployeeId)
        );
    }
    
    // ===== Modal 事件包裝器方法 =====
    
}
