@page "/accountsReceivableSetoff"
@page "/accountsPayableSetoff"  
@inject ISetoffDocumentService SetoffDocumentService
@inject ICompanyService CompanyService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer
@inject INotificationService NotificationService
@inject IStringLocalizer<SharedResource> L
@implements IDisposable

<GenericIndexPageComponent TEntity="SetoffDocument" 
                      TService="ISetoffDocumentService"
                      Service="@SetoffDocumentService"
                      EntityBasePath="/setoffDocuments"
                      PageTitle="@PageTitle"
                      EntityName="@L["Entity.SetoffDocument"]"
                      FilterDefinitions="@filterDefinitions"
                      ColumnDefinitions="@columnDefinitions"
                      DataLoader="@LoadSetoffDocumentsAsync"
                      FilterApplier="@ApplySetoffDocumentFilters"
                      GetEntityDisplayName="@(setoffDoc => setoffDoc.Code)"
                      RequiredPermission="SetoffDocument.Read"
                      RequiredModule="FinancialManagement"
                      OnAddClick="@modalHandler.ShowAddModalAsync"
                      OnRowClick="@modalHandler.ShowEditModalAsync"
                      @ref="indexComponent" />

<SetoffDocumentEditModalComponent IsVisible="@showEditModal"
                                 IsVisibleChanged="@((bool visible) => showEditModal = visible)"
                                 SetoffDocumentId="@editingSetoffDocumentId"
                                 DefaultSetoffType="@GetDefaultSetoffType()"
                                 OnSetoffDocumentSaved="@modalHandler.OnEntitySavedAsync"
                                 OnCancel="@modalHandler.OnModalCancelAsync" />

@code {
    // 組件參考
    private GenericIndexPageComponent<SetoffDocument, ISetoffDocumentService> indexComponent = default!;
    
    // Modal 相關狀態
    private bool showEditModal = false;
    private int? editingSetoffDocumentId = null;
    
    // Modal 處理器
    private ModalHandler<SetoffDocument, GenericIndexPageComponent<SetoffDocument, ISetoffDocumentService>> modalHandler = default!;
    
    // 選項清單
    private List<Company> companies = new();
    
    // 欄位配置
    private SetoffDocumentFieldConfiguration fieldConfiguration = default!;
    
    // 配置相關
    private List<SearchFilterDefinition> filterDefinitions = new();
    private List<TableColumnDefinition> columnDefinitions = new();
    private List<BreadcrumbItem> breadcrumbItems = new();
    
    // 追蹤當前路由以偵測變更
    private string? currentRoute;
    
    // 頁面標題和副標題 - 使用計算屬性以便即時響應路由變更
    private string PageTitle
    {
        get
        {
            var defaultSetoffType = GetDefaultSetoffType();
            return defaultSetoffType switch
            {
                SetoffType.AccountsReceivable => "應收帳款沖款單",
                SetoffType.AccountsPayable => "應付帳款沖款單",
                _ => "沖款單維護"
            };
        }
    }
    
    private string PageSubtitle
    {
        get
        {
            var defaultSetoffType = GetDefaultSetoffType();
            return defaultSetoffType switch
            {
                SetoffType.AccountsReceivable => "管理客戶應收帳款沖款作業",
                SetoffType.AccountsPayable => "管理廠商應付帳款沖款作業",
                _ => "管理應收與應付帳款沖款作業"
            };
        }
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // 初始化 Modal 處理器
            modalHandler = ModalHelper.CreateModalHandler<SetoffDocument, GenericIndexPageComponent<SetoffDocument, ISetoffDocumentService>>(
                id => editingSetoffDocumentId = id,
                visible => showEditModal = visible,
                () => indexComponent,
                StateHasChanged,
                GetType());
            
            // 監聽 URL 變更事件，確保標題和副標題能即時更新
            NavigationManager.LocationChanged += OnLocationChanged;
            
            // 記錄當前路由
            currentRoute = NavigationManager.Uri;
            
            await InitializeBreadcrumbsAsync();
            
            // 載入公司資料
            await LoadCompaniesAsync();
            
            // 建立欄位配置（在載入公司資料後，並傳遞 NotificationService）
            fieldConfiguration = new SetoffDocumentFieldConfiguration(companies, NotificationService);
            
            // 使用欄位配置建立篩選器和表格欄位
            filterDefinitions = fieldConfiguration.BuildFilters();
            columnDefinitions = fieldConfiguration.BuildColumns();
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(OnInitializedAsync), GetType(), additionalData: "初始化沖款單頁面失敗");
            await NotificationService.ShowErrorAsync("初始化沖款單頁面失敗");
        }
    }

    /// <summary>
    /// 當路由參數變更時觸發，確保頁面標題和資料正確更新
    /// </summary>
    protected override async Task OnParametersSetAsync()
    {
        try
        {
            // 檢查路由是否真的變更了
            var newRoute = NavigationManager.Uri;
            if (currentRoute != newRoute)
            {
                currentRoute = newRoute;
                
                // 強制重新渲染以更新頁面標題和副標題（使用計算屬性）
                StateHasChanged();
                
                // 重新載入資料以顯示對應類型的沖款單
                if (indexComponent != null)
                {
                    await indexComponent.Refresh();
                }
            }
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(OnParametersSetAsync), GetType(), additionalData: "更新頁面參數失敗");
        }
    }

    /// <summary>
    /// 處理 URL 變更事件
    /// </summary>
    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        // 當 URL 變更時，更新頁面標題和重新載入資料
        InvokeAsync(async () =>
        {
            // 更新當前路由
            currentRoute = NavigationManager.Uri;
            
            // 強制重新渲染
            StateHasChanged();
            
            // 重新載入資料以顯示對應類型的沖款單
            if (indexComponent != null)
            {
                await indexComponent.Refresh();
            }
        });
    }

    /// <summary>
    /// 組件銷毀時移除事件監聽
    /// </summary>
    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

    private async Task InitializeBreadcrumbsAsync() => breadcrumbItems = await BreadcrumbHelper.CreateThreeLevelAsync("財務管理", "沖款單維護", "/financial", NotificationService, GetType());

    // 載入沖款單資料
    private async Task<List<SetoffDocument>> LoadSetoffDocumentsAsync()
    {
        try
        {
            var allSetoffDocuments = await SetoffDocumentService.GetAllAsync();
            
            // 根據當前 URL 過濾對應類型的沖款單
            var defaultSetoffType = GetDefaultSetoffType();
            if (defaultSetoffType.HasValue)
            {
                return allSetoffDocuments.Where(s => s.SetoffType == defaultSetoffType.Value).ToList();
            }
            
            // 如果沒有指定類型，返回所有資料
            return allSetoffDocuments;
        }
        catch (Exception ex)
        {
            // 記錄錯誤到資料庫並通知使用者
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(LoadSetoffDocumentsAsync), GetType(), additionalData: "載入沖款單資料失敗");
            await NotificationService.ShowErrorAsync("載入沖款單資料失敗");
            // 設定安全的預設值
            return new List<SetoffDocument>();
        }
    }

    // 載入公司資料
    private async Task LoadCompaniesAsync() => companies = await DataLoaderHelper.LoadAsync(CompanyService.GetAllAsync, "公司", NotificationService, GetType());

    private IQueryable<SetoffDocument> ApplySetoffDocumentFilters(SearchFilterModel searchModel, IQueryable<SetoffDocument> query)
    {
        // 根據當前 URL 過濾對應類型的沖款單
        var defaultSetoffType = GetDefaultSetoffType();
        if (defaultSetoffType.HasValue)
        {
            query = query.Where(s => s.SetoffType == defaultSetoffType.Value);
        }
        
        // 確保 fieldConfiguration 已初始化（避免與 GenericIndexPageComponent 初始化的競爭條件）
        if (fieldConfiguration == null)
        {
            // 如果配置未初始化，回傳基本排序的查詢
            return query.OrderByDescending(s => s.SetoffDate).ThenByDescending(s => s.Code);
        }

        return fieldConfiguration.ApplyFilters(searchModel, query, nameof(ApplySetoffDocumentFilters), GetType());
    }

    /// <summary>
    /// 根據當前 URL 取得預設的沖款類型
    /// </summary>
    private SetoffType? GetDefaultSetoffType()
    {
        var currentUri = NavigationManager.Uri;
        
        if (currentUri.Contains("/accountsReceivableSetoff", StringComparison.OrdinalIgnoreCase))
        {
            return SetoffType.AccountsReceivable;
        }
        else if (currentUri.Contains("/accountsPayableSetoff", StringComparison.OrdinalIgnoreCase))
        {
            return SetoffType.AccountsPayable;
        }
        
        return null; // 如果是其他 URL，不設定預設值
    }
}
