@* 可重用的貨幣編輯組件 - 可在任何頁面中嵌入 *@
@inject ICurrencyService CurrencyService
@inject INotificationService NotificationService
@inject IStringLocalizer<SharedResource> L

<GenericEditModalComponent TEntity="Currency"
                          TService="ICurrencyService"
                          @ref="editModalComponent"
                          IsVisible="@IsVisible"
                          IsVisibleChanged="@IsVisibleChanged"
                          @bind-Id="@CurrencyId"
                          Service="@CurrencyService"
                          EntityName="@L["Entity.Currency"]"
                          EntityNamePlural="@L["Entity.Currency"]"
                          ModalTitle="@(CurrencyId.HasValue ? L["Message.EditTitle", L["Entity.Currency"]].ToString() : L["Message.CreateTitle", L["Entity.Currency"]].ToString())"
                          Size="GenericEditModalComponent<Currency, ICurrencyService>.ModalSize.Desktop"
                          UseGenericForm="true"
                          FormFields="@formFields"
                          FormSections="@formSections"
                          DataLoader="@LoadCurrencyData"
                          UseGenericSave="true"
                          SaveSuccessMessage="@(CurrencyId.HasValue ? L["Message.UpdateSuccess", L["Entity.Currency"]].ToString() : L["Message.CreateSuccess", L["Entity.Currency"]].ToString())"
                          SaveFailureMessage="@L["Message.SaveFailure", L["Entity.Currency"]]"
                          RequiredPermission="@PermissionRegistry.Currency.Read"
                          OnEntitySaved="@OnCurrencySaved"
                          OnCancel="@OnCancel" />

@code {
    // ===== 參數 =====
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public int? CurrencyId { get; set; }
    [Parameter] public EventCallback<Currency> OnCurrencySaved { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public Dictionary<string, object?>? PrefilledValues { get; set; }

    // ===== 內部狀態 =====
    private GenericEditModalComponent<Currency, ICurrencyService>? editModalComponent;
    private List<FormFieldDefinition> formFields = new();
    private Dictionary<string, string> formSections = new();

    // ===== 生命週期 =====
    protected override void OnParametersSet()
    {
        if (IsVisible)
        {
            InitializeFormFields();
        }
    }
    private Task<Currency?> LoadCurrencyData()
        => EditDataLoaderHelper.LoadOrCreateAsync<Currency, ICurrencyService>(
            CurrencyId, CurrencyService, NotificationService, "貨幣", "CUR", PrefilledValues,
            c => { c.Name = string.Empty; c.IsBaseCurrency = false; c.ExchangeRate = 1m; });
    // ===== 表單初始化 =====
    private void InitializeFormFields()
    {
        try
        {
            formFields = new List<FormFieldDefinition>
            {
                // 基本資訊區段
                new()
                {
                    PropertyName = nameof(Currency.Code),
                    Label = L["Field.CurrencyCode"],
                    FieldType = FormFieldType.Text,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.CurrencyCode"]],
                    IsRequired = true,
                    HelpText = "貨幣的唯一識別編號，建議使用 ISO 4217 標準編號"
                },
                new()
                {
                    PropertyName = nameof(Currency.Name),
                    Label = L["Field.CurrencyName"],
                    FieldType = FormFieldType.Text,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.CurrencyName"]],
                    IsRequired = true,
                    HelpText = "貨幣的正式名稱，將顯示在系統各處"
                },
                new()
                {
                    PropertyName = nameof(Currency.Symbol),
                    Label = L["Field.CurrencySymbol"],
                    FieldType = FormFieldType.Text,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.CurrencySymbol"]],
                    IsRequired = false,
                    HelpText = "貨幣的符號表示，用於金額顯示"
                },
                new()
                {
                    PropertyName = nameof(Currency.IsBaseCurrency),
                    Label = L["Field.IsBaseCurrency"],
                    FieldType = FormFieldType.Checkbox,
                    IsRequired = false,
                    HelpText = "標記此貨幣是否為系統的基準貨幣 (本位幣)"
                },
                new()
                {
                    PropertyName = nameof(Currency.ExchangeRate),
                    Label = L["Field.ExchangeRate"],
                    FieldType = FormFieldType.Number,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.ExchangeRate"]],
                    IsRequired = true,
                    HelpText = "相對於本位幣的匯率 (例如: 1 USD = 30.5 TWD 時，USD 的匯率為 30.5)",
                    Step = 0.0001m,
                    Min = 0
                },

                FormFieldConfigurationHelper.CreateRemarksField<Currency>()
            };

            formSections = FormSectionHelper<Currency>.Create()
                .AddToSection(FormSectionNames.BasicInfo,
                    c => c.Code,
                    c => c.Name,
                    c => c.Symbol)
                .AddCustomFields("匯率設定",
                    nameof(Currency.IsBaseCurrency),
                    nameof(Currency.ExchangeRate))
                .AddToSection(FormSectionNames.AdditionalData,
                    c => c.Remarks)
                .Build();
        }
        catch (Exception)
        {
            _ = NotificationService.ShowErrorAsync("初始化表單欄位時發生錯誤");
        }
    }

    // ===== 公開方法 (供父組件調用) =====
    public Task ShowAddModal() => editModalComponent!.ShowAddModal();
    public Task ShowEditModal(int id) => editModalComponent!.ShowEditModal(id);
}
