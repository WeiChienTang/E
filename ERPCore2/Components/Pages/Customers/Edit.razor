@page "/customers/{CustomerId:int}/edit"
@inject ICustomerService CustomerService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@using ERPCore2.Services.Customers.Interfaces
@using ERPCore2.Data.Entities

<PageTitle>編輯客戶</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user-edit me-2"></i>編輯客戶
                        @if (!string.IsNullOrWhiteSpace(customerCode))
                        {
                            <small class="text-muted">(@customerCode)</small>
                        }
                    </h3>
                    <button class="btn btn-outline-secondary" @onclick="NavigateBack">
                        <i class="fas fa-arrow-left me-2"></i>返回列表
                    </button>
                </div>
                
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">載入中...</span>
                            </div>
                        </div>
                    }
                    else if (!string.IsNullOrWhiteSpace(notFoundMessage))
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@notFoundMessage
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary" @onclick="NavigateBack">
                                <i class="fas fa-arrow-left me-2"></i>返回列表
                            </button>
                        </div>
                    }
                    else
                    {
                        <EditForm Model="@customer" OnValidSubmit="@HandleSubmit">
                            <DataAnnotationsValidator />
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="customerCode" class="form-label">
                                            客戶代碼 <span class="text-danger">*</span>
                                        </label>                                        <InputText id="customerCode" class="form-control" @bind-Value="customer.CustomerCode" />
                                        <ValidationMessage For="@(() => customer.CustomerCode)" class="text-danger" />
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="companyName" class="form-label">
                                            公司名稱 <span class="text-danger">*</span>
                                        </label>                                        <InputText id="companyName" class="form-control" @bind-Value="customer.CompanyName" />
                                        <ValidationMessage For="@(() => customer.CompanyName)" class="text-danger" />
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="contactPerson" class="form-label">聯絡人</label>                                        
                                        <InputText id="contactPerson" class="form-control" @bind-Value="customer.ContactPerson" />
                                        <ValidationMessage For="@(() => customer.ContactPerson)" class="text-danger" />
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="taxNumber" class="form-label">統一編號</label>                                        
                                        <InputText id="taxNumber" class="form-control" @bind-Value="customer.TaxNumber" />
                                        <ValidationMessage For="@(() => customer.TaxNumber)" class="text-danger" />
                                    </div>
                                </div>
                            </div>
                              <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="customerType" class="form-label">客戶類型ID</label>
                                        <InputNumber id="customerType" class="form-control" @bind-Value="customer.CustomerTypeId" />
                                        <ValidationMessage For="@(() => customer.CustomerTypeId)" class="text-danger" />
                                        <small class="text-muted">暫時請直接輸入數字 ID</small>
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="industry" class="form-label">行業別ID</label>
                                        <InputNumber id="industry" class="form-control" @bind-Value="customer.IndustryId" />
                                        <ValidationMessage For="@(() => customer.IndustryId)" class="text-danger" />
                                        <small class="text-muted">暫時請直接輸入數字 ID</small>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="status" class="form-label">狀態</label>                                        
                                        <InputSelect id="status" class="form-select" @bind-Value="customer.Status">
                                            <option value="@EntityStatus.Active">啟用</option>
                                            <option value="@EntityStatus.Inactive">停用</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => customer.Status)" class="text-danger" />
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="modifiedBy" class="form-label">修改者</label>                                        
                                        <InputText id="modifiedBy" class="form-control" @bind-Value="customer.ModifiedBy" />
                                        <ValidationMessage For="@(() => customer.ModifiedBy)" class="text-danger" />
                                    </div>
                                </div>
                            </div>
                              @if (!string.IsNullOrWhiteSpace(errorMessage))
                            {
                                <div class="alert alert-danger" role="alert">
                                    <i class="fas fa-exclamation-triangle me-2"></i>@errorMessage
                                </div>
                            }
                            
                            <div class="row">
                                <div class="col-12">
                                    <div class="d-flex justify-content-end gap-2">
                                        <button type="button" class="btn btn-outline-secondary" @onclick="NavigateBack">
                                            <i class="fas fa-times me-2"></i>取消
                                        </button>
                                        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                            @if (isSubmitting)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                            }
                                            else
                                            {
                                                <i class="fas fa-save me-2"></i>
                                            }
                                            更新
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 載入 Font Awesome 圖示 -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

@code {
    [Parameter] public int CustomerId { get; set; }
      private Customer customer = new();
    
    private bool isLoading = true;
    private bool isSubmitting = false;
    private string errorMessage = string.Empty;
    private string notFoundMessage = string.Empty;
    private string customerCode = string.Empty;
    
    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }
      private async Task LoadDataAsync()
    {
        try
        {
            var existingCustomer = await CustomerService.GetByIdAsync(CustomerId);
            
            if (existingCustomer == null)
            {
                notFoundMessage = "找不到指定的客戶資料";
                return;
            }
            
            // 填入現有資料
            customerCode = existingCustomer.CustomerCode;
            customer = existingCustomer;
            customer.ModifiedBy = "系統管理員"; // 可以從認證系統獲取
        }
        catch (Exception ex)
        {
            errorMessage = $"載入資料時發生錯誤: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
      private async Task HandleSubmit()
    {
        if (isSubmitting) return;
        
        try
        {
            isSubmitting = true;
            errorMessage = string.Empty;
            
            var result = await CustomerService.UpdateAsync(customer);
            
            if (result.IsSuccess)
            {
                await JSRuntime.InvokeVoidAsync("alert", "客戶更新成功！");
                Navigation.NavigateTo("/customers");
            }
            else
            {
                errorMessage = result.ErrorMessage;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"更新客戶時發生錯誤: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
    
    private void NavigateBack()
    {
        Navigation.NavigateTo("/customers");
    }
}
