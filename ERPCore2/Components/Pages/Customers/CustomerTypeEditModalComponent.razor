@* 可重用的客戶類型編輯組件 - 可在任何頁面中嵌入 *@
@inject ICustomerTypeService CustomerTypeService
@inject INotificationService NotificationService

<GenericEditModalComponent TEntity="CustomerType" 
                          TService="ICustomerTypeService"
                          @ref="editModalComponent"
                          IsVisible="@IsVisible"
                          IsVisibleChanged="@IsVisibleChanged"
                          Id="@CustomerTypeId"
                          Service="@CustomerTypeService"
                          EntityName="客戶類型"
                          EntityNamePlural="客戶類型"
                          ModalTitle="@(CustomerTypeId.HasValue ? "編輯客戶類型" : "新增客戶類型")"
                          Size="GenericEditModalComponent<CustomerType, ICustomerTypeService>.ModalSize.Desktop"
                          UseGenericForm="true"
                          FormFields="@GetFormFields()"
                          FormSections="@formSections"
                          DataLoader="@LoadCustomerTypeData"
                          AdditionalDataLoader="@LoadAdditionalDataAsync"
                          UseGenericSave="true"
                          SaveSuccessMessage="@(CustomerTypeId.HasValue ? "客戶類型更新成功" : "客戶類型新增成功")"
                          SaveFailureMessage="客戶類型儲存失敗"
                          RequiredPermission="CustomerType.Read"
                          OnSaveSuccess="@HandleSaveSuccess"
                          OnCancel="@HandleCancel" />

@code {
    // ===== 參數 =====
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public int? CustomerTypeId { get; set; }
    [Parameter] public EventCallback<CustomerType> OnCustomerTypeSaved { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public Dictionary<string, object?>? PrefilledValues { get; set; }

    // ===== 內部狀態 =====
    private GenericEditModalComponent<CustomerType, ICustomerTypeService>? editModalComponent;
    private List<FormFieldDefinition> formFields = new();
    private Dictionary<string, string> formSections = new();

    // ===== 生命週期 =====
    protected override async Task OnParametersSetAsync()
    {
        if (IsVisible)
        {
            await LoadAdditionalDataAsync();
            InitializeFormFields();
        }
    }

    // ===== 事件處理 =====
    private async Task HandleSaveSuccess()
    {
        try
        {
            // 如果父組件需要知道客戶類型已儲存
            if (OnCustomerTypeSaved.HasDelegate && editModalComponent?.Entity != null)
            {
                await OnCustomerTypeSaved.InvokeAsync(editModalComponent.Entity);
            }

            // 關閉 Modal
            await CloseModal();
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"處理儲存成功事件時發生錯誤：{ex.Message}");
        }
    }

    private async Task HandleCancel()
    {
        try
        {
            if (OnCancel.HasDelegate)
            {
                await OnCancel.InvokeAsync();
            }

            await CloseModal();
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"處理取消事件時發生錯誤：{ex.Message}");
        }
    }

    private async Task CloseModal()
    {
        if (IsVisibleChanged.HasDelegate)
        {
            await IsVisibleChanged.InvokeAsync(false);
        }
    }

    // ===== 資料載入 =====
    private async Task LoadAdditionalDataAsync()
    {
        try
        {
            // 客戶類型通常不需要載入額外資料，但保留此方法以備未來擴展
            await Task.CompletedTask;
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"載入客戶類型資料時發生錯誤：{ex.Message}");
        }
    }

    private async Task<CustomerType?> LoadCustomerTypeData()
    {
        try
        {
            if (!CustomerTypeId.HasValue) 
            {
                // 新增模式：建立新的客戶類型實體並生成代碼
                var newCustomerType = new CustomerType
                {
                    TypeName = string.Empty,
                    Code = await GenerateCustomerTypeCodeAsync(),
                    Status = EntityStatus.Active
                };
                
                // 應用預填值
                if (PrefilledValues != null)
                {
                    foreach (var kvp in PrefilledValues)
                    {
                        var property = typeof(CustomerType).GetProperty(kvp.Key);
                        if (property != null && property.CanWrite && kvp.Value != null)
                        {
                            try
                            {
                                // 轉換值的類型
                                var convertedValue = Convert.ChangeType(kvp.Value, property.PropertyType);
                                property.SetValue(newCustomerType, convertedValue);
                            }
                            catch (Exception)
                            {
                                // 忽略轉換失敗的值
                            }
                        }
                    }
                }
                
                return newCustomerType;
            }

            var customerType = await CustomerTypeService.GetByIdAsync(CustomerTypeId.Value);            
            
            if (customerType == null)
            {
                // 如果找不到客戶類型，建立新的預設客戶類型
                return new CustomerType
                {
                    Status = EntityStatus.Active
                };
            }
            return customerType;
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"載入客戶類型資料時發生錯誤：{ex.Message}");
            
            // 設定安全的預設值，確保程式不會崩潰
            return new CustomerType
            {
                Code = "ERROR",
                TypeName = "ERROR",
                Status = EntityStatus.Active
            };
        }
    }

    // ===== 表單初始化 =====
    private void InitializeFormFields()
    {
        try
        {
            formFields = new List<FormFieldDefinition>
            {
                // 基本資訊區段
                new()
                {
                    PropertyName = nameof(CustomerType.Code),
                    Label = "客戶類型代碼",
                    FieldType = FormFieldType.Text,
                    Placeholder = "請輸入客戶類型代碼",
                    IsRequired = true,
                    HelpText = "客戶類型的唯一識別代碼，新增時系統會自動產生，也可手動修改"
                },
                new()
                {
                    PropertyName = nameof(CustomerType.TypeName),
                    Label = "類型名稱",
                    FieldType = FormFieldType.Text,
                    Placeholder = "請輸入類型名稱",
                    IsRequired = true,
                    HelpText = "客戶類型的正式名稱，將顯示在系統各處"
                },
                
                FormFieldConfigurationHelper.CreateRemarksField<CustomerType>()
            };

            formSections = new Dictionary<string, string>
            {
                { nameof(CustomerType.Code), "基本資訊" },
                { nameof(CustomerType.TypeName), "基本資訊" },
                { nameof(CustomerType.Remarks), "額外資料" }
            };
        }
        catch (Exception)
        {
            _ = NotificationService.ShowErrorAsync("初始化表單欄位時發生錯誤");
        }
    }

    private List<FormFieldDefinition> GetFormFields()
    {
        return formFields;
    }

    // ===== 輔助方法 =====
    private async Task<string> GenerateCustomerTypeCodeAsync()
    {
        return await CodeGenerationHelper.GenerateEntityCodeAsync(
            CustomerTypeService,
            "CTYPE",
            (service, code, excludeId) => service.IsCustomerTypeCodeExistsAsync(code, excludeId)
        );
    }

    // ===== 公開方法 (供父組件調用) =====

    /// <summary>
    /// 開啟新增客戶類型 Modal
    /// </summary>
    public async Task ShowAddModal()
    {
        CustomerTypeId = null;
        if (IsVisibleChanged.HasDelegate)
        {
            await IsVisibleChanged.InvokeAsync(true);
        }
    }

    /// <summary>
    /// 開啟編輯客戶類型 Modal
    /// </summary>
    public async Task ShowEditModal(int customerTypeId)
    {
        CustomerTypeId = customerTypeId;
        if (IsVisibleChanged.HasDelegate)
        {
            await IsVisibleChanged.InvokeAsync(true);
        }
    }
}
