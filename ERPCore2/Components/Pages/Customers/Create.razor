@page "/customers/create"
@inject CustomerService CustomerService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>新增客戶</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user-plus me-2"></i>新增客戶
                    </h3>
                    <button class="btn btn-outline-secondary" @onclick="NavigateBack">
                        <i class="fas fa-arrow-left me-2"></i>返回列表
                    </button>
                </div>
                
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">載入中...</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <EditForm Model="@request" OnValidSubmit="@HandleSubmit">
                            <DataAnnotationsValidator />
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="customerCode" class="form-label">
                                            客戶代碼 <span class="text-danger">*</span>
                                        </label>
                                        <InputText id="customerCode" class="form-control" @bind-Value="request.CustomerCode" />
                                        <ValidationMessage For="@(() => request.CustomerCode)" class="text-danger" />
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="companyName" class="form-label">
                                            公司名稱 <span class="text-danger">*</span>
                                        </label>
                                        <InputText id="companyName" class="form-control" @bind-Value="request.CompanyName" />
                                        <ValidationMessage For="@(() => request.CompanyName)" class="text-danger" />
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="contactPerson" class="form-label">聯絡人</label>
                                        <InputText id="contactPerson" class="form-control" @bind-Value="request.ContactPerson" />
                                        <ValidationMessage For="@(() => request.ContactPerson)" class="text-danger" />
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="taxNumber" class="form-label">統一編號</label>
                                        <InputText id="taxNumber" class="form-control" @bind-Value="request.TaxNumber" />
                                        <ValidationMessage For="@(() => request.TaxNumber)" class="text-danger" />
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="customerType" class="form-label">客戶類型</label>
                                        <InputSelect id="customerType" class="form-select" @bind-Value="request.CustomerTypeId">
                                            <option value="">請選擇客戶類型</option>
                                            @foreach (var type in customerTypes)
                                            {
                                                <option value="@type.CustomerTypeId">@type.TypeName</option>
                                            }
                                        </InputSelect>
                                        <ValidationMessage For="@(() => request.CustomerTypeId)" class="text-danger" />
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="industry" class="form-label">行業別</label>
                                        <InputSelect id="industry" class="form-select" @bind-Value="request.IndustryId">
                                            <option value="">請選擇行業別</option>
                                            @foreach (var industry in industries)
                                            {
                                                <option value="@industry.IndustryId">@industry.IndustryName</option>
                                            }
                                        </InputSelect>
                                        <ValidationMessage For="@(() => request.IndustryId)" class="text-danger" />
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="createdBy" class="form-label">建立者</label>
                                        <InputText id="createdBy" class="form-control" @bind-Value="request.CreatedBy" />
                                        <ValidationMessage For="@(() => request.CreatedBy)" class="text-danger" />
                                    </div>
                                </div>
                            </div>
                            
                            @if (!string.IsNullOrWhiteSpace(errorMessage))
                            {
                                <div class="alert alert-danger" role="alert">
                                    <i class="fas fa-exclamation-triangle me-2"></i>@errorMessage
                                </div>
                            }
                            
                            @if (validationErrors.Any())
                            {
                                <div class="alert alert-danger" role="alert">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <strong>請修正以下錯誤：</strong>
                                    <ul class="mb-0 mt-2">
                                        @foreach (var error in validationErrors)
                                        {
                                            <li>@error</li>
                                        }
                                    </ul>
                                </div>
                            }
                            
                            <div class="row">
                                <div class="col-12">
                                    <div class="d-flex justify-content-end gap-2">
                                        <button type="button" class="btn btn-outline-secondary" @onclick="NavigateBack">
                                            <i class="fas fa-times me-2"></i>取消
                                        </button>
                                        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                            @if (isSubmitting)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                            }
                                            else
                                            {
                                                <i class="fas fa-save me-2"></i>
                                            }
                                            儲存
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 載入 Font Awesome 圖示 -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

@code {
    private CreateCustomerRequest request = new();
    private List<CustomerType> customerTypes = new();
    private List<Industry> industries = new();
    
    private bool isLoading = true;
    private bool isSubmitting = false;
    private string errorMessage = string.Empty;
    private List<string> validationErrors = new();
    
    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }
    
    private async Task LoadDataAsync()
    {
        try
        {
            var customerTypesTask = CustomerService.GetAllCustomerTypesAsync();
            var industriesTask = CustomerService.GetAllIndustriesAsync();
            
            await Task.WhenAll(customerTypesTask, industriesTask);
            
            customerTypes = await customerTypesTask;
            industries = await industriesTask;
            
            // 設定預設值
            request.CreatedBy = "系統管理員"; // 可以從認證系統獲取
        }
        catch (Exception ex)
        {
            errorMessage = $"載入資料時發生錯誤: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
    
    private async Task HandleSubmit()
    {
        if (isSubmitting) return;
        
        try
        {
            isSubmitting = true;
            errorMessage = string.Empty;
            validationErrors.Clear();
            
            var result = await CustomerService.CreateAsync(request);
            
            if (result.IsSuccess)
            {
                await JSRuntime.InvokeVoidAsync("alert", "客戶新增成功！");
                Navigation.NavigateTo("/customers");
            }
            else
            {
                if (result.ValidationErrors.Any())
                {
                    validationErrors = result.ValidationErrors;
                }
                else
                {
                    errorMessage = result.ErrorMessage;
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"新增客戶時發生錯誤: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
    
    private void NavigateBack()
    {
        Navigation.NavigateTo("/customers");
    }
}
