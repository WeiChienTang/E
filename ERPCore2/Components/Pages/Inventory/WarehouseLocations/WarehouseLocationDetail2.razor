@page "/inventory/warehouse-locations/{id:int}"
@using ERPCore2.Data.Entities
@using ERPCore2.Services.Inventory
@inject IWarehouseLocationService WarehouseLocationService
@inject NavigationManager Navigation

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-diagram-3 me-2"></i>庫位詳細資料
                        </h4>
                        <div class="btn-group">
                            <button class="btn btn-secondary" @onclick="NavigateToEdit">
                                <i class="bi bi-pencil me-1"></i>編輯
                            </button>
                            <button class="btn btn-outline-secondary" @onclick="NavigateToList">
                                <i class="bi bi-arrow-left me-1"></i>返回列表
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (warehouseLocation == null)
                    {
                        <div class="d-flex justify-content-center align-items-center" style="height: 300px;">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">載入中...</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3">基本資訊</h5>
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <td class="fw-bold text-muted" style="width: 120px;">庫位代碼：</td>
                                            <td>@warehouseLocation.LocationCode</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold text-muted">庫位名稱：</td>
                                            <td>@warehouseLocation.LocationName</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold text-muted">所屬倉庫：</td>
                                            <td>@(warehouseLocation.Warehouse?.WarehouseName ?? "未設定")</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3">位置資訊</h5>
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <td class="fw-bold text-muted" style="width: 120px;">區域：</td>
                                            <td>@(warehouseLocation.Zone ?? "無")</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold text-muted">通道：</td>
                                            <td>@(warehouseLocation.Aisle ?? "無")</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold text-muted">層級：</td>
                                            <td>@(warehouseLocation.Level ?? "無")</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private WarehouseLocation? warehouseLocation;

    protected override async Task OnInitializedAsync()
    {
        await LoadWarehouseLocationAsync();
    }

    private async Task LoadWarehouseLocationAsync()
    {
        var result = await WarehouseLocationService.GetByIdAsync(Id);
        warehouseLocation = result;
    }

    private void NavigateToEdit()
    {
        Navigation.NavigateTo($"/inventory/warehouse-locations/{Id}/edit");
    }

    private void NavigateToList()
    {
        Navigation.NavigateTo("/inventory/warehouse-locations");
    }
}
