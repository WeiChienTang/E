@page "/inventory/warehouse-locations/{id:int}"
@using ERPCore2.Data.Entities
@inject IWarehouseLocationService WarehouseLocationService
@inject NavigationManager Navigation

<PageTitle>庫位詳細資料</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-diagram-3 me-2"></i>庫位詳細資料
                        </h4>
                        <div class="btn-group">
                            <button class="btn btn-secondary" @onclick="@(() => Navigation.NavigateTo($"/inventory/warehouse-locations/{Id}/edit"))">
                                <i class="bi bi-pencil me-1"></i>編輯
                            </button>
                            <button class="btn btn-outline-secondary" @onclick="@(() => Navigation.NavigateTo("/inventory/warehouse-locations"))">
                                <i class="bi bi-arrow-left me-1"></i>返回列表
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (warehouseLocation == null)
                    {
                        <div class="d-flex justify-content-center align-items-center" style="height: 300px;">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">載入中...</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-8">
                                <div class="table-responsive">
                                    <table class="table table-borderless">
                                        <tbody>
                                            <tr>
                                                <th width="150">庫位代碼</th>
                                                <td>@warehouseLocation.LocationCode</td>
                                            </tr>
                                            <tr>
                                                <th>庫位名稱</th>
                                                <td>@warehouseLocation.LocationName</td>
                                            </tr>
                                            <tr>
                                                <th>所屬倉庫</th>
                                                <td>@(warehouseLocation.Warehouse?.WarehouseName ?? "未設定")</td>
                                            </tr>
                                            <tr>
                                                <th>描述</th>
                                                <td>@(warehouseLocation.Description ?? "無")</td>
                                            </tr>
                                            <tr>
                                                <th>狀態</th>
                                                <td>
                                                    @if (warehouseLocation.IsActive)
                                                    {
                                                        <span class="badge bg-success">啟用</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">停用</span>
                                                    }
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>建立時間</th>
                                                <td>@warehouseLocation.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(warehouseLocation.Remarks))
                        {
                            <div class="mt-4">
                                <h6>備註</h6>
                                <div class="border rounded p-3 bg-light">
                                    @warehouseLocation.Remarks
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private WarehouseLocation? warehouseLocation;

    protected override async Task OnInitializedAsync()
    {
        await LoadWarehouseLocationAsync();
    }

    private async Task LoadWarehouseLocationAsync()
    {
        warehouseLocation = await WarehouseLocationService.GetByIdAsync(Id);
        if (warehouseLocation == null)
        {
            Navigation.NavigateTo("/inventory/warehouse-locations");
        }
    }
}
