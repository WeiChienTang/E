@page "/inventory/warehouse-locations/{id:int}"
@inject IWarehouseLocationService WarehouseLocationService
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation
@rendermode InteractiveServer

@if (isLoading)
{
    <div class="d-flex justify-content-center align-items-center" style="min-height: 400px;">
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">載入中...</span>
            </div>
            <div class="mt-2">載入庫位資料中...</div>
        </div>
    </div>
}
else if (warehouseLocation == null)
{
    <div class="alert alert-warning">
        <h4>找不到庫位資料</h4>
        <p>指定的庫位不存在或已被刪除。</p>
        <button class="btn btn-primary" @onclick="BackToWarehouseLocationList">
            返回庫位列表
        </button>
    </div>
}
else
{
    <GenericHeaderComponent Title="@warehouseLocation.LocationName" 
                          Subtitle="@($"庫位代碼：{warehouseLocation.LocationCode}")"
                          Icon="bi bi-diagram-3"
                          BreadcrumbItems="@breadcrumbItems">        <ActionButtons>
            <DetailActionButtonsComponent 
                EntityStatus="@warehouseLocation?.Status"
                IsLoading="@isLoading"
                OnEditClick="@(() => Navigation.NavigateTo($"/inventory/warehouse-locations/edit/{warehouseLocation?.Id}"))"
                OnToggleStatusClick="@ToggleStatusAsync"
                OnDeleteClick="@DeleteAsync"
                OnBackClick="@BackToWarehouseLocationList"/>
        </ActionButtons>
    </GenericHeaderComponent>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- 基本資訊 -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-info-circle me-2"></i>基本資訊
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <th width="150">庫位代碼</th>
                                            <td>@warehouseLocation.LocationCode</td>
                                        </tr>
                                        <tr>
                                            <th>庫位名稱</th>
                                            <td>@warehouseLocation.LocationName</td>
                                        </tr>
                                        <tr>
                                            <th>所屬倉庫</th>
                                            <td>@(warehouseLocation.Warehouse?.WarehouseName ?? "未設定")</td>
                                        </tr>
                                        @if (!string.IsNullOrWhiteSpace(warehouseLocation.Zone))
                                        {
                                            <tr>
                                                <th>區域</th>
                                                <td>@warehouseLocation.Zone</td>
                                            </tr>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(warehouseLocation.Aisle))
                                        {
                                            <tr>
                                                <th>通道</th>
                                                <td>@warehouseLocation.Aisle</td>
                                            </tr>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(warehouseLocation.Level))
                                        {
                                            <tr>
                                                <th>層級</th>
                                                <td>@warehouseLocation.Level</td>
                                            </tr>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(warehouseLocation.Position))
                                        {
                                            <tr>
                                                <th>位置</th>
                                                <td>@warehouseLocation.Position</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <th width="120">狀態</th>
                                            <td>
                                                @if (warehouseLocation.IsActive)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle me-1"></i>啟用
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="bi bi-x-circle me-1"></i>停用
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>建立時間</th>
                                            <td>@warehouseLocation.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                        </tr>
                                        <tr>
                                            <th>更新時間</th>
                                            <td>
                                                @if (warehouseLocation.UpdatedAt.HasValue)
                                                {
                                                    @warehouseLocation.UpdatedAt.Value.ToString("yyyy/MM/dd HH:mm")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">無</span>
                                                }
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrWhiteSpace(warehouseLocation.Description))
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-file-text me-2"></i>描述
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">@warehouseLocation.Description</p>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrWhiteSpace(warehouseLocation.Remarks))
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-chat-left-text me-2"></i>備註
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">@warehouseLocation.Remarks</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }

    private WarehouseLocation? warehouseLocation;
    private bool isLoading = true;
    private List<GenericHeaderComponent.BreadcrumbItem> breadcrumbItems = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadWarehouseLocationAsync();
        SetupBreadcrumb();
    }

    private async Task LoadWarehouseLocationAsync()
    {
        try
        {
            isLoading = true;
            warehouseLocation = await WarehouseLocationService.GetByIdAsync(Id);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void SetupBreadcrumb()
    {
        breadcrumbItems = new List<GenericHeaderComponent.BreadcrumbItem>
        {
            new() { Text = "首頁", Href = "/" },
            new() { Text = "庫存管理", Href = "/inventory" },
            new() { Text = "庫位管理", Href = "/inventory/warehouse-locations" },
            new() { Text = warehouseLocation?.LocationName ?? "庫位詳細" }
        };
    }

    private async Task ToggleStatusAsync()
    {
        if (warehouseLocation == null) return;

        try
        {
            var result = await WarehouseLocationService.ToggleStatusAsync(warehouseLocation.Id);
            if (result.IsSuccess)
            {
                warehouseLocation.IsActive = !warehouseLocation.IsActive;
                await JSRuntime.InvokeVoidAsync("alert", $"庫位狀態已{(warehouseLocation.IsActive ? "啟用" : "停用")}");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "操作失敗");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"操作失敗：{ex.Message}");
        }
    }

    private async Task DeleteAsync()
    {
        if (warehouseLocation == null) return;

        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"確定要刪除庫位「{warehouseLocation.LocationName}」嗎？");
        if (confirmed)
        {
            try
            {
                var result = await WarehouseLocationService.DeleteAsync(warehouseLocation.Id);
                if (result.IsSuccess)
                {
                    await JSRuntime.InvokeVoidAsync("alert", "庫位已刪除");
                    BackToWarehouseLocationList();
                }
                else
                {
                    await JSRuntime.InvokeVoidAsync("alert", "刪除失敗");
                }
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"刪除失敗：{ex.Message}");
            }
        }
    }

    private void BackToWarehouseLocationList()
    {
        Navigation.NavigateTo("/inventory/warehouse-locations");
    }
}
