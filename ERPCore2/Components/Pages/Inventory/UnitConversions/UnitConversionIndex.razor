@page "/inventory/unit-conversions"
@using ERPCore2.Data.Entities
@inject IUnitConversionService UnitConversionService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-arrow-left-right me-2"></i>單位轉換管理
                        </h4>
                        <button class="btn btn-primary" @onclick="@(() => Navigation.NavigateTo("/inventory/unit-conversions/add"))">
                            <i class="bi bi-plus-lg me-1"></i>新增單位轉換
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="d-flex justify-content-center align-items-center" style="height: 300px;">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">載入中...</span>
                            </div>
                        </div>
                    }
                    else if (unitConversions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>來源單位</th>
                                        <th>目標單位</th>
                                        <th>轉換率</th>
                                        <th>狀態</th>
                                        <th>建立時間</th>
                                        <th width="120">操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var conversion in unitConversions)
                                    {
                                        <tr>                                            <td>
                                                @if (conversion.FromUnit != null)
                                                {
                                                    <span>@conversion.FromUnit.UnitName</span>
                                                    <small class="text-muted d-block">@conversion.FromUnit.UnitCode</small>
                                                }
                                            </td>
                                            <td>
                                                @if (conversion.ToUnit != null)
                                                {
                                                    <span>@conversion.ToUnit.UnitName</span>
                                                    <small class="text-muted d-block">@conversion.ToUnit.UnitCode</small>
                                                }
                                            </td>
                                            <td>@conversion.ConversionRate.ToString("N4")</td>
                                            <td>
                                                @if (conversion.IsActive)
                                                {
                                                    <span class="badge bg-success">啟用</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">停用</span>
                                                }
                                            </td>
                                            <td>
                                                @conversion.CreatedAt.ToString("yyyy/MM/dd")
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-outline-primary" @onclick="@(() => Navigation.NavigateTo($"/inventory/unit-conversions/{conversion.Id}/edit"))">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-outline-danger" @onclick="@(() => DeleteConversion(conversion.Id))">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <h5 class="mt-3 text-muted">尚無單位轉換資料</h5>
                            <p class="text-muted">請點擊上方按鈕新增第一個單位轉換</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<UnitConversion> unitConversions = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadUnitConversionsAsync();
        isLoading = false;
    }

    private async Task LoadUnitConversionsAsync()
    {
        unitConversions = await UnitConversionService.GetAllAsync();
    }    private async Task DeleteConversion(int id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "確定要刪除此單位轉換嗎？");
        if (confirmed)
        {
            await UnitConversionService.DeleteAsync(id);
            await LoadUnitConversionsAsync();
        }
    }
}
