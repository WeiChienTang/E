        }
        catch (Exception ex)
        {
            _ = ErrorHandlingHelper.HandlePageErrorAsync(
                ex,
                nameof(OnRowClick),
                GetType(),
                additionalData: $"跳轉到庫存詳細頁面失敗，商品ID：{item.ProductId}"
            );
        }
    }
