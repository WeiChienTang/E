@* 可重用的庫存編輯組件 - 可在任何頁面中嵌入 *@
@inject IInventoryStockService InventoryStockService
@inject IProductService ProductService
@inject IWarehouseService WarehouseService
@inject IWarehouseLocationService WarehouseLocationService
@inject INotificationService NotificationService
@inject IStringLocalizer<SharedResource> L

<GenericEditModalComponent TEntity="InventoryStock" 
                          TService="IInventoryStockService"
                          @ref="editModalComponent"
                          IsVisible="@IsVisible"
                          IsVisibleChanged="@IsVisibleChanged"
                          @bind-Id="@InventoryStockId"
                          Service="@InventoryStockService"
                          EntityName="@L["Entity.InventoryStock"]"
                          EntityNamePlural="@L["Entity.InventoryStock"]"
                          ModalTitle="@(InventoryStockId.HasValue ? L["Message.EditTitle", L["Entity.InventoryStock"]].ToString() : L["Message.CreateTitle", L["Entity.InventoryStock"]].ToString())"
                          Size="GenericEditModalComponent<InventoryStock, IInventoryStockService>.ModalSize.Desktop"
                          UseGenericForm="true"
                          FormFields="@formFields"
                          FormSections="@formSections"
                          AutoCompleteCollections="@(autoCompleteConfig?.Collections)"
                          AutoCompleteDisplayProperties="@(autoCompleteConfig?.DisplayProperties)"
                          AutoCompleteValueProperties="@(autoCompleteConfig?.ValueProperties)"
                          DataLoader="@LoadInventoryStockData"
                          UseGenericSave="true"
                          CustomValidator="@ValidateBeforeSave"
                          SaveSuccessMessage="@(InventoryStockId.HasValue ? L["Message.UpdateSuccess", L["Entity.InventoryStock"]].ToString() : L["Message.CreateSuccess", L["Entity.InventoryStock"]].ToString())"
                          SaveFailureMessage="@L["Message.SaveFailure", L["Entity.InventoryStock"]]"
                          RequiredPermission="InventoryStock.Read"
                          OnEntitySaved="@OnInventoryStockSaved"
                          OnCancel="@OnCancel"
                          CustomModules="@GetCustomModules()"
/>

@code {
    // ===== 參數 =====
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public int? InventoryStockId { get; set; }
    [Parameter] public EventCallback<InventoryStock> OnInventoryStockSaved { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public Dictionary<string, object?>? PrefilledValues { get; set; }

    // ===== 內部狀態 =====
    private GenericEditModalComponent<InventoryStock, IInventoryStockService>? editModalComponent;
    private List<FormFieldDefinition> formFields = new();
    private Dictionary<string, string> formSections = new();
    private List<Product> availableProducts = new();
    private List<Warehouse> availableWarehouses = new();
    private List<WarehouseLocation> availableWarehouseLocations = new();
    
    // AutoComplete 配置
    private AutoCompleteConfig? autoCompleteConfig;
    
    // 庫存明細
    private List<InventoryStockDetail> inventoryStockDetails = new();
    private InventoryStockTable<InventoryStock, InventoryStockDetail>? inventoryStockDetailManager;

    // 資料載入狀態標記
    private bool isDataLoaded = false;
    private bool isDetailDataReady = false;

    // ===== 生命週期 =====
    protected override async Task OnParametersSetAsync()
    {
        if (IsVisible && !isDataLoaded)
        {
            // 每次開啟 Modal 時重置明細列表
            inventoryStockDetails = new List<InventoryStockDetail>();
            
            await LoadAdditionalDataAsync();
            await InitializeFormFieldsAsync();
            isDataLoaded = true;
        }
        else if (!IsVisible)
        {
            isDataLoaded = false;
        }
    }
    // ===== 自訂驗證 =====
    
    /// <summary>
    /// 儲存前驗證 - 檢查重複的倉庫庫位並詢問是否合併
    /// </summary>
    private async Task<bool> ValidateBeforeSave(InventoryStock entity)
    {
        try
        {
            // 檢查明細管理器是否存在
            if (inventoryStockDetailManager == null)
            {
                return true; // 沒有明細管理器，允許儲存
            }

            // 檢查是否有重複
            var (hasDuplicates, duplicateInfo) = inventoryStockDetailManager.CheckForDuplicates();
            
            if (!hasDuplicates)
            {
                return true; // 沒有重複，允許儲存
            }

            // 有重複，顯示確認對話框
            var duplicateList = string.Join("\n", duplicateInfo.Select(info => $"• {info}"));
            var confirmMessage = $"發現以下重複的倉庫與庫位組合：\n\n{duplicateList}\n\n" +
                               "是否要自動合併這些重複的明細？\n\n" +
                               "✓ 點擊「確定」將自動合併數量和成本\n" +
                               "✗ 點擊「取消」返回修改";

            var shouldMerge = await NotificationService.ShowConfirmAsync(
                confirmMessage,
                "發現重複的倉庫與庫位"
            );

            if (shouldMerge)
            {
                // 執行合併
                var mergeSuccess = await inventoryStockDetailManager.MergeDuplicatesAsync();
                
                if (mergeSuccess)
                {
                    // 合併成功，允許繼續儲存
                    return true;
                }
                else
                {
                    // 合併失敗
                    await NotificationService.ShowErrorAsync("合併失敗，請手動修改重複的明細");
                    return false;
                }
            }
            else
            {
                // 使用者選擇不合併，阻止儲存
                await NotificationService.ShowWarningAsync("請修改重複的倉庫與庫位組合後再試");
                return false;
            }
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"驗證明細時發生錯誤：{ex.Message}");
            return false;
        }
    }

    // ===== 資料載入 =====
    private async Task LoadAdditionalDataAsync()
    {
        try
        {
            isDetailDataReady = false;
            
            // 載入商品列表
            availableProducts = await ProductService.GetAllAsync();
            
            // 載入倉庫列表  
            availableWarehouses = await WarehouseService.GetAllAsync();
            
            // 載入所有倉庫位置（初始化時）
            availableWarehouseLocations = await WarehouseLocationService.GetAllAsync();
            
            // 配置 AutoComplete
            autoCompleteConfig = new AutoCompleteConfigBuilder<InventoryStock>()
                .AddField(nameof(InventoryStock.ProductId), "Name", availableProducts)
                .Build();
            
            isDetailDataReady = true;
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"載入庫存資料時發生錯誤：{ex.Message}");
            availableProducts = new List<Product>();
            availableWarehouses = new List<Warehouse>();
            availableWarehouseLocations = new List<WarehouseLocation>();
            isDetailDataReady = true;
        }
    }
    
    /// <summary>
    /// 載入庫存明細（用於上下筆切換）
    /// </summary>
    private async Task LoadInventoryStockDetails(int inventoryStockId)
    {
        try
        {
            var inventoryStock = await InventoryStockService.GetByIdAsync(inventoryStockId);
            
            if (inventoryStock?.InventoryStockDetails != null && inventoryStock.InventoryStockDetails.Any())
            {
                inventoryStockDetails = inventoryStock.InventoryStockDetails.ToList();
            }
            else
            {
                inventoryStockDetails = new List<InventoryStockDetail>();
            }
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"載入庫存明細時發生錯誤：{ex.Message}");
            inventoryStockDetails = new List<InventoryStockDetail>();
        }
    }

    private async Task<InventoryStock?> LoadInventoryStockData()
    {
        try
        {
            if (!InventoryStockId.HasValue) 
            {
                //  關鍵修正：新增模式時清空明細（與 PurchaseOrderEditModalComponent 一致）
                inventoryStockDetails.Clear();
                
                // 新增模式：建立新的庫存實體
                var newInventoryStock = new InventoryStock
                {
                    Status = EntityStatus.Active
                };
                
                // 應用預填值
                PrefilledValueHelper.ApplyPrefilledValues(newInventoryStock, PrefilledValues);
                
                return newInventoryStock;
            }

            var inventoryStock = await InventoryStockService.GetByIdAsync(InventoryStockId.Value);            
            
            if (inventoryStock == null)
            {
                // 如果找不到庫存，建立新的預設庫存
                return new InventoryStock
                {
                    Status = EntityStatus.Active
                };
            }
            
            // 載入庫存明細
            if (inventoryStock.InventoryStockDetails != null && inventoryStock.InventoryStockDetails.Any())
            {
                inventoryStockDetails = inventoryStock.InventoryStockDetails.ToList();
            }
            else
            {
                inventoryStockDetails = new List<InventoryStockDetail>();
            }
            
            return inventoryStock;
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"載入庫存資料時發生錯誤：{ex.Message}");
            
            // 設定安全的預設值，確保程式不會崩潰
            return new InventoryStock
            {
                Status = EntityStatus.Active
            };
        }
    }

    // ===== 表單初始化 =====
    private Task InitializeFormFieldsAsync()
    {
        try
        {
            formFields = new List<FormFieldDefinition>
            {
                // 基本資訊區段
                new()
                {
                    PropertyName = nameof(InventoryStock.ProductId),
                    Label = L["Entity.Product"],
                    FieldType = FormFieldType.AutoComplete,
                    Placeholder = L["Placeholder.PleaseInputOrSelect", L["Entity.Product"]],
                    IsRequired = true,
                    MinSearchLength = 0,
                    HelpText = "輸入商品名稱進行搜尋，或直接選擇",
                },
                
                new FormFieldDefinition()
                {
                    PropertyName = nameof(InventoryStock.TotalCurrentStock),
                    Label = L["Field.TotalStock"],
                    FieldType = FormFieldType.Number,
                    IsRequired = false,
                    IsReadOnly = true,
                    HelpText = "系統自動計算的目前總庫存量，無法手動修改",
                },
                
                FormFieldConfigurationHelper.CreateRemarksField<InventoryStock>()
            };

            formSections = FormSectionHelper<InventoryStock>.Create()
                .AddToSection(FormSectionNames.BasicInfo,
                    ist => ist.ProductId,
                    ist => ist.TotalCurrentStock)
                .AddToSection(FormSectionNames.AdditionalData,
                    ist => ist.Remarks)
                .Build();

        return Task.CompletedTask;
        }
        catch (Exception)
        {
            _ = NotificationService.ShowErrorAsync("初始化表單欄位時發生錯誤");
            return Task.CompletedTask;
        }
    }

    // 注意：倉庫和庫位相關方法已移除，因為 InventoryStock 已改為主檔結構
    // 倉庫/庫位資訊現在存儲在 InventoryStockDetails 中

    // ===== 自訂模組 =====
    
    /// <summary>
    /// 配置自訂模組 - 庫存分佈明細
    /// </summary>
    private List<GenericEditModalComponent<InventoryStock, IInventoryStockService>.CustomModule> GetCustomModules()
    {
        // 一律顯示庫存明細模組（與採購單不同，不需要檢查是否已儲存）
        if (editModalComponent == null)
        {
            return new List<GenericEditModalComponent<InventoryStock, IInventoryStockService>.CustomModule>();
        }

        return new List<GenericEditModalComponent<InventoryStock, IInventoryStockService>.CustomModule>
        {
            new GenericEditModalComponent<InventoryStock, IInventoryStockService>.CustomModule
            {
                Title = "",
                Order = 1,
                Content = CreateStockDetailContent()
            }
        };
    }

    /// <summary>
    /// 創建庫存分佈明細內容的 RenderFragment
    /// </summary>
    private RenderFragment CreateStockDetailContent() => __builder =>
    {
        <DetailSectionWrapper IsEntityReady="@(editModalComponent?.Entity != null)"
                              IsDetailDataReady="@isDetailDataReady"
                              IsDataAvailable="@(availableWarehouses != null && availableWarehouses.Any())"
                              DataUnavailableMessage="無可用的倉庫資料，請聯繫系統管理員"
                              IsPreconditionMet="@(editModalComponent?.Entity?.ProductId > 0)"
                              PreconditionMessage="請先選擇商品後再進行庫存明細管理">
            <InventoryStockTable @ref="inventoryStockDetailManager"
                                 @key="@editModalComponent!.Entity.Id"
                                 TMainEntity="InventoryStock"
                                 TDetailEntity="InventoryStockDetail"
                                 MainEntity="@editModalComponent!.Entity"
                                 ExistingDetails="@inventoryStockDetails"
                                 SelectedInventoryStockId="@(editModalComponent.Entity.Id > 0 ? editModalComponent.Entity.Id : null)"
                                 Warehouses="@availableWarehouses"
                                 WarehouseLocations="@availableWarehouseLocations"
                                 OnDetailsChanged="@HandleStockDetailsChanged"
                                 IsReadOnly="@false"
                                 ShowBatchTracking="true"
                                 ShowAverageCost="true" />
        </DetailSectionWrapper>
    };
    
    /// <summary>
    /// 處理庫存明細變更
    /// </summary>
    private async Task HandleStockDetailsChanged(List<InventoryStockDetail> details)
    {
        try
        {
            editModalComponent?.MarkDirty();
            // 更新庫存明細列表
            inventoryStockDetails = details;
            
            // 同時更新實體的明細集合
            if (editModalComponent?.Entity != null)
            {
                // 清空現有明細並重新加入
                editModalComponent.Entity.InventoryStockDetails = new List<InventoryStockDetail>(details);
                
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"處理庫存明細變更時發生錯誤：{ex.Message}");
        }
    }

    // ===== 公開方法 (供父組件調用) =====
    public Task ShowAddModal() => editModalComponent!.ShowAddModal();
    public Task ShowEditModal(int id) => editModalComponent!.ShowEditModal(id);
    /// <summary>
    /// 開啟新增庫存 Modal 並預填商品
    /// 注意：倉庫資訊現在存儲在 InventoryStockDetails 中，不再屬於主檔
    /// </summary>
    public async Task ShowAddModalWithPrefilledData(int productId)
    {
        InventoryStockId = null;
        
        PrefilledValues = new Dictionary<string, object?>
        {
            { nameof(InventoryStock.ProductId), productId }
        };
        
        if (IsVisibleChanged.HasDelegate)
        {
            await IsVisibleChanged.InvokeAsync(true);
        }
    }
}
