@* 可重用的倉庫編輯組件 - 可在任何頁面中嵌入 *@
@inject IWarehouseService WarehouseService
@inject INotificationService NotificationService

<GenericEditModalComponent TEntity="Warehouse" 
                          TService="IWarehouseService"
                          @ref="editModalComponent"
                          IsVisible="@IsVisible"
                          IsVisibleChanged="@IsVisibleChanged"
                          @bind-Id="@WarehouseId"
                          Service="@WarehouseService"
                          EntityName="倉庫"
                          EntityNamePlural="倉庫"
                          ModalTitle="@(WarehouseId.HasValue ? "編輯倉庫" : "新增倉庫")"
                          Size="GenericEditModalComponent<Warehouse, IWarehouseService>.ModalSize.Desktop"
                          UseGenericForm="true"
                          FormFields="@formFields"
                          FormSections="@formSections"
                          DataLoader="@LoadWarehouseData"
                          UseGenericSave="true"
                          SaveSuccessMessage="@(WarehouseId.HasValue ? "倉庫更新成功" : "倉庫新增成功")"
                          SaveFailureMessage="倉庫儲存失敗"
                          RequiredPermission="Warehouse.Read"
                          OnEntitySaved="@OnWarehouseSaved"
                          OnCancel="@OnCancel"
                          OnEntityLoaded="@HandleEntityLoaded"
                          CustomModules="@GetCustomModules()" />

@code {
    // ===== 必要參數 =====
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public int? WarehouseId { get; set; }
    [Parameter] public EventCallback<Warehouse> OnWarehouseSaved { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    // ===== 內部狀態 =====
    private GenericEditModalComponent<Warehouse, IWarehouseService>? editModalComponent;
    private List<FormFieldDefinition> formFields = new();
    private Dictionary<string, string> formSections = new();
    
    // ===== 庫位 Table 參考 =====
    private WarehouseLocationTable? warehouseLocationTable;

    // ===== 必要方法 =====
    
    /// <summary>
    /// 處理實體載入完成事件（由 GenericEditModalComponent 的導航觸發）
    /// 當上下筆切換時觸發 UI 更新，確保表單欄位正確渲染
    /// </summary>
    private async Task HandleEntityLoaded(int loadedEntityId)
    {
        try
        {
            // 刷新庫位 Table
            if (warehouseLocationTable != null)
            {
                await warehouseLocationTable.RefreshAsync();
            }
            
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"載入資料時發生錯誤：{ex.Message}");
        }
    }
    private Task<Warehouse?> LoadWarehouseData()
        => EditDataLoaderHelper.LoadOrCreateAsync<Warehouse, IWarehouseService>(
            WarehouseId, WarehouseService, NotificationService, "倉庫", "WH", null);

    protected override void OnParametersSet()
    {
        if (IsVisible)
        {
            InitializeFormFields();
        }
    }

    private void InitializeFormFields()
    {
        try
        {
            formFields = new List<FormFieldDefinition>
            {
                new()
                {
                    PropertyName = nameof(Warehouse.Code),
                    Label = "倉庫編號",
                    FieldType = FormFieldType.Text,
                    Placeholder = "請輸入倉庫編號",
                    IsRequired = true,
                    MaxLength = 20,
                    HelpText = "倉庫的唯一識別編號，新增時系統會自動產生，也可手動修改"
                },
                new()
                {
                    PropertyName = nameof(Warehouse.Name),
                    Label = "倉庫名稱",
                    FieldType = FormFieldType.Text,
                    Placeholder = "請輸入倉庫名稱",
                    IsRequired = true,
                    MaxLength = 50,
                    HelpText = "倉庫的唯一名稱，用於識別不同倉庫"
                },
                new()
                {
                    PropertyName = nameof(Warehouse.ContactPerson),
                    Label = "聯絡人",
                    FieldType = FormFieldType.Text,
                    Placeholder = "請輸入聯絡人姓名",
                    IsRequired = false,
                    MaxLength = 50,
                    HelpText = "倉庫的聯絡人姓名"
                },
                new()
                {
                    PropertyName = nameof(Warehouse.Phone),
                    Label = "聯絡電話",
                    FieldType = FormFieldType.Text,
                    Placeholder = "請輸入聯絡電話",
                    IsRequired = false,
                    MaxLength = 20,
                    HelpText = "倉庫的聯絡電話"
                },
                new()
                {
                    PropertyName = nameof(Warehouse.Address),
                    Label = "地址",
                    FieldType = FormFieldType.Text,
                    Placeholder = "請輸入倉庫地址",
                    IsRequired = false,
                    MaxLength = 200,
                    HelpText = "倉庫的詳細地址",
                    ContainerCssClass = "col-4"
                },

                FormFieldConfigurationHelper.CreateRemarksField<Warehouse>()
            };

            formSections = FormSectionHelper<Warehouse>.Create()
                .AddToSection(FormSectionNames.BasicInfo,
                    w => w.Code,
                    w => w.Name,
                    w => w.ContactPerson,
                    w => w.Phone,
                    w => w.Address)
                .AddToSection(FormSectionNames.AdditionalData,
                    w => w.Remarks)
                .Build();
        }
        catch (Exception ex)
        {
            _ = ErrorHandlingHelper.HandlePageErrorAsync(
                ex,
                nameof(InitializeFormFields),
                GetType(),
                additionalData: new { WarehouseId }
            );
        }
    }

    // ===== CustomModules 相關方法 =====
    
    /// <summary>
    /// 配置自訂模組（庫位 Table）
    /// </summary>
    private List<GenericEditModalComponent<Warehouse, IWarehouseService>.CustomModule> GetCustomModules()
    {
        // 新增模式時不顯示庫位 Table
        if (!WarehouseId.HasValue)
        {
            return new List<GenericEditModalComponent<Warehouse, IWarehouseService>.CustomModule>();
        }

        return new List<GenericEditModalComponent<Warehouse, IWarehouseService>.CustomModule>
        {
            new GenericEditModalComponent<Warehouse, IWarehouseService>.CustomModule
            {
                Order = 1,
                IsVisible = true,
                Content = CreateWarehouseLocationTableContent()
            }
        };
    }

    /// <summary>
    /// 創建庫位 Table 內容的 RenderFragment
    /// </summary>
    private RenderFragment CreateWarehouseLocationTableContent() => __builder =>
    {
        <WarehouseLocationTable @ref="warehouseLocationTable"
                               WarehouseId="@WarehouseId"
                               IsReadOnly="true" />
    };
}
