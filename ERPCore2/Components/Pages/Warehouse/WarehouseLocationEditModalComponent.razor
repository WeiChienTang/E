@* 可重用的倉庫內位置編輯組件 - 可在任何頁面中嵌入 *@
@inject IWarehouseLocationService WarehouseLocationService
@inject IWarehouseService WarehouseService
@inject INotificationService NotificationService
@inject ActionButtonHelper ActionButtonHelper
@inject IStringLocalizer<SharedResource> L

<GenericEditModalComponent TEntity="WarehouseLocation"
                          TService="IWarehouseLocationService"
                          @ref="editModalComponent"
                          IsVisible="@IsVisible"
                          IsVisibleChanged="@IsVisibleChanged"
                          @bind-Id="@WarehouseLocationId"
                          Service="@WarehouseLocationService"
                          EntityName="@L["Entity.WarehouseLocation"]"
                          EntityNamePlural="@L["Entity.WarehouseLocation"]"
                          ModalTitle="@(WarehouseLocationId.HasValue ? L["Message.EditTitle", L["Entity.WarehouseLocation"]].ToString() : L["Message.CreateTitle", L["Entity.WarehouseLocation"]].ToString())"
                          Size="GenericEditModalComponent<WarehouseLocation, IWarehouseLocationService>.ModalSize.Desktop"
                          UseGenericForm="true"
                          FormFields="@formFields"
                          FormSections="@formSections"
                          AutoCompleteCollections="@(autoCompleteConfig?.Collections)"
                          AutoCompleteDisplayProperties="@(autoCompleteConfig?.DisplayProperties)"
                          AutoCompleteValueProperties="@(autoCompleteConfig?.ValueProperties)"
                          ModalManagers="@modalManagers?.AsDictionary()"
                          DataLoader="@LoadWarehouseLocationData"
                          UseGenericSave="true"
                          SaveSuccessMessage="@(WarehouseLocationId.HasValue ? L["Message.UpdateSuccess", L["Entity.WarehouseLocation"]].ToString() : L["Message.CreateSuccess", L["Entity.WarehouseLocation"]].ToString())"
                          SaveFailureMessage="@L["Message.SaveFailure", L["Entity.WarehouseLocation"]]"
                          RequiredPermission="WarehouseLocation.Read"
                          OnEntitySaved="@OnWarehouseLocationSaved"
                          OnCancel="@OnCancel" />

@* 倉庫編輯 Modal *@
<WarehouseEditModalComponent @ref="warehouseEditModal"
                            IsVisible="@warehouseModalManager.IsModalVisible"
                            IsVisibleChanged="@warehouseModalManager.HandleModalVisibilityChangedAsync"
                            WarehouseId="@warehouseModalManager.SelectedEntityId"
                            OnWarehouseSaved="@OnWarehouseSavedWrapper"
                            OnCancel="@warehouseModalManager.HandleModalCancelAsync" />

@code {
    // ===== 必要參數 =====
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public int? WarehouseLocationId { get; set; }
    [Parameter] public EventCallback<WarehouseLocation> OnWarehouseLocationSaved { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    // ===== 內部狀態 =====
    private GenericEditModalComponent<WarehouseLocation, IWarehouseLocationService>? editModalComponent;
    private List<FormFieldDefinition> formFields = new();
    private Dictionary<string, string> formSections = new();
    private List<Warehouse> warehouses = new();
    
    // AutoComplete 配置
    private AutoCompleteConfig? autoCompleteConfig;
    
    // Modal 管理器
    private WarehouseEditModalComponent? warehouseEditModal;
    private RelatedEntityModalManager<Warehouse> warehouseModalManager = default!;
    private ModalManagerCollection modalManagers = default!;

    // ===== 必要方法 =====
    // 資料載入狀態標記
    private bool isDataLoaded = false;
    
    protected override async Task OnInitializedAsync()
    {
        try
        {
            // 使用 ModalManagerInitHelper 初始化 Modal 管理器
            modalManagers = ModalManagerInitHelper.CreateBuilder<WarehouseLocation, IWarehouseLocationService>(
                    () => editModalComponent,
                    NotificationService,
                    StateHasChanged,
                    LoadAdditionalDataAsync,
                    InitializeFormFieldsAsync)
                .AddManager<Warehouse>(nameof(WarehouseLocation.WarehouseId), "倉庫")
                .Build();
            warehouseModalManager = modalManagers.Get<Warehouse>(nameof(WarehouseLocation.WarehouseId));
            
            // 移除自動載入資料，改為在 OnParametersSetAsync 中根據 IsVisible 載入
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"載入資料時發生錯誤：{ex.Message}");
        }
    }
    
    protected override async Task OnParametersSetAsync()
    {
        if (IsVisible && !isDataLoaded)
        {
            await LoadAdditionalDataAsync();
            await InitializeFormFieldsAsync();
            isDataLoaded = true;
        }
        else if (!IsVisible)
        {
            isDataLoaded = false;
        }
    }
    private Task<WarehouseLocation?> LoadWarehouseLocationData()
        => EditDataLoaderHelper.LoadOrCreateAsync<WarehouseLocation, IWarehouseLocationService>(
            WarehouseLocationId, WarehouseLocationService, NotificationService, "庫位", "WL", null);
    private async Task LoadAdditionalDataAsync()
    {
        try
        {
            // 載入倉庫清單用於下拉選單
            warehouses = await WarehouseService.GetAllAsync();
            
            // 配置 AutoComplete
            autoCompleteConfig = new AutoCompleteConfigBuilder<WarehouseLocation>()
                .AddField(nameof(WarehouseLocation.WarehouseId), "Name", warehouses)
                .Build();
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"載入倉庫資料時發生錯誤：{ex.Message}");
            warehouses = new List<Warehouse>();
        }
    }    

    private async Task InitializeFormFieldsAsync()
    {
        try
        {
            formFields = new List<FormFieldDefinition>
            {
                new()
                {
                    PropertyName = nameof(WarehouseLocation.Code),
                    Label = L["Field.LocationCode"],
                    FieldType = FormFieldType.Text,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.LocationCode"]],
                    IsRequired = true,
                    MaxLength = 20,
                    HelpText = "庫位的唯一識別編號，新增時系統會自動產生，也可手動修改"
                },
                new()
                {
                    PropertyName = nameof(WarehouseLocation.Name),
                    Label = L["Field.LocationName"],
                    FieldType = FormFieldType.Text,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.LocationName"]],
                    IsRequired = true,
                    MaxLength = 50,
                    HelpText = "庫位的唯一名稱，用於識別不同庫位"
                },
                new()
                {
                    PropertyName = nameof(WarehouseLocation.WarehouseId),
                    Label = L["Entity.Warehouse"],
                    FieldType = FormFieldType.AutoComplete,
                    Placeholder = L["Placeholder.PleaseInputOrSelect", L["Entity.Warehouse"]],
                    IsRequired = true,
                    MinSearchLength = 0,
                    HelpText = "輸入倉庫名稱進行搜尋，或直接選擇",
                    ActionButtons = await GetWarehouseActionButtonsAsync()
                },
                new()
                {
                    PropertyName = nameof(WarehouseLocation.Zone),
                    Label = L["Field.Zone"],
                    FieldType = FormFieldType.Text,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.Zone"]],
                    IsRequired = false,
                    MaxLength = 10,
                    HelpText = "庫位所在區域（如：A區、B區等）"
                },
                new()
                {
                    PropertyName = nameof(WarehouseLocation.Aisle),
                    Label = L["Field.Row"],
                    FieldType = FormFieldType.Text,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.Row"]],
                    IsRequired = false,
                    MaxLength = 10,
                    HelpText = "庫位所在排號（如：01、02、03等）"
                },
                new()
                {
                    PropertyName = nameof(WarehouseLocation.Level),
                    Label = L["Field.Level"],
                    FieldType = FormFieldType.Text,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.Level"]],
                    IsRequired = false,
                    MaxLength = 10,
                    HelpText = "庫位所在層號（如：1F、2F、3F等）"
                },
                new()
                {
                    PropertyName = nameof(WarehouseLocation.Position),
                    Label = L["Field.Position"],
                    FieldType = FormFieldType.Text,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.Position"]],
                    IsRequired = false,
                    MaxLength = 10,
                    HelpText = "庫位具體位置號碼（如：A、B、C等）"
                },
                new()
                {
                    PropertyName = nameof(WarehouseLocation.MaxCapacity),
                    Label = L["Field.MaxCapacity"],
                    FieldType = FormFieldType.Number,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.MaxCapacity"]],
                    IsRequired = false,
                    HelpText = "此庫位可容納的最大數量（選填）",                    
                },

                FormFieldConfigurationHelper.CreateRemarksField<WarehouseLocation>()
            };

            formSections = FormSectionHelper<WarehouseLocation>.Create()
                .AddToSection(FormSectionNames.BasicInfo,
                    wl => wl.Code,
                    wl => wl.Name,
                    wl => wl.WarehouseId,
                    wl => wl.Zone,
                    wl => wl.Aisle,
                    wl => wl.Level,
                    wl => wl.Position,
                    wl => wl.MaxCapacity)
                .AddToSection(FormSectionNames.AdditionalInfo,
                    wl => wl.Remarks)
                .Build();
        }
        catch (Exception ex)
        {
            _ = ErrorHandlingHelper.HandlePageErrorAsync(
                ex,
                nameof(InitializeFormFieldsAsync),
                GetType(),
                additionalData: new { WarehouseLocationId }
            );
        }
    }

    // ===== ActionButton 產生方法 =====
    
    /// <summary>
    /// 產生倉庫操作按鈕 - 使用統一 Helper
    /// </summary>
    private async Task<List<FieldActionButton>> GetWarehouseActionButtonsAsync()
    {
        return await ActionButtonHelper.GenerateFieldActionButtonsAsync(
            editModalComponent, 
            warehouseModalManager, 
            nameof(WarehouseLocation.WarehouseId)
        );
    }

    // ===== Modal 事件包裝器方法 =====
    
    /// <summary>
    /// 包裝倉庫儲存事件
    /// </summary>
    private async Task OnWarehouseSavedWrapper()
    {
        try
        {
            // 由於 WarehouseEditModalComponent 沒有返回實體，我們手動處理
            // 重新載入資料
            if (warehouseModalManager.ReloadDataCallback != null)
            {
                await warehouseModalManager.ReloadDataCallback();
            }
            
            // 執行自訂後處理邏輯
            if (warehouseModalManager.CustomPostProcessCallback != null)
            {
                // 創建一個假的 Warehouse 實體，因為 WarehouseEditModalComponent 沒有返回實體
                var dummyWarehouse = new Warehouse();
                await warehouseModalManager.CustomPostProcessCallback(dummyWarehouse);
            }
            
            // 關閉 Modal
            await warehouseModalManager.CloseModalAsync();
            
            // 顯示成功訊息
            await NotificationService.ShowSuccessAsync("倉庫已成功儲存，選項已更新");
            
            // 觸發狀態變更
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"處理倉庫儲存成功事件時發生錯誤：{ex.Message}");
        }
    }
}
