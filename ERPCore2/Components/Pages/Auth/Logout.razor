@page "/auth/logout"
@page "/logout"
@layout AuthLayout
@inject IStringLocalizer<ERPCore2.SharedResource> L

<!DOCTYPE html>
<html>
<head>
    <title>@L["Auth.LoggingOut"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <meta http-equiv="refresh" content="1;url=/auth/signout">
</head>
<body class="bg-light">
    <div class="min-vh-100 d-flex align-items-center justify-content-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow border-0">
                        <div class="card-body p-5 text-center">
                            <div class="mb-4">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">@L["Auth.LoggingOut"]</span>
                                </div>
                            </div>
                            <h4 class="mb-3">@L["Auth.LoggingOut"]</h4>
                            <p class="text-muted">@L["Auth.LoggingOutMessage"]</p>
                            <p class="small text-muted">@L["Auth.LoggingOutRedirectPrefix"] <a href="/auth/signout">@L["Auth.LoggingOutClickHere"]</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // 備用重導向方案
        setTimeout(function() {
            window.location.href = '/auth/signout';
        }, 1000);
    </script>
</body>
</html>

<style>
    .min-vh-100 {
        min-height: 100vh;
    }
    
    .card {
        border-radius: 1rem;
    }
</style>
