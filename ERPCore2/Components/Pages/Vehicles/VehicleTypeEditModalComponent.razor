@* 可重用的車型編輯組件 - 可在任何頁面中嵌入 *@
@inject IVehicleTypeService VehicleTypeService
@inject INotificationService NotificationService
@inject IStringLocalizer<SharedResource> L

<GenericEditModalComponent TEntity="VehicleType"
                          TService="IVehicleTypeService"
                          @ref="editModalComponent"
                          IsVisible="@IsVisible"
                          IsVisibleChanged="@IsVisibleChanged"
                          @bind-Id="@VehicleTypeId"
                          Service="@VehicleTypeService"
                          EntityName="@L["Entity.VehicleType"]"
                          EntityNamePlural="@L["Entity.VehicleType"]"
                          ModalTitle="@(VehicleTypeId.HasValue ? L["Message.EditTitle", L["Entity.VehicleType"]].ToString() : L["Message.CreateTitle", L["Entity.VehicleType"]].ToString())"
                          Size="GenericEditModalComponent<VehicleType, IVehicleTypeService>.ModalSize.Desktop"
                          UseGenericForm="true"
                          FormFields="@formFields"
                          FormSections="@formSections"
                          DataLoader="@LoadVehicleTypeData"
                          UseGenericSave="true"
                          SaveSuccessMessage="@(VehicleTypeId.HasValue ? L["Message.UpdateSuccess", L["Entity.VehicleType"]].ToString() : L["Message.CreateSuccess", L["Entity.VehicleType"]].ToString())"
                          SaveFailureMessage="@L["Message.SaveFailure", L["Entity.VehicleType"]]"
                          RequiredPermission="@PermissionRegistry.VehicleType.Read"
                          OnEntitySaved="@OnVehicleTypeSaved"
                          OnCancel="@OnCancel" />

@code {
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public int? VehicleTypeId { get; set; }
    [Parameter] public EventCallback<VehicleType> OnVehicleTypeSaved { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public Dictionary<string, object?>? PrefilledValues { get; set; }

    private GenericEditModalComponent<VehicleType, IVehicleTypeService>? editModalComponent;
    private List<FormFieldDefinition> formFields = new();
    private Dictionary<string, string> formSections = new();
    private Task<VehicleType?> LoadVehicleTypeData()
        => EditDataLoaderHelper.LoadOrCreateAsync<VehicleType, IVehicleTypeService>(
            VehicleTypeId, VehicleTypeService, NotificationService, "車型", "VT", PrefilledValues,
            v => v.Name = string.Empty);

    protected override void OnParametersSet()
    {
        if (IsVisible)
        {
            InitializeFormFields();
        }
    }

    private void InitializeFormFields()
    {
        formFields = new List<FormFieldDefinition>
        {
            new()
            {
                PropertyName = nameof(VehicleType.Code),
                Label = L["Field.VehicleTypeCode"],
                FieldType = FormFieldType.Text,
                Placeholder = L["Placeholder.PleaseInput", L["Field.VehicleTypeCode"]],
                IsRequired = true,
                MaxLength = 50,
                HelpText = "唯一識別此車型的編號，最多50個字元"
            },
            new()
            {
                PropertyName = nameof(VehicleType.Name),
                Label = L["Field.VehicleTypeName"],
                FieldType = FormFieldType.Text,
                Placeholder = L["Placeholder.PleaseInput", L["Field.VehicleTypeName"]],
                IsRequired = true,
                MaxLength = 50,
                HelpText = "顯示用的車型名稱，最多50個字元"
            },
            new()
            {
                PropertyName = nameof(VehicleType.Description),
                Label = L["Field.VehicleTypeDescription"],
                FieldType = FormFieldType.TextArea,
                Placeholder = L["Placeholder.PleaseInput", L["Field.VehicleTypeDescription"]],
                IsRequired = false,
                MaxLength = 100,
                HelpText = "車型的詳細說明，最多100個字元"
            },

            FormFieldConfigurationHelper.CreateRemarksField<VehicleType>()
        };

        formSections = FormSectionHelper<VehicleType>.Create()
            .AddToSection(FormSectionNames.BasicInfo,
                vt => vt.Code,
                vt => vt.Name)
            .AddToSection(FormSectionNames.AdditionalInfo,
                vt => vt.Description,
                vt => vt.Remarks)
            .Build();
    }

}
