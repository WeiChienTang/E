@page "/examples/basic-info"
@using ERPCore2.Components.Shared.Details
@using ERPCore2.Data.Entities
@using ERPCore2.Data.Enums

<PageTitle>基本資料顯示組件範例</PageTitle>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="mb-4">
                <h2 class="text-primary">🎨 基本資料顯示組件範例</h2>
                <p class="text-muted">BasicInfoDisplayComponent 的使用展示</p>
                <hr />
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <h4 class="mb-3">📋 角色資料展示</h4>
            <BasicInfoDisplayComponent 
                Title="角色基本資訊"
                IconClass="fas fa-user-tag"
                IconColor="text-primary"
                Fields="@GetRoleFields()"
                ShowFieldCount="true"
                ShowStatistics="true"
                DefaultColSize="6" />
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <h4 class="mb-3">👤 員工資料展示</h4>
            <BasicInfoDisplayComponent 
                Title="員工基本資訊"
                IconClass="fas fa-user"
                IconColor="text-success"
                Fields="@GetEmployeeFields()"
                ShowFieldCount="false"
                ShowStatistics="false"
                DefaultColSize="4" />
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <h4 class="mb-3">🏢 公司資料展示</h4>
            <BasicInfoDisplayComponent 
                Title="公司基本資訊"
                IconClass="fas fa-building"
                IconColor="text-info"
                Fields="@GetCompanyFields()"
                ShowFieldCount="true"
                ShowStatistics="true"
                DefaultColSize="6">
                <AdditionalContent>
                    <div class="alert alert-info">
                        <i class="fas fa-lightbulb me-2"></i>
                        <strong>提示：</strong>這是一個額外內容區域，可以放置任何自訂內容。
                    </div>
                </AdditionalContent>
            </BasicInfoDisplayComponent>
        </div>
    </div>
</div>

@code {
    // 角色資料示例
    private IEnumerable<BasicInfoDisplayComponent.BasicInfoField> GetRoleFields()
    {
        return new List<BasicInfoDisplayComponent.BasicInfoField>
        {
            new()
