@page "/examples/modern-details"
@using ERPCore2.Components.Shared.Details
@using ERPCore2.Components.Shared.Headers
@using ERPCore2.Components.Shared.Badges
@using Microsoft.AspNetCore.Components.Web

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="mb-4">
                <h2 class="text-primary">🎨 現代化詳細資料展示範例</h2>
                <p class="text-muted">GenericDetailsComponent 的現代化UI設計展示</p>
                <hr />
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <h4 class="mb-3">📋 現代化卡片展示</h4>
            <div class="detail-card-modern mb-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-person-fill me-2"></i>客戶基本資料
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6 mb-3">
                            <div class="detail-item detail-item-highlight">
                                <div class="detail-label">公司名稱</div>
                                <div class="detail-value">台積電股份有限公司</div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="detail-item">
                                <div class="detail-label">統一編號</div>
                                <div class="detail-value">12345678</div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="detail-item detail-item-clickable">
                                <div class="detail-label">聯絡人</div>
                                <div class="detail-value">張經理</div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="detail-item">
                                <div class="detail-label">電話</div>
                                <div class="detail-value">
                                    <a href="tel:(02)2123-4567" class="text-decoration-none">(02) 2123-4567</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="detail-item">
                                <div class="detail-label">狀態</div>
                                <div class="detail-value">
                                    <span class="badge bg-success">活躍</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="detail-item">
                                <div class="detail-label">成立日期</div>
                                <div class="detail-value">2020/05/15</div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="detail-item">
                                <div class="detail-label">信用額度</div>
                                <div class="detail-value">
                                    <span class="text-success fw-semibold">NT$ 5,000,000</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="detail-item">
                                <div class="detail-label">VIP客戶</div>
                                <div class="detail-value">
                                    <span class="text-success">是</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="detail-item">
                                <div class="detail-label">完成度</div>
                                <div class="detail-value">85.5%</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <h4 class="mb-3">🎯 現代化標籤頁展示</h4>
            <div class="detail-tabs-modern mb-4">
                <div class="card-header p-0">
                    <ul class="nav nav-tabs card-header-tabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab1" type="button">
                                <i class="bi bi-person-fill me-2"></i>基本資料
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab2" type="button">
                                <i class="bi bi-telephone-fill me-2"></i>聯絡資訊
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab3" type="button">
                                <i class="bi bi-geo-alt-fill me-2"></i>地址資訊
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="tab1">
                            <div class="row g-3">
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <div class="detail-label">公司名稱</div>
                                        <div class="detail-value">台積電股份有限公司</div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <div class="detail-label">統一編號</div>
                                        <div class="detail-value">12345678</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="tab2">
                            <div class="row g-3">
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <div class="detail-label">公司電話</div>
                                        <div class="detail-value">(02) 2123-4567</div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <div class="detail-label">Email</div>
                                        <div class="detail-value">
                                            <a href="mailto:info@company.com" class="text-decoration-none">info@company.com</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="tab3">
                            <div class="row g-3">
                                <div class="col-md-12 mb-3">
                                    <div class="detail-item">
                                        <div class="detail-label">營業地址</div>
                                        <div class="detail-value">(10001) 台北市中正區重慶南路一段122號</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <h4 class="mb-3">📂 現代化摺疊面板展示</h4>
            <div class="accordion accordion-modern">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1">
                            <i class="bi bi-cart-fill me-2"></i>訂單資訊
                        </button>
                    </h2>
                    <div id="collapse1" class="accordion-collapse collapse show">
                        <div class="accordion-body">
                            <div class="row g-3">
                                <div class="col-md-4 mb-3">
                                    <div class="detail-item detail-item-highlight">
                                        <div class="detail-label">訂單編號</div>
                                        <div class="detail-value">ORD-2024-001</div>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="detail-item">
                                        <div class="detail-label">訂單日期</div>
                                        <div class="detail-value">2024/06/16</div>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="detail-item">
                                        <div class="detail-label">訂單狀態</div>
                                        <div class="detail-value">
                                            <span class="badge bg-warning">處理中</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2">
                            <i class="bi bi-truck me-2"></i>配送資訊
                        </button>
                    </h2>
                    <div id="collapse2" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            <div class="row g-3">
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <div class="detail-label">配送方式</div>
                                        <div class="detail-value">公司配送</div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <div class="detail-label">運費</div>
                                        <div class="detail-value">
                                            <span class="text-success fw-semibold">NT$ 500</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <h4 class="mb-3">� 空狀態展示</h4>
            <div class="detail-card-modern">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-inbox me-2"></i>空資料展示
                    </h6>
                </div>
                <div class="card-body">
                    <div class="empty-state">
                        <div class="empty-icon">📄</div>
                        <h6 class="empty-title">暫無資料</h6>
                        <p class="empty-description text-muted">這個區塊目前沒有可顯示的內容</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4 mb-5">
        <div class="col-12">
            <div class="alert alert-info">
                <h5><i class="bi bi-info-circle me-2"></i>設計特色說明</h5>
                <ul class="mb-0">
                    <li><strong>現代化色彩系統</strong>：使用藍色主調搭配漸層效果</li>
                    <li><strong>微互動設計</strong>：hover 效果、動畫過渡、點擊回饋</li>
                    <li><strong>視覺層次</strong>：清晰的標籤、數值對比和分組</li>
                    <li><strong>響應式布局</strong>：適配手機、平板、桌面端</li>
                    <li><strong>無障礙設計</strong>：符合 ARIA 標準的標籤頁和摺疊面板</li>
                </ul>
            </div>
        </div>
    </div>
</div>

