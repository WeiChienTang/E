@page "/examples/advanced-basic-info"
@using ERPCore2.Components.Shared.Details

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="mb-4">
                <h2 class="text-primary">🚀 進階 BasicInfoDisplayComponent 功能展示</h2>
                <p class="text-muted">展示各種欄位類型和格式化選項</p>
                <hr />
            </div>
        </div>
    </div>
    
    <!-- 客戶資料展示 -->
    <div class="row">
        <div class="col-12">
            <h4 class="mb-3">👥 客戶基本資料</h4>
            <BasicInfoDisplayComponent 
                Title="客戶基本資訊"
                IconClass="fas fa-building"
                IconColor="text-success"
                Fields="@GetCustomerFields()"
                ShowFieldCount="true"
                ShowStatistics="true"
                DefaultColSize="6" />
        </div>
    </div>
    
    <!-- 廠商資料展示 -->
    <div class="row mt-4">
        <div class="col-12">
            <h4 class="mb-3">🏭 廠商基本資料</h4>
            <BasicInfoDisplayComponent 
                Title="廠商基本資訊"
                IconClass="fas fa-truck"
                IconColor="text-primary"
                Fields="@GetSupplierFields()"
                ShowFieldCount="true"
                DefaultColSize="6" />
        </div>
    </div>
    
    <!-- 產品資料展示 -->
    <div class="row mt-4">
        <div class="col-12">
            <h4 class="mb-3">📦 產品基本資料</h4>
            <BasicInfoDisplayComponent 
                Title="產品基本資訊"
                IconClass="fas fa-box"
                IconColor="text-warning"
                Fields="@GetProductFields()"
                ShowFieldCount="false"
                DefaultColSize="4" />
        </div>
    </div>
    
    <!-- 員工資料展示 -->
    <div class="row mt-4">
        <div class="col-12">
            <h4 class="mb-3">👨‍💼 員工基本資料</h4>
            <BasicInfoDisplayComponent 
                Title="員工基本資訊"
                IconClass="fas fa-user"
                IconColor="text-info"
                Fields="@GetEmployeeFields()"
                DefaultColSize="6" />
        </div>
    </div>
</div>

