@page "/sharedcomponentsdemo/headers"
@using static ERPCore2.Components.Shared.Buttons.ButtonComponent
@rendermode InteractiveServer

<PageTitle>Headers 元件展示</PageTitle>

<div class="container-fluid">
    <h1 class="h3 mb-4">Headers 元件展示</h1>
    
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">PageHeaderComponent 元件範例</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        PageHeaderComponent 元件提供統一的頁面標題樣式，支援主標題、副標題、圖示和操作按鈕。
                    </p>
                    
                    <h6>範例 1: 基本標題</h6>
                    <div class="border p-3 mb-4 bg-light">
                        <div class="card">
                            <PageHeaderComponent Title="基本標題" />
                            <div class="card-body">
                                <p class="mb-0">這是一個基本的頁面標題，沒有任何額外的元素。</p>
                            </div>
                        </div>
                    </div>
                    
                    <h6>範例 2: 帶副標題的標題</h6>
                    <div class="border p-3 mb-4 bg-light">
                        <div class="card">
                            <PageHeaderComponent Title="主標題" Subtitle="這是副標題說明" />
                            <div class="card-body">
                                <p class="mb-0">主標題搭配副標題，提供更詳細的頁面說明。</p>
                            </div>
                        </div>
                    </div>
                    
                    <h6>範例 3: 帶圖示的標題</h6>
                    <div class="border p-3 mb-4 bg-light">
                        <div class="card">
                            <PageHeaderComponent Title="客戶管理" IconClass="bi bi-people-fill" />
                            <div class="card-body">
                                <p class="mb-0">標題前面加上相關的 Bootstrap 圖示，讓頁面更具視覺效果。</p>
                            </div>
                        </div>
                    </div>
                    
                    <h6>範例 4: 完整的標題 (標題 + 副標題 + 圖示)</h6>
                    <div class="border p-3 mb-4 bg-light">
                        <div class="card">
                            <PageHeaderComponent 
                                Title="產品管理" 
                                Subtitle="管理所有產品資訊" 
                                IconClass="bi bi-box-seam-fill" />
                            <div class="card-body">
                                <p class="mb-0">完整的頁面標題範例，包含圖示、主標題和副標題。</p>
                            </div>
                        </div>
                    </div>
                    
                    <h6>範例 5: 帶操作按鈕的標題</h6>
                    <div class="border p-3 mb-4 bg-light">
                        <div class="card">
                            <PageHeaderComponent Title="訂單管理" IconClass="bi bi-receipt-cutoff">
                                <Actions>
                                    <ButtonComponent Text="新增訂單" 
                                                   Variant="ButtonVariant.Primary" 
                                                   IconClass="bi bi-plus-lg"
                                                   OnClick="@(() => ShowMessage("點擊了新增訂單"))" />
                                    <ButtonComponent Text="匯出資料" 
                                                   Variant="ButtonVariant.Secondary" 
                                                   IconClass="bi bi-download"
                                                   OnClick="@(() => ShowMessage("點擊了匯出資料"))" />
                                </Actions>
                            </PageHeaderComponent>
                            <div class="card-body">
                                <p class="mb-0">標題右側可以放置相關的操作按鈕，如新增、匯出等功能。</p>
                            </div>
                        </div>
                    </div>
                    
                    <h6>範例 6: 完整功能的標題</h6>
                    <div class="border p-3 mb-4 bg-light">
                        <div class="card">
                            <PageHeaderComponent 
                                Title="報表中心" 
                                Subtitle="查看和管理各種業務報表"
                                IconClass="bi bi-graph-up">
                                <Actions>
                                    <ButtonComponent Text="產生報表" 
                                                   Variant="ButtonVariant.Success" 
                                                   IconClass="bi bi-file-earmark-text"
                                                   OnClick="@(() => ShowMessage("點擊了產生報表"))" />                                    <ButtonComponent Text="設定" 
                                                   Variant="ButtonVariant.OutlinePrimary" 
                                                   IconClass="bi bi-gear"
                                                   OnClick="@(() => ShowMessage("點擊了設定"))" />
                                </Actions>
                            </PageHeaderComponent>
                            <div class="card-body">
                                <p class="mb-0">完整功能的頁面標題，包含所有可用的元素：圖示、主標題、副標題和操作按鈕。</p>
                            </div>
                        </div>
                    </div>
                    
                    <h6>範例 7: 自訂 CSS 樣式</h6>
                    <div class="border p-3 mb-4 bg-light">
                        <div class="card">
                            <PageHeaderComponent 
                                Title="特殊頁面" 
                                Subtitle="使用自訂樣式"
                                IconClass="bi bi-star-fill"
                                CssClass="bg-primary-subtle">
                                <Actions>
                                    <ButtonComponent Text="特殊操作" 
                                                   Variant="ButtonVariant.Warning" 
                                                   IconClass="bi bi-magic"
                                                   OnClick="@(() => ShowMessage("點擊了特殊操作"))" />
                                </Actions>
                            </PageHeaderComponent>
                            <div class="card-body">
                                <p class="mb-0">通過 CssClass 參數可以為標題區域添加自訂的 CSS 樣式。</p>
                            </div>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(message))
                    {
                        <div class="alert alert-info alert-dismissible fade show mt-4" role="alert">
                            <i class="bi bi-info-circle me-2"></i>
                            @message
                            <button type="button" class="btn-close" @onclick="ClearMessage"></button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string message = string.Empty;
    
    private void ShowMessage(string msg)
    {
        message = msg;
        StateHasChanged();
    }
    
    private void ClearMessage()
    {
        message = string.Empty;
        StateHasChanged();
    }
}
