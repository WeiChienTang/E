            _previousFilterProductId = EffectiveFilterProductId;

            // è§¸ç™¼é‡æ–°æ¸²æŸ“ä»¥å¥—ç”¨æ–°çš„ç¯©é¸æ¢ä»¶
            StateHasChanged();
