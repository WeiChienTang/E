@* 採購訂單 → 進貨記錄 Tab（唯讀） *@
@inject IPurchaseReceivingService PurchaseReceivingService

@if (_orderId <= 0)
{
    <div class="text-muted py-4 px-2">
        <i class="bi bi-info-circle me-2"></i>請先儲存訂單，再查看進貨記錄。
    </div>
}
else if (_isLoading)
{
    <div class="text-muted py-4 px-2">
        <i class="bi bi-hourglass-split me-2"></i>載入中...
    </div>
}
else if (!_receivings.Any())
{
    <div class="text-muted py-4 px-2">
        <i class="bi bi-inbox me-2"></i>此訂單無相關進貨記錄。
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>進貨單號</th>
                    <th>進貨日期</th>
                    <th>廠商</th>
                    <th>批號</th>
                    <th class="text-end">金額（含稅）</th>
                    <th style="width:60px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var receiving in _receivings)
                {
                    <tr>
                        <td class="font-monospace small">@receiving.Code</td>
                        <td>@receiving.ReceiptDate.ToString("yyyy-MM-dd")</td>
                        <td>@(receiving.Supplier?.CompanyName ?? "—")</td>
                        <td>@(string.IsNullOrEmpty(receiving.BatchNumber) ? "—" : receiving.BatchNumber)</td>
                        <td class="text-end">@receiving.PurchaseReceivingTotalAmountIncludingTax.ToString("N0")</td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-outline-primary"
                                    title="開啟進貨單"
                                    @onclick="@(() => OnOpenReceiving.InvokeAsync(receiving.Id))">
                                <i class="bi bi-box-arrow-up-right"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    /// <summary>點擊進貨單時觸發，傳入 PurchaseReceivingId</summary>
    [Parameter] public EventCallback<int> OnOpenReceiving { get; set; }

    private int _orderId;
    private bool _isLoading;
    private List<PurchaseReceiving> _receivings = new();

    public async Task LoadAsync(int orderId)
    {
        _orderId = orderId;
        _isLoading = true;
        StateHasChanged();

        _receivings = await PurchaseReceivingService.GetByPurchaseOrderAsync(orderId);

        _isLoading = false;
        StateHasChanged();
    }

    public void Clear()
    {
        _orderId = 0;
        _receivings = new();
        StateHasChanged();
    }
}
