@* 採購退回 → 原始進貨記錄 Tab（唯讀） *@
@using Microsoft.Extensions.Localization
@inject IPurchaseReceivingService PurchaseReceivingService
@inject IStringLocalizer<SharedResource> L

@if (_isLoading)
{
    <div class="text-muted py-4 px-2">
        <i class="bi bi-hourglass-split me-2"></i>@L["Label.Loading"]
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>@L["Column.ReceivingCode"]</th>
                    <th>@L["Column.ReceivingDate"]</th>
                    <th>@L["Column.SupplierName"]</th>
                    <th>@L["Column.BatchNumber"]</th>
                    <th class="text-end">@L["Column.AmountWithTax"]</th>
                    <th style="width:60px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var receiving in _receivings)
                {
                    <tr>
                        <td class="font-monospace small">@receiving.Code</td>
                        <td>@receiving.ReceiptDate.ToString("yyyy-MM-dd")</td>
                        <td>@(receiving.Supplier?.CompanyName ?? "—")</td>
                        <td>@(string.IsNullOrEmpty(receiving.BatchNumber) ? "—" : receiving.BatchNumber)</td>
                        <td class="text-end">@receiving.PurchaseReceivingTotalAmountIncludingTax.ToString("N0")</td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-outline-primary"
                                    title="@L["Button.OpenReceiving"].ToString()"
                                    @onclick="@(() => OnOpenReceiving.InvokeAsync(receiving.Id))">
                                <i class="bi bi-box-arrow-up-right"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    /// <summary>點擊進貨單時觸發，傳入 PurchaseReceivingId</summary>
    [Parameter] public EventCallback<int> OnOpenReceiving { get; set; }

    private int _returnId;
    private bool _isLoading;
    private List<PurchaseReceiving> _receivings = new();

    public async Task LoadAsync(int returnId)
    {
        _returnId = returnId;
        _isLoading = true;
        StateHasChanged();

        _receivings = await PurchaseReceivingService.GetByPurchaseReturnIdAsync(returnId);

        _isLoading = false;
        StateHasChanged();
    }

    public void Clear()
    {
        _returnId = 0;
        _receivings = new();
        StateHasChanged();
    }
}
