@* 採購退回 → 沖款記錄 Tab（唯讀） *@
@using Microsoft.Extensions.Localization
@inject ISetoffDocumentService SetoffDocumentService
@inject IStringLocalizer<SharedResource> L

@if (_isLoading)
{
    <div class="text-muted py-4 px-2">
        <i class="bi bi-hourglass-split me-2"></i>@L["Label.Loading"]
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>@L["Column.SetoffCode"]</th>
                    <th>@L["Column.SetoffDate"]</th>
                    <th class="text-end">@L["Column.SetoffAmount"]</th>
                    <th class="text-end">@L["Column.CollectionAmount"]</th>
                    <th>@L["Column.IsJournalized"]</th>
                    <th style="width:60px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var setoff in _setoffs)
                {
                    <tr>
                        <td class="font-monospace small">@setoff.Code</td>
                        <td>@setoff.SetoffDate.ToString("yyyy-MM-dd")</td>
                        <td class="text-end">@setoff.CurrentSetoffAmount.ToString("N0")</td>
                        <td class="text-end">@setoff.TotalCollectionAmount.ToString("N0")</td>
                        <td>
                            @if (setoff.IsJournalized)
                            {
                                <span class="text-success small"><i class="bi bi-check-circle me-1"></i>@L["Label.Yes"]</span>
                            }
                            else
                            {
                                <span class="text-muted small"><i class="bi bi-dash-circle me-1"></i>@L["Label.No"]</span>
                            }
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-outline-primary"
                                    title="@L["Button.OpenSetoff"].ToString()"
                                    @onclick="@(() => OnOpenSetoff.InvokeAsync(setoff.Id))">
                                <i class="bi bi-box-arrow-up-right"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    /// <summary>點擊沖款單時觸發，傳入 SetoffDocumentId</summary>
    [Parameter] public EventCallback<int> OnOpenSetoff { get; set; }

    private int _returnId;
    private bool _isLoading;
    private List<SetoffDocument> _setoffs = new();

    public async Task LoadAsync(int returnId)
    {
        _returnId = returnId;
        _isLoading = true;
        StateHasChanged();

        _setoffs = await SetoffDocumentService.GetByPurchaseReturnIdAsync(returnId);

        _isLoading = false;
        StateHasChanged();
    }

    public void Clear()
    {
        _returnId = 0;
        _setoffs = new();
        StateHasChanged();
    }
}
