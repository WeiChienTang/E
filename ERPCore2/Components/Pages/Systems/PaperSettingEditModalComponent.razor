@* 可重用的紙張設定編輯組件 - 可在任何頁面中嵌入 *@
@inject IPaperSettingService PaperSettingService
@inject INotificationService NotificationService
@inject IStringLocalizer<SharedResource> L

<GenericEditModalComponent TEntity="PaperSetting"
                          TService="IPaperSettingService"
                          @ref="editModalComponent"
                          IsVisible="@IsVisible"
                          IsVisibleChanged="@IsVisibleChanged"
                          @bind-Id="@PaperSettingId"
                          Service="@PaperSettingService"
                          EntityName="@L["Entity.PaperSetting"]"
                          EntityNamePlural="@L["Entity.PaperSetting"]"
                          ModalTitle="@(PaperSettingId.HasValue ? L["Message.EditTitle", L["Entity.PaperSetting"]].ToString() : L["Message.CreateTitle", L["Entity.PaperSetting"]].ToString())"
                          Size="GenericEditModalComponent<PaperSetting, IPaperSettingService>.ModalSize.Desktop"
                          UseGenericForm="true"
                          FormFields="@formFields"
                          FormSections="@formSections"
                          DataLoader="@LoadPaperSettingData"
                          UseGenericSave="true"
                          SaveSuccessMessage="@(PaperSettingId.HasValue ? L["Message.UpdateSuccess", L["Entity.PaperSetting"]].ToString() : L["Message.CreateSuccess", L["Entity.PaperSetting"]].ToString())"
                          SaveFailureMessage="@L["Message.SaveFailure", L["Entity.PaperSetting"]]"
                          RequiredPermission="PaperSetting.Read"
                          OnEntitySaved="@OnPaperSettingSaved"
                          OnCancel="@OnCancel"
                          CustomActionButtons="@CustomActionButtons" />

@* 現有紙張列表 Modal *@
<ExistingPaperListModalComponent IsVisible="@showExistingPaperModal"
                                  IsVisibleChanged="@((bool visible) => showExistingPaperModal = visible)"
                                  OnPaperSelected="@HandleExistingPaperSelected"
                                  OnCancel="@(() => showExistingPaperModal = false)"
                                  ExcludeId="@PaperSettingId" />

@code {
    // ===== 參數 =====
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public int? PaperSettingId { get; set; }
    [Parameter] public EventCallback<PaperSetting> OnPaperSettingSaved { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public Dictionary<string, object?>? PrefilledValues { get; set; }

    // ===== 內部狀態 =====
    private GenericEditModalComponent<PaperSetting, IPaperSettingService>? editModalComponent;
    private List<FormFieldDefinition> formFields = new();
    private Dictionary<string, string> formSections = new();
    
    // 現有紙張 Modal 控制
    private bool showExistingPaperModal = false;

    // ===== 生命週期 =====
    protected override void OnParametersSet()
    {
        if (IsVisible)
        {
            InitializeFormFields();
        }
    }
    private Task<PaperSetting?> LoadPaperSettingData()
        => EditDataLoaderHelper.LoadOrCreateAsync<PaperSetting, IPaperSettingService>(
            PaperSettingId, PaperSettingService, NotificationService, "紙張設定", "PAPER", PrefilledValues,
            p => p.Name = string.Empty);
    // ===== 表單初始化 =====
    private void InitializeFormFields()
    {
        try
        {
            formFields = new List<FormFieldDefinition>
            {
                // 基本資訊區段
                new()
                {
                    PropertyName = nameof(PaperSetting.Code),
                    Label = L["Field.PaperCode"],
                    FieldType = FormFieldType.Text,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.PaperCode"]],
                    IsRequired = true,
                    HelpText = "紙張的唯一識別編號，新增時系統會自動產生，也可手動修改"
                },
                new()
                {
                    PropertyName = nameof(PaperSetting.Name),
                    Label = L["Field.Paper"],
                    FieldType = FormFieldType.Text,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.Paper"]],
                    IsRequired = true,
                    HelpText = "紙張的正式名稱，例如：A4、A3、Letter 等"
                },
                
                new()
                {
                    PropertyName = nameof(PaperSetting.Width),
                    Label = L["Field.PaperWidth"],
                    FieldType = FormFieldType.Number,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.PaperWidth"]],
                    IsRequired = true,
                    HelpText = "紙張寬度，單位為厘米 (cm)，例如 A4 為 21.0cm",
                },
                new()
                {
                    PropertyName = nameof(PaperSetting.Height),
                    Label = L["Field.PaperHeight"],
                    FieldType = FormFieldType.Number,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.PaperHeight"]],
                    IsRequired = true,
                    HelpText = "紙張高度，單位為厘米 (cm)，例如 A4 為 29.7cm",
                },
                new()
                {
                    PropertyName = nameof(PaperSetting.TopMargin),
                    Label = L["Field.PaperTopMargin"],
                    FieldType = FormFieldType.Number,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.PaperTopMargin"]],
                    IsRequired = false,
                    HelpText = "紙張上邊距，單位為厘米 (cm)",
                },
                new()
                {
                    PropertyName = nameof(PaperSetting.BottomMargin),
                    Label = L["Field.PaperBottomMargin"],
                    FieldType = FormFieldType.Number,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.PaperBottomMargin"]],
                    IsRequired = false,
                    HelpText = "紙張下邊距，單位為厘米 (cm)",
                },
                new()
                {
                    PropertyName = nameof(PaperSetting.LeftMargin),
                    Label = L["Field.PaperLeftMargin"],
                    FieldType = FormFieldType.Number,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.PaperLeftMargin"]],
                    IsRequired = false,
                    HelpText = "紙張左邊距，單位為厘米 (cm)",
                },
                new()
                {
                    PropertyName = nameof(PaperSetting.RightMargin),
                    Label = L["Field.PaperRightMargin"],
                    FieldType = FormFieldType.Number,
                    Placeholder = L["Placeholder.PleaseInput", L["Field.PaperRightMargin"]],
                    IsRequired = false,
                    HelpText = "紙張右邊距，單位為厘米 (cm)",
                },
                FormFieldConfigurationHelper.CreateRemarksField<PaperSetting>(
                    label: L["Label.Remarks"],
                    placeholder: L["Placeholder.Remarks"],
                    helpText: "其他需要補充的資訊",
                    rows: 2,
                    containerCssClass: "col-12"
                )
            };

            formSections = FormSectionHelper<PaperSetting>.Create()
                .AddToSection(FormSectionNames.BasicInfo,
                    ps => ps.Code,
                    ps => ps.Name)
                .AddToSection("紙張大小",
                    ps => ps.Width,
                    ps => ps.Height,
                    ps => ps.TopMargin,
                    ps => ps.BottomMargin,
                    ps => ps.LeftMargin,
                    ps => ps.RightMargin)
                .AddToSection(FormSectionNames.AdditionalData,
                    ps => ps.Remarks)
                .Build();
        }
        catch (Exception)
        {
            _ = NotificationService.ShowErrorAsync("初始化表單欄位時發生錯誤");
        }
    }

    // ===== 自訂操作按鈕 =====
    
    /// <summary>
    /// 自訂操作按鈕（顯示在 Modal 頂部左側）
    /// </summary>
    private RenderFragment? CustomActionButtons => __builder =>
    {
        @* 查詢紙張按鈕 *@
        <GenericButtonComponent Text="@L["Button.QueryPaper"]"
                              Icon="bi bi-search"
                              Variant="ButtonVariant.Blue"
                              OnClick="@HandleOpenExistingPaperModal"
                              CssClass="me-2" />
    };
    
    /// <summary>
    /// 開啟現有紙張列表 Modal
    /// </summary>
    private void HandleOpenExistingPaperModal()
    {
        showExistingPaperModal = true;
    }
    
    /// <summary>
    /// 處理選取現有紙張
    /// </summary>
    private async Task HandleExistingPaperSelected(PaperSetting selectedPaper)
    {
        try
        {
            if (editModalComponent?.Entity == null)
            {
                await NotificationService.ShowErrorAsync("無法設定紙張資訊");
                return;
            }
            
            // 將選取的紙張尺寸資訊填入表單（不複製編號和名稱）
            var entity = editModalComponent.Entity;
            entity.Width = selectedPaper.Width;
            entity.Height = selectedPaper.Height;
            entity.TopMargin = selectedPaper.TopMargin;
            entity.BottomMargin = selectedPaper.BottomMargin;
            entity.LeftMargin = selectedPaper.LeftMargin;
            entity.RightMargin = selectedPaper.RightMargin;
            
            // 關閉紙張列表 Modal
            showExistingPaperModal = false;
            
            // 刷新表單顯示
            StateHasChanged();
            
            await NotificationService.ShowSuccessAsync($"已套用「{selectedPaper.Name}」的尺寸設定");
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(HandleExistingPaperSelected), GetType());
            await NotificationService.ShowErrorAsync("設定紙張資訊時發生錯誤");
        }
    }

    // ===== 公開方法 (供父組件調用) =====
    public Task ShowAddModal() => editModalComponent!.ShowAddModal();
    public Task ShowEditModal(int id) => editModalComponent!.ShowEditModal(id);
}
