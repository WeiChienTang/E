@* 可重用的印表機設定編輯組件 - 可在任何頁面中嵌入 *@
@using ERPCore2.Models
@inject IPrinterConfigurationService PrinterConfigurationService
@inject IPrinterTestService PrinterTestService
@inject INotificationService NotificationService

<GenericEditModalComponent TEntity="PrinterConfiguration" 
                          TService="IPrinterConfigurationService"
                          @ref="editModalComponent"
                          IsVisible="@IsVisible"
                          IsVisibleChanged="@IsVisibleChanged"
                          @bind-Id="@PrinterConfigurationId"
                          Service="@PrinterConfigurationService"
                          EntityName="印表機設定"
                          EntityNamePlural="印表機設定"
                          ModalTitle="@(PrinterConfigurationId.HasValue ? "編輯印表機設定" : "新增印表機設定")"
                          Size="GenericEditModalComponent<PrinterConfiguration, IPrinterConfigurationService>.ModalSize.Desktop"
                          UseGenericForm="true"
                          FormFields="@GetFormFields()"
                          FormSections="@formSections"
                          DataLoader="@LoadPrinterConfigurationData"
                          UseGenericSave="true"
                          SaveSuccessMessage="@(PrinterConfigurationId.HasValue ? "印表機設定更新成功" : "印表機設定新增成功")"
                          SaveFailureMessage="印表機設定儲存失敗"
                          RequiredPermission="PrinterConfiguration.Read"
                          OnSaveSuccess="@HandleSaveSuccess"
                          OnCancel="@HandleCancel"
                          OnEntityLoaded="@HandleEntityLoaded"
                          CustomActionButtons="@CustomActionButtons" />

@* 已安裝印表機列表 Modal *@
<InstalledPrinterListModalComponent IsVisible="@showInstalledPrinterModal"
                                    IsVisibleChanged="@((bool visible) => showInstalledPrinterModal = visible)"
                                    OnPrinterSelected="@HandleInstalledPrinterSelected"
                                    OnCancel="@(() => showInstalledPrinterModal = false)" />

@code {
    // ===== 參數 =====
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public int? PrinterConfigurationId { get; set; }
    [Parameter] public EventCallback<PrinterConfiguration> OnPrinterConfigurationSaved { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public Dictionary<string, object?>? PrefilledValues { get; set; }

    // ===== 內部狀態 =====
    private GenericEditModalComponent<PrinterConfiguration, IPrinterConfigurationService>? editModalComponent;
    private List<FormFieldDefinition> formFields = new();
    private Dictionary<string, string> formSections = new();
    
    // 已安裝印表機 Modal 控制
    private bool showInstalledPrinterModal = false;

    // ===== 生命週期 =====
    
    /// <summary>
    /// 處理實體載入完成事件（由 GenericEditModalComponent 的導航觸發）
    /// 當上下筆切換時觸發 UI 更新，確保表單欄位正確渲染
    /// </summary>
    private async Task HandleEntityLoaded(int loadedEntityId)
    {
        try
        {
            // 對於沒有明細的純主檔組件，只需要觸發 UI 更新即可
            StateHasChanged();
            await Task.CompletedTask;
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"載入資料時發生錯誤：{ex.Message}");
        }
    }

    // ===== 事件處理 =====
    private async Task HandleSaveSuccess()
    {
        // 直接使用 editModalComponent.Entity，儲存後 GenericEditModalComponent 會更新此實體（包含新增時產生的 Id）
        if (editModalComponent?.Entity != null)
        {
            await OnPrinterConfigurationSaved.InvokeAsync(editModalComponent.Entity);
        }
        // CloseModal 已由 GenericEditModalComponent 統一控制
    }

    private async Task HandleCancel()
    {
        try
        {
            if (OnCancel.HasDelegate)
            {
                await OnCancel.InvokeAsync();
            }
            await CloseModal();
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(HandleCancel), GetType(),
                additionalData: "處理印表機設定取消事件時發生錯誤");
        }
    }

    private async Task HandleTestPrint()
    {
        try
        {
            // 取得當前的印表機配置
            var currentConfiguration = editModalComponent?.Entity;
            if (currentConfiguration == null)
            {
                await NotificationService.ShowErrorAsync("請先填寫印表機配置資料");
                return;
            }

            // 檢查必要欄位：印表機名稱（系統印表機名稱）
            if (string.IsNullOrWhiteSpace(currentConfiguration.Name))
            {
                await NotificationService.ShowErrorAsync("請先選取印表機（點擊「查詢印表機」按鈕）");
                return;
            }

            // 網路印表機需要 IP 位址
            if (currentConfiguration.ConnectionType == PrinterConnectionType.Network)
            {
                if (string.IsNullOrWhiteSpace(currentConfiguration.IpAddress))
                {
                    await NotificationService.ShowErrorAsync("網路印表機需要設定IP位址");
                    return;
                }
            }

            await NotificationService.ShowInfoAsync("正在測試印表機連接，請稍候...");

            // 執行測試列印
            var testResult = await PrinterTestService.TestPrintAsync(currentConfiguration);
            
            if (testResult.IsSuccess)
            {
                await NotificationService.ShowSuccessAsync("測試列印成功！");
            }
            else
            {
                await NotificationService.ShowErrorAsync($"測試列印失敗：{testResult.ErrorMessage}");
            }
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(HandleTestPrint), GetType(),
                additionalData: "執行測試列印時發生錯誤");
            await NotificationService.ShowErrorAsync("測試列印時發生錯誤，請檢查印表機配置");
        }
    }

    private async Task CloseModal()
    {
        if (IsVisibleChanged.HasDelegate)
        {
            await IsVisibleChanged.InvokeAsync(false);
        }
    }

    // ===== 資料載入 =====
    private async Task<PrinterConfiguration?> LoadPrinterConfigurationData()
    {
        try
        {
            if (!PrinterConfigurationId.HasValue)
            {
                // 新增模式：建立新的印表機設定實體並生成編號
                var newPrinterConfiguration = new PrinterConfiguration
                {
                    Name = string.Empty,
                    Code = await EntityCodeGenerationHelper.GenerateForEntity<PrinterConfiguration, IPrinterConfigurationService>(PrinterConfigurationService, "PRT"),
                    ConnectionType = PrinterConnectionType.USB
                };
                
                // 應用預填值
                PrefilledValueHelper.ApplyPrefilledValues(newPrinterConfiguration, PrefilledValues);
                
                return newPrinterConfiguration;
            }
            
            return await PrinterConfigurationService.GetByIdAsync(PrinterConfigurationId.Value);
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(LoadPrinterConfigurationData), GetType(),
                additionalData: $"載入印表機設定資料失敗，ID: {PrinterConfigurationId}");
            await NotificationService.ShowErrorAsync("載入印表機設定資料時發生錯誤");
            return null;
        }
    }

    protected override void OnParametersSet()
    {
        if (IsVisible)
        {
            InitializeFormFields();
        }
    }

    // ===== 表單初始化 =====
    private void InitializeFormFields()
    {
        try
        {
            formFields = new List<FormFieldDefinition>
            {
                new()
                {
                    PropertyName = nameof(PrinterConfiguration.Code),
                    Label = "印表機編號",
                    FieldType = FormFieldType.Text,
                    IsRequired = true,
                    MaxLength = 50,
                    Order = 0,
                    Placeholder = "請輸入印表機編號",
                    HelpText = "印表機的唯一識別編號，新增時系統會自動產生，也可手動修改"
                },
                new()
                {
                    PropertyName = nameof(PrinterConfiguration.Name),
                    Label = "系統印表機名稱",
                    FieldType = FormFieldType.Text,
                    IsRequired = true,
                    MaxLength = 100,
                    Order = 1,
                    Placeholder = "請點選「查詢印表機」選取",
                    HelpText = "請使用「查詢印表機」按鈕選取已安裝的印表機，此名稱必須與系統印表機名稱完全一致"
                },
                new()
                {
                    PropertyName = nameof(PrinterConfiguration.UsbPort),
                    Label = "連接埠",
                    FieldType = FormFieldType.Text,
                    IsRequired = false,
                    MaxLength = 50,
                    Order = 2,
                    Placeholder = "自動填入",
                    HelpText = "選取印表機時自動填入，僅供參考識別用途"
                },
                new()
                {
                    PropertyName = nameof(PrinterConfiguration.IpAddress),
                    Label = "IP位址",
                    FieldType = FormFieldType.Text,
                    IsRequired = false,
                    MaxLength = 50,
                    Order = 3,
                    Placeholder = "請輸入IP位址",
                    HelpText = "網路印表機的IP位址，若USB連接埠無效則自動使用此設定"
                },

                FormFieldConfigurationHelper.CreateRemarksField<PrinterConfiguration>()
            };

            formSections = FormSectionHelper<PrinterConfiguration>.Create()
                .AddToSection(FormSectionNames.BasicInfo,
                    p => p.Code,
                    p => p.Name)
                .AddToSection("連接設定",
                    p => p.UsbPort,
                    p => p.IpAddress)
                .AddToSection(FormSectionNames.AdditionalInfo,
                    p => p.Remarks)
                .Build();
        }
        catch (Exception)
        {
            // 提供安全的後備值
            formFields = new List<FormFieldDefinition>();
        }
    }

    private List<FormFieldDefinition> GetFormFields()
    {
        return formFields;
    }

    // ===== 公開方法 (供父組件調用) =====

    /// <summary>
    /// 開啟新增印表機設定 Modal
    /// </summary>
    public async Task ShowAddModal()
    {
        try
        {
            PrinterConfigurationId = null;
            if (IsVisibleChanged.HasDelegate)
            {
                await IsVisibleChanged.InvokeAsync(true);
            }
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(ShowAddModal), GetType());
            await NotificationService.ShowErrorAsync("開啟新增表單時發生錯誤");
        }
    }

    /// <summary>
    /// 開啟編輯印表機設定 Modal
    /// </summary>
    public async Task ShowEditModal(int printerConfigurationId)
    {
        try
        {
            PrinterConfigurationId = printerConfigurationId;
            if (IsVisibleChanged.HasDelegate)
            {
                await IsVisibleChanged.InvokeAsync(true);
            }
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(ShowEditModal), GetType(),
                additionalData: $"印表機設定ID: {printerConfigurationId}");
            await NotificationService.ShowErrorAsync("開啟編輯表單時發生錯誤");
        }
    }

    // ===== 自訂操作按鈕 =====
    
    /// <summary>
    /// 自訂操作按鈕（顯示在 Modal 頂部左側）
    /// </summary>
    private RenderFragment? CustomActionButtons => __builder =>
    {
        @* 查詢已安裝印表機按鈕 *@
        <GenericButtonComponent Text="查詢印表機" 
                              Variant="ButtonVariant.Blue"
                              OnClick="@HandleOpenInstalledPrinterModal"/>
        @* 測試列印按鈕 *@
        <GenericButtonComponent Text="測試列印" 
                              Variant="ButtonVariant.Green"
                              OnClick="@HandleTestPrint"/>
    };
    
    /// <summary>
    /// 開啟已安裝印表機列表 Modal
    /// </summary>
    private void HandleOpenInstalledPrinterModal()
    {
        showInstalledPrinterModal = true;
    }
    
    /// <summary>
    /// 處理選取已安裝印表機
    /// </summary>
    private async Task HandleInstalledPrinterSelected(InstalledPrinterInfo selectedPrinter)
    {
        try
        {
            if (editModalComponent?.Entity == null)
            {
                await NotificationService.ShowErrorAsync("無法設定印表機資訊");
                return;
            }
            
            // 將選取的印表機資訊填入表單
            var entity = editModalComponent.Entity;
            entity.Name = selectedPrinter.Name;
            
            // 根據印表機類型填入連接資訊與連接方式
            if (selectedPrinter.IsNetworkPrinter)
            {
                // 網路印表機：設定連接方式為網路
                entity.ConnectionType = PrinterConnectionType.Network;
                entity.UsbPort = string.Empty;
                // 如果有共用名稱，嘗試從中取得伺服器資訊
                // 實際 IP 需要使用者手動輸入
            }
            else
            {
                // USB/本機印表機：設定連接方式為 USB，填入連接埠
                entity.ConnectionType = PrinterConnectionType.USB;
                entity.UsbPort = selectedPrinter.PortName;
                entity.IpAddress = string.Empty;
            }
            
            // 關閉印表機列表 Modal
            showInstalledPrinterModal = false;
            
            // 刷新表單顯示
            StateHasChanged();
            
            await NotificationService.ShowSuccessAsync($"已選取印表機：{selectedPrinter.Name}");
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(HandleInstalledPrinterSelected), GetType());
            await NotificationService.ShowErrorAsync("設定印表機資訊時發生錯誤");
        }
    }
}
