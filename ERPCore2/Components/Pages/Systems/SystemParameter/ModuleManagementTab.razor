@* 模組管理 Tab（SuperAdmin 限定） *@

@inject ICompanyModuleService CompanyModuleService
@inject INotificationService NotificationService
@inject AuthenticationStateProvider AuthStateProvider
@inject IStringLocalizer<SharedResource> L

<div class="mt-2">
    <p class="text-muted mb-3">@L["System.ModuleControlDesc"]</p>
    <div class="row row-cols-2 row-cols-md-3 row-cols-xl-4 g-2 mb-3">
        @foreach (var module in companyModules)
        {
            <div class="col">
                <div class="card h-100 @(module.IsEnabled ? "border-success" : "border-secondary")">
                    <div class="card-body p-2 d-flex flex-column gap-1">
                        <div class="d-flex justify-content-between align-items-start">
                            <strong class="small">@module.DisplayName</strong>
                            <span class="badge @(module.IsEnabled ? "bg-success" : "bg-secondary") ms-1 flex-shrink-0">
                                @(module.IsEnabled ? L["System.Enabled"].ToString() : L["System.Disabled"].ToString())
                            </span>
                        </div>
                        @if (!string.IsNullOrEmpty(module.Description))
                        {
                            <small class="text-muted">@module.Description</small>
                        }
                        <div class="form-check form-switch mt-auto mb-0">
                            <input class="form-check-input"
                                   type="checkbox"
                                   role="switch"
                                   id="module_@module.Id"
                                   checked="@module.IsEnabled"
                                   disabled="@(isModuleSaving || IsDisabled)"
                                   @onchange="@((e) => module.IsEnabled = (bool)(e.Value ?? true))" />
                            <label class="form-check-label small" for="module_@module.Id">@L["System.Toggle"]</label>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public bool IsDisabled { get; set; }

    private List<CompanyModule> companyModules = new();
    private bool isModuleSaving = false;

    protected override async Task OnInitializedAsync()
    {
        companyModules = await CompanyModuleService.GetAllAsync();
    }

    private async Task<string> GetCurrentUserAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            return authState.User.Identity?.Name ?? "system";
        }
        catch
        {
            return "system";
        }
    }

    public async Task SaveAsync()
    {
        try
        {
            isModuleSaving = true;
            StateHasChanged();

            var createdBy = await GetCurrentUserAsync();
            var result = await CompanyModuleService.UpdateModulesAsync(companyModules, createdBy);

            if (!result.IsSuccess)
            {
                await NotificationService.ShowErrorAsync($"{L["Message.SaveFailed"]}：{result.ErrorMessage}");
            }
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"{L["Message.SaveFailed"]}：{ex.Message}");
        }
        finally
        {
            isModuleSaving = false;
            StateHasChanged();
        }
    }
}
