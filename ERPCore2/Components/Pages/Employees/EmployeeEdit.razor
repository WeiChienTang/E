    private async Task ConfirmPasswordReset()
    {
        try
        {
            if (employee == null) return;

            Console.WriteLine($"[ConfirmPasswordReset] 開始重設密碼，員工ID={employee.Id}, Username={employee.Username}");

            // 驗證新密碼
            if (!ValidateNewPassword())
            {
                Console.WriteLine($"[ConfirmPasswordReset] 密碼驗證失敗");
                StateHasChanged();
                return;
            }

            Console.WriteLine($"[ConfirmPasswordReset] 密碼驗證通過，準備重設密碼");

            // 執行密碼重設
            var resetResult = await AuthenticationService.ResetPasswordAsync(employee.Id, newPassword);
            Console.WriteLine($"[ConfirmPasswordReset] AuthenticationService.ResetPasswordAsync 結果: IsSuccess={resetResult.IsSuccess}");
            
            if (resetResult.IsSuccess)
            {
                Console.WriteLine($"[ConfirmPasswordReset] 密碼重設成功");
                
                // 重設登入失敗次數和帳號鎖定狀態（但不更新到資料庫，避免覆蓋密碼）
                employee.FailedLoginAttempts = 0;
                employee.IsLocked = false;
                
                Console.WriteLine($"[ConfirmPasswordReset] 重設後狀態：FailedLoginAttempts={employee.FailedLoginAttempts}, IsLocked={employee.IsLocked}");
                
                // 重新載入員工資料以確保密碼已更新，並保持狀態重設
                Console.WriteLine($"[ConfirmPasswordReset] 重新載入員工資料");
                var updatedEmployee = await EmployeeService.GetByIdAsync(employee.Id);
                if (updatedEmployee != null)
                {
                    // 保持 UI 中的狀態重設，但使用資料庫中的最新資料（包含新密碼）
                    updatedEmployee.FailedLoginAttempts = 0;
                    updatedEmployee.IsLocked = false;
                    
                    // 更新員工資料以儲存狀態變更（此時員工對象已包含正確的密碼雜湊）
                    var statusUpdateResult = await EmployeeService.UpdateAsync(updatedEmployee);
                    if (statusUpdateResult.IsSuccess)
                    {
                        employee = updatedEmployee;
                        Console.WriteLine($"[ConfirmPasswordReset] 員工狀態更新成功：FailedLoginAttempts={employee.FailedLoginAttempts}, IsLocked={employee.IsLocked}");
                    }
                    else
                    {
                        Console.WriteLine($"[ConfirmPasswordReset] 員工狀態更新失敗：{statusUpdateResult.ErrorMessage}");
                        // 即使狀態更新失敗，密碼已經重設成功，所以仍使用更新後的員工資料
                        employee = updatedEmployee;
                    }
                }
                else
                {
                    Console.WriteLine($"[ConfirmPasswordReset] 重新載入失敗：找不到員工資料");
                }
                
                // 關閉對話框
                ClosePasswordResetDialog();
                
                await NotificationService.ShowSuccessAsync("密碼重設成功！請使用新密碼登入。");
                StateHasChanged();
            }
            else
            {
                Console.WriteLine($"[ConfirmPasswordReset] 密碼重設失敗：{resetResult.ErrorMessage}");
                await NotificationService.ShowErrorAsync($"重設密碼失敗：{resetResult.ErrorMessage}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[ConfirmPasswordReset] 發生異常：{ex.Message}");
            Console.WriteLine($"[ConfirmPasswordReset] 異常堆疊：{ex.StackTrace}");
            
            await ErrorHandlingHelper.HandlePageErrorAsync(
                ex, 
                nameof(ConfirmPasswordReset), 
                GetType(),
                additionalData: new { 
                    PageName = "EmployeeEdit",
                    Action = "ConfirmPasswordReset",
                    EmployeeId = employee?.Id,
                    Username = employee?.Username
                });
        }
    }

    private bool ValidateNewPassword()
    {
        newPasswordValidationMessage = string.Empty;
        confirmNewPasswordValidationMessage = string.Empty;

        if (string.IsNullOrWhiteSpace(newPassword))
        {
            newPasswordValidationMessage = "請輸入新密碼";
            return false;
        }

        if (newPassword.Length < 4)
        {
            newPasswordValidationMessage = "密碼長度至少需要 4 個字元";
            return false;
        }

        if (string.IsNullOrWhiteSpace(confirmNewPassword))
        {
            confirmNewPasswordValidationMessage = "請確認新密碼";
            return false;
        }

        if (newPassword != confirmNewPassword)
        {
            confirmNewPasswordValidationMessage = "密碼確認不一致";
            return false;
        }
        
        return true;
    }

