@* 可重用的身分編輯組件 - 可在任何頁面中嵌入 *@
@inject IRoleService RoleService
@inject INotificationService NotificationService

<GenericEditModalComponent TEntity="Role" 
                          TService="IRoleService"
                          @ref="editModalComponent"
                          IsVisible="@IsVisible"
                          IsVisibleChanged="@IsVisibleChanged"
                          Id="@RoleId"
                          Service="@RoleService"
                          EntityName="身分"
                          EntityNamePlural="身分"
                          ModalTitle="@(RoleId.HasValue ? "編輯身分" : "新增身分")"
                          Size="GenericEditModalComponent<Role, IRoleService>.ModalSize.Desktop"
                          UseGenericForm="true"
                          FormFields="@GetFormFields()"
                          FormSections="@formSections"
                          DataLoader="@LoadRoleData"
                          AdditionalDataLoader="@LoadAdditionalDataAsync"
                          UseGenericSave="true"
                          SaveSuccessMessage="@(RoleId.HasValue ? "身分更新成功" : "身分新增成功")"
                          SaveFailureMessage="身分儲存失敗"
                          RequiredPermission="Role.Read"
                          OnSaveSuccess="@HandleSaveSuccess"
                          OnCancel="@HandleCancel" />

@code {
    // ===== 必要參數 =====
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public int? RoleId { get; set; }
    [Parameter] public Dictionary<string, object?>? PrefilledValues { get; set; }
    [Parameter] public EventCallback<Role> OnRoleSaved { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    // ===== 內部狀態 =====
    private GenericEditModalComponent<Role, IRoleService>? editModalComponent;
    private List<FormFieldDefinition> formFields = new();
    private Dictionary<string, string> formSections = new();

    // ===== 生命週期 =====
    protected override async Task OnParametersSetAsync()
    {
        if (IsVisible)
        {
            await LoadAdditionalDataAsync();
            InitializeFormFields();
        }
    }

    // ===== 事件處理 =====
    private async Task HandleSaveSuccess()
    {
        try
        {
            // 如果父組件需要知道身分已儲存
            if (OnRoleSaved.HasDelegate && editModalComponent?.Entity != null)
            {
                await OnRoleSaved.InvokeAsync(editModalComponent.Entity);
            }

            // 關閉 Modal
            await CloseModal();
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"處理儲存成功事件時發生錯誤：{ex.Message}");
        }
    }

    private async Task HandleCancel()
    {
        try
        {
            if (OnCancel.HasDelegate)
            {
                await OnCancel.InvokeAsync();
            }

            await CloseModal();
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"處理取消事件時發生錯誤：{ex.Message}");
        }
    }

    private async Task CloseModal()
    {
        if (IsVisibleChanged.HasDelegate)
        {
            await IsVisibleChanged.InvokeAsync(false);
        }
    }

    // ===== 資料載入 =====
    private async Task LoadAdditionalDataAsync()
    {
        try
        {
            // 身分編輯通常不需要額外載入其他資料
            // 如果未來需要載入權限清單等資料，可以在這裡實作
            await Task.CompletedTask;
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"載入額外資料時發生錯誤：{ex.Message}");
        }
    }

    private async Task<Role?> LoadRoleData()
    {
        try
        {
            if (!RoleId.HasValue)
            {
                // 新增模式 - 建立新的身分實體並設定預設值
                var newRole = new Role
                {
                    Code = await EntityCodeGenerationHelper.GenerateForEntity<Role, IRoleService>(RoleService, "ROLE"),
                    Status = EntityStatus.Active
                };

                // 應用預填值
                PrefilledValueHelper.ApplyPrefilledValues(newRole, PrefilledValues);

                return newRole;
            }

            // 編輯模式 - 載入現有身分資料
            return await RoleService.GetByIdAsync(RoleId.Value);
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"載入身分資料時發生錯誤：{ex.Message}");
            return null;
        }
    }

    // ===== 表單配置 =====
    private void InitializeFormFields()
    {
        try
        {
            formFields = new List<FormFieldDefinition>
            {
                new()
                {
                    PropertyName = nameof(Role.Code),
                    Label = "身分代碼",
                    FieldType = FormFieldType.Text,
                    Placeholder = "請輸入身分代碼",
                    IsRequired = true,
                    MaxLength = 20,
                    HelpText = "身分的唯一代碼，用於區別不同的系統權限群組，新增時系統會自動產生，也可手動修改，最多20個字元"
                },
                new()
                {
                    PropertyName = nameof(Role.Name),
                    Label = "身分名稱",
                    FieldType = FormFieldType.Text,
                    Placeholder = "請輸入身分名稱",
                    IsRequired = true,
                    MaxLength = 50,
                    HelpText = "身分的唯一名稱，用於區別不同的系統權限群組，最多50個字元"
                },

                FormFieldConfigurationHelper.CreateRemarksField<Role>()
            };

            // 設定表單區段
            formSections = new Dictionary<string, string>
            {
                { nameof(Role.Code), "基本資訊" },
                { nameof(Role.Name), "基本資訊" },
                { nameof(Role.Remarks), "額外資訊" }
            };
        }
        catch (Exception ex)
        {
            _ = ErrorHandlingHelper.HandlePageErrorAsync(
                ex,
                nameof(InitializeFormFields),
                GetType(),
                additionalData: new { RoleId }
            );
        }
    }

    private List<FormFieldDefinition> GetFormFields()
    {
        return formFields;
    }
}
