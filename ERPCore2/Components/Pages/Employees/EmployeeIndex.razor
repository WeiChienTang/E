@page "/employees"
@inject IEmployeeService EmployeeService
@inject IDepartmentService DepartmentService
@inject IRoleService RoleService
@inject IEmployeePositionService EmployeePositionService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject INavigationPermissionService NavigationPermissionService
@rendermode InteractiveServer
@inject INotificationService NotificationService
@inject IStringLocalizer<SharedResource> L

<GenericIndexPageComponent TEntity="Employee" 
                        TService="IEmployeeService"
                        Service="@EmployeeService"
                        EntityBasePath="/employees"                          
                        PageTitle="員工"
                        PageSubtitle="管理員工資料與權限設定"
                        BreadcrumbItems="@breadcrumbItems"
                        FilterDefinitions="@filterDefinitions"
                        ColumnDefinitions="@columnDefinitions"
                        DataLoader="@LoadEmployeesAsync"
                        FilterApplier="@ApplyEmployeeFilters"
                        EntityName="@L["Entity.Employee"]"
                        GetEntityDisplayName="@(employee => employee.Name?.Trim() ?? "")"
                        RequiredPermission="Employee.Read"
                        RequiredModule="Employees"
                        OnAddClick="@modalHandler.ShowAddModalAsync"
                        OnRowClick="@modalHandler.ShowEditModalAsync"
                        @ref="indexComponent" />

@* 員工編輯 Modal *@
<EmployeeEditModalComponent IsVisible="@showEditModal"
                           IsVisibleChanged="@((bool visible) => showEditModal = visible)"
                           EmployeeId="@editingEmployeeId"
                           OnEmployeeSaved="@modalHandler.OnEntitySavedAsync"
                           OnCancel="@modalHandler.OnModalCancelAsync" />

@* 帳號管理 Modal *@
@if (hasAccountPermission)
{
    <EmployeeAccountModalComponent IsVisible="@showAccountModal"
                                  IsVisibleChanged="@((bool visible) => showAccountModal = visible)"
                                  EmployeeId="@accountManagementEmployeeId"
                                  OnSaved="@HandleAccountSaved"
                                  OnCancel="@(() => showAccountModal = false)" />
}

@code {
    // 組件參考
    private GenericIndexPageComponent<Employee, IEmployeeService> indexComponent = default!;
    
    // Modal 相關狀態
    private bool showEditModal = false;
    private int? editingEmployeeId = null;
    private bool showAccountModal = false;
    private int? accountManagementEmployeeId = null;
    private bool hasAccountPermission = false;
    
    // Modal 處理器
    private ModalHandler<Employee, GenericIndexPageComponent<Employee, IEmployeeService>> modalHandler = default!;
    
    // 選項清單
    private List<Department> departments = new();
    private List<Role> roles = new();
    private List<EmployeePosition> employeePositions = new();
    
    // 欄位配置
    private EmployeeFieldConfiguration fieldConfiguration = default!;
    
    // 配置相關
    private List<SearchFilterDefinition> filterDefinitions = new();
    private List<TableColumnDefinition> columnDefinitions = new();
    private List<BreadcrumbItem> breadcrumbItems = new();
    
    // 當前使用者是否為 SuperAdmin
    private bool isCurrentUserSuperAdmin = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // 先初始化 Modal 處理器（必須在任何異步操作之前，避免渲染時為 null）
            modalHandler = ModalHelper.CreateModalHandler<Employee, GenericIndexPageComponent<Employee, IEmployeeService>>(
                id => editingEmployeeId = id,
                visible => showEditModal = visible,
                () => indexComponent,
                StateHasChanged,
                GetType());
            
            // 檢查當前使用者是否為 SuperAdmin
            await CheckCurrentUserSuperAdminAsync();
            
            await InitializeBreadcrumbsAsync();
            
            // 載入相關資料
            await LoadDepartmentsAsync();
            await LoadRolesAsync();
            await LoadEmployeePositionsAsync();
            
            // 建立欄位配置（在載入相關資料後，並傳遞 NotificationService）
            fieldConfiguration = new EmployeeFieldConfiguration(departments, roles, employeePositions, NotificationService);

            // 使用欄位配置建立篩選器和表格欄位
            filterDefinitions = fieldConfiguration.BuildFilters();
            columnDefinitions = fieldConfiguration.BuildColumns();

            // 檢查是否有帳號管理權限，有則加入帳號管理按鈕欄位
            hasAccountPermission = await NavigationPermissionService.CanAccessAsync("EmployeeEdit_Account_Password.Read");
            if (hasAccountPermission)
            {
                columnDefinitions.Add(TableColumnDefinition.Template(
                    "帳號管理",
                    entity => builder =>
                    {
                        var emp = (Employee)entity;
                        builder.OpenComponent<GenericButtonComponent>(0);
                        builder.AddComponentParameter(1, "Text", "帳號管理");
                        builder.AddComponentParameter(2, "Variant", ButtonVariant.DarkBlue);
                        builder.AddComponentParameter(3, "Size", ButtonSize.Small);
                        builder.AddComponentParameter(5, "StopPropagation", true);
                        builder.AddComponentParameter(6, "OnClick", EventCallback.Factory.Create(this, () =>
                        {
                            accountManagementEmployeeId = emp.Id;
                            showAccountModal = true;
                            StateHasChanged();
                        }));
                        builder.CloseComponent();
                    },
                    "text-center"
                ));
            }
        }
        catch (Exception ex)
        {
            await ErrorHandlingHelper.HandlePageErrorAsync(ex, nameof(OnInitializedAsync), GetType(), additionalData: "初始化員工頁面失敗");
            await NotificationService.ShowErrorAsync("初始化員工頁面失敗");
        }
    }

    private async Task InitializeBreadcrumbsAsync() => breadcrumbItems = await BreadcrumbHelper.CreateSimpleAsync("員工", NotificationService, GetType());

    /// <summary>
    /// 檢查當前使用者是否為 SuperAdmin
    /// </summary>
    private async Task CheckCurrentUserSuperAdminAsync()
    {
        try
        {
            var currentEmployeeId = await CurrentUserHelper.GetCurrentEmployeeIdAsync(AuthenticationStateProvider);
            if (currentEmployeeId.HasValue)
            {
                var currentEmployee = await EmployeeService.GetByIdAsync(currentEmployeeId.Value);
                isCurrentUserSuperAdmin = currentEmployee?.IsSuperAdmin == true;
            }
        }
        catch
        {
            isCurrentUserSuperAdmin = false;
        }
    }

    /// <summary>
    /// 載入員工資料（根據權限過濾 SuperAdmin）
    /// </summary>
    private async Task<List<Employee>> LoadEmployeesAsync()
    {
        var employees = await DataLoaderHelper.LoadAsync(() => EmployeeService.GetAllAsync(), "員工", NotificationService, GetType());
        
        // 如果當前使用者不是 SuperAdmin，過濾掉 SuperAdmin 帳號
        if (!isCurrentUserSuperAdmin)
        {
            employees = employees.Where(e => !e.IsSuperAdmin).ToList();
        }
        
        return employees;
    }

    // 載入部門資料
    private async Task LoadDepartmentsAsync() => departments = await DataLoaderHelper.LoadAsync(() => DepartmentService.GetAllAsync(), "部門", NotificationService, GetType());

    // 載入權限組資料
    private async Task LoadRolesAsync() => roles = await DataLoaderHelper.LoadAsync(() => RoleService.GetAllAsync(), "權限組", NotificationService, GetType());

    // 載入員工職位資料
    private async Task LoadEmployeePositionsAsync() => employeePositions = await DataLoaderHelper.LoadAsync(() => EmployeePositionService.GetAllAsync(), "員工職位", NotificationService, GetType());

    private async Task HandleAccountSaved()
    {
        showAccountModal = false;
        if (indexComponent != null)
            await indexComponent.Refresh();
    }

    // 篩選方法 - 現在已由 FilterHelper 處理所有錯誤情況
    private IQueryable<Employee> ApplyEmployeeFilters(SearchFilterModel searchModel, IQueryable<Employee> query)
    {
        // 確保 fieldConfiguration 已初始化（避免與 GenericIndexPageComponent 初始化的競爭條件）
        if (fieldConfiguration == null)
        {
            // 如果配置未初始化，回傳基本排序的查詢
            return query.OrderBy(e => e.Name);
        }

        return fieldConfiguration.ApplyFilters(searchModel, query, nameof(ApplyEmployeeFilters), GetType());
    }
}
