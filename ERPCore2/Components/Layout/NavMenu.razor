@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@using ERPCore2.Components.Shared

@code {
    protected override void OnInitialized()
    {
        Console.WriteLine("🚀 NavMenu 組件初始化開始");
        base.OnInitialized();
        Console.WriteLine("✅ NavMenu 組件初始化完成");
    }
}

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <a class="navbar-brand" href="">美莊磚業</a>
        <AuthorizeView>
            <Authorized>
                <div class="d-flex align-items-center">
                    <span class="text-white me-3">
                        <i class="bi bi-person-fill me-1"></i>
                        歡迎，@context.User.Identity?.Name
                    </span>
                    <a href="/auth/logout" class="btn btn-sm btn-outline-light">
                        <i class="bi bi-box-arrow-right me-1"></i>
                        登出
                    </a>
                </div>
            </Authorized>
            <NotAuthorized>
                <a href="/auth/login" class="btn btn-sm btn-outline-light">
                    <i class="bi bi-box-arrow-in-right me-1"></i>
                    登入
                </a>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> 首頁
            </NavLink>
        </div>
          <!-- 只有登入用戶才能看到的菜單 -->
        <AuthorizeView>
            <Authorized>
                @{
                    Console.WriteLine("🔍 NavMenu AuthorizeView - 使用者已認證");
                    Console.WriteLine($"  - IsAuthenticated: {context.User.Identity?.IsAuthenticated}");
                    Console.WriteLine($"  - Name: {context.User.Identity?.Name}");
                    Console.WriteLine($"  - Claims 數量: {context.User.Claims?.Count() ?? 0}");
                    
                    foreach (var claim in context.User.Claims ?? Enumerable.Empty<System.Security.Claims.Claim>())
                    {
                        Console.WriteLine($"    - {claim.Type}: {claim.Value}");
                    }
                }
                  <!-- 客戶管理 - 需要 Customer.View 權限 -->
                <PermissionCheck Permission="Customer.View">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="customers">
                            <span class="bi bi-people-fill" aria-hidden="true"></span> 客戶管理
                        </NavLink>
                    </div>
                </PermissionCheck>

                <!-- 廠商管理 - 需要 Supplier.View 權限 -->
                <PermissionCheck Permission="Supplier.View">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="suppliers">
                            <span class="bi bi-building-gear" aria-hidden="true"></span> 廠商管理
                        </NavLink>
                    </div>
                </PermissionCheck>
            </Authorized>
        </AuthorizeView>
        
        <!-- 開發用元件展示 - 只在開發環境顯示 -->
        <div class="nav-item px-3">
            <div class="nav-link dropdown" onclick="toggleDropdown(event)">
                <span class="bi bi-puzzle-fill" aria-hidden="true"></span> 元件展示
                <span class="bi bi-chevron-down ms-auto dropdown-arrow"></span>
            </div>
            <div class="dropdown-menu">
                <NavLink class="dropdown-item" href="sharedcomponentsdemo/actions">
                    <span class="bi bi-lightning-fill" aria-hidden="true"></span> Actions
                </NavLink>
                <NavLink class="dropdown-item" href="sharedcomponentsdemo/alerts">
                    <span class="bi bi-exclamation-triangle-fill" aria-hidden="true"></span> Alerts
                </NavLink>
                <NavLink class="dropdown-item" href="sharedcomponentsdemo/badges">
                    <span class="bi bi-award-fill" aria-hidden="true"></span> Badges
                </NavLink>
                <NavLink class="dropdown-item" href="sharedcomponentsdemo/buttons">
                    <span class="bi bi-hand-index-fill" aria-hidden="true"></span> Buttons
                </NavLink>                <NavLink class="dropdown-item" href="sharedcomponentsdemo/details/new">
                    <span class="bi bi-card-text" aria-hidden="true"></span> Details
                </NavLink>
                <NavLink class="dropdown-item" href="demo/forms">
                    <span class="bi bi-ui-checks" aria-hidden="true"></span> FormsDemo
                </NavLink>
                <NavLink class="dropdown-item" href="demo/forms/generic">
                    <span class="bi bi-ui-checks" aria-hidden="true"></span> GenericFormDemo
                </NavLink>
                <NavLink class="dropdown-item" href="demo/forms/search-filter">
                    <span class="bi bi-ui-checks" aria-hidden="true"></span> GenericSearchFilterDemo
                </NavLink>
                <NavLink class="dropdown-item" href="demo/headers/generic">
                    <span class="bi bi-header" aria-hidden="true"></span> Headers
                </NavLink>
                <NavLink class="dropdown-item" href="sharedcomponentsdemo/loading">
                    <span class="bi bi-arrow-repeat" aria-hidden="true"></span> Loading
                </NavLink>        
                <NavLink class="dropdown-item" href="demo/tables/generic">
                    <span class="bi bi-table" aria-hidden="true"></span> GenericTableDemoTables
                </NavLink>
                <NavLink class="dropdown-item" href="demo/tables">
                    <span class="bi bi-table" aria-hidden="true"></span> IndexTables
                </NavLink>
            </div>
        </div>
    </nav>
</div>

<script>
    function toggleDropdown(event) {
        event.preventDefault();
        event.stopPropagation();
        const dropdown = event.currentTarget.parentElement;
        dropdown.classList.toggle('show');
    }
    
    document.addEventListener('click', function(event) {
        const dropdowns = document.querySelectorAll('.nav-item.show');
        dropdowns.forEach(dropdown => {
            if (!dropdown.contains(event.target)) {
                dropdown.classList.remove('show');
            }
        });
    });
</script>

