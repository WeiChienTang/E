{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=.\\SQLEXPRESS;Database=ERPCore2_Production;Trusted_Connection=true;TrustServerCertificate=true;MultipleActiveResultSets=true;",
    "BackupConnection": "Server=localhost;Database=ERPCore2_Production;Integrated Security=true;TrustServerCertificate=true;"
  },
  "ApplicationSettings": {
    "CompanyName": "客戶公司名稱",
    "SystemTitle": "ERP核心系統",
    "Version": "2.0.0",
    "MaintenanceMode": false,
    "AllowRegistration": false,
    "SessionTimeout": 480,
    "MaxLoginAttempts": 5,
    "LockoutDuration": 15
  },
  "SecuritySettings": {
    "RequirePasswordChange": true,
    "PasswordMinLength": 8,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "RequireDigit": true,
    "RequireSpecialChar": false,
    "PasswordExpiryDays": 90
  },
  "DatabaseSettings": {
    "AutoMigrate": true,
    "BackupSchedule": "Daily",
    "BackupRetentionDays": 30,
    "ConnectionTimeout": 30,
    "CommandTimeout": 120
  },
  "AllowedHosts": "*",
  "Urls": "http://0.0.0.0:5000;http://localhost:5000"
